{%- comment -%}
  Origin – Size guide modal
  Controlled by section settings and small JS toggles.
{%- endcomment -%}

<div class="origin-size-guide-modal" data-origin-size-guide-modal aria-hidden="true">
  <div class="origin-size-guide-modal__overlay" data-origin-size-guide-close></div>
  <div class="origin-size-guide-modal__dialog" role="dialog" aria-modal="true" aria-label="{{ title | escape }}">
    <button type="button" class="origin-size-guide-modal__close" data-origin-size-guide-close aria-label="Close size guide">
      ×
    </button>
    {% if title != blank %}
      <h2 class="origin-size-guide-modal__title">{{ title }}</h2>
    {% endif %}
    <div class="origin-size-guide-modal__content">
      {{ content }}
    </div>
  </div>
</div>
