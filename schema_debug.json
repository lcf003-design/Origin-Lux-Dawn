{% schema %}
{
  "name": "GG Bouncing Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Bouncing Logo"
    },
    {
      "type": "range",
      "id": "logo_width_desktop",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Logo Width (Desktop)",
      "default": 30
    },
    {
      "type": "range",
      "id": "logo_width_mobile",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Logo Width (Mobile)",
      "default": 50
    },
    {
      "type": "range",
      "id": "speed",
      "min": 0.5,
      "max": 15,
      "step": 0.5,
      "label": "Bounce Speed",
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "enable_glass",
      "label": "Enable Soft Shadow/Glass Look",
      "default": true
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Experimental Hero"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Background & Spacing"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "transparent"
    },
    {
      "type": "select",
      "id": "hero_height",
      "label": "Hero Height Mode",
      "options": [
        { "value": "h-screen", "label": "Full Screen (Tailwind)" },
        { "value": "100vh", "label": "100vh" },
        { "value": "80vh", "label": "80vh" },
        { "value": "adapt", "label": "Adapt to Content" }
      ],
      "default": "adapt"
    },
    {
      "type": "range",
      "id": "min_height_desktop",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Min Height (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "min_height_mobile",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Min Height (Mobile)",
      "default": 60
    },
    {
      "type": "header",
      "content": "Section Padding (Offset)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Padding Top (Desktop)",
      "default": 140
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Padding Bottom (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Button"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "GG Bouncing Hero (Ping-Pong)"
    }
  ]
}
{% endschema %}
