{% doc %}
  @prompt
    Generate a header please name it header test
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-{{ ai_gen_id }} {
    position: sticky;
    top: 0;
    z-index: 1000;
    background-color: {{ block.settings.background_color }};
    border-bottom: {{ block.settings.border_thickness }}px solid {{ block.settings.border_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
  }

  .ai-header-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.padding_horizontal }}px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
  }

  .ai-header-logo-{{ ai_gen_id }} {
    flex-shrink: 0;
  }

  .ai-header-logo-link-{{ ai_gen_id }} {
    display: block;
    line-height: 0;
  }

  .ai-header-logo-image-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
    display: block;
  }

  .ai-header-logo-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.logo_text_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    text-decoration: none;
    display: block;
  }

  .ai-header-nav-{{ ai_gen_id }} {
    flex-grow: 1;
    display: flex;
    justify-content: center;
  }

  .ai-header-menu-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.menu_spacing }}px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .ai-header-menu-item-{{ ai_gen_id }} {
    margin: 0;
  }

  .ai-header-menu-link-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    text-decoration: none;
    font-size: {{ block.settings.menu_font_size }}px;
    padding: 8px 12px;
    display: block;
    transition: color 0.2s ease;
  }

  .ai-header-menu-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.text_hover_color }};
  }

  .ai-header-actions-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_spacing }}px;
    flex-shrink: 0;
  }

  .ai-header-icon-link-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    transition: color 0.2s ease;
  }

  .ai-header-icon-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.text_hover_color }};
  }

  .ai-header-icon-link-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-header-mobile-toggle-{{ ai_gen_id }} {
    display: none;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    color: {{ block.settings.text_color }};
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
  }

  .ai-header-mobile-toggle-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  @media screen and (max-width: 989px) {
    .ai-header-nav-{{ ai_gen_id }} {
      display: none;
    }

    .ai-header-mobile-toggle-{{ ai_gen_id }} {
      display: block;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-header-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-header-logo-image-{{ ai_gen_id }} {
      max-width: {{ block.settings.logo_width | times: 0.8 }}px;
    }

    .ai-header-logo-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.logo_text_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<header class="ai-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-header-container-{{ ai_gen_id }}">
    <div class="ai-header-logo-{{ ai_gen_id }}">
      <a href="/" class="ai-header-logo-link-{{ ai_gen_id }}">
        {% if block.settings.logo %}
          <img
            src="{{ block.settings.logo | image_url: width: 400 }}"
            alt="{{ shop.name }}"
            class="ai-header-logo-image-{{ ai_gen_id }}"
            width="{{ block.settings.logo_width }}"
            height="auto"
            loading="eager"
          >
        {% else %}
          <span class="ai-header-logo-text-{{ ai_gen_id }}">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    {% if block.settings.menu != blank %}
      <nav class="ai-header-nav-{{ ai_gen_id }}">
        <ul class="ai-header-menu-{{ ai_gen_id }}">
          {% for link in linklists[block.settings.menu].links %}
            <li class="ai-header-menu-item-{{ ai_gen_id }}">
              <a href="{{ link.url }}" class="ai-header-menu-link-{{ ai_gen_id }}">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    {% endif %}

    <div class="ai-header-actions-{{ ai_gen_id }}">
      {% if block.settings.show_search %}
        <a href="/search" class="ai-header-icon-link-{{ ai_gen_id }}" aria-label="Search">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </a>
      {% endif %}

      {% if block.settings.show_account %}
        <a href="/account" class="ai-header-icon-link-{{ ai_gen_id }}" aria-label="Account">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </a>
      {% endif %}

      {% if block.settings.show_cart %}
        <a href="/cart" class="ai-header-icon-link-{{ ai_gen_id }}" aria-label="Cart">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
        </a>
      {% endif %}

      <button class="ai-header-mobile-toggle-{{ ai_gen_id }}" aria-label="Menu">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header test",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_width",
