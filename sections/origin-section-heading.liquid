{% schema %}
{
  "name": "Origin Section Heading",
  "class": "section-origin-heading",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "GIFTS CURATED BY THE HOUSE"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Origin Section Heading"
    }
  ]
}
{% endschema %}

<div class="origin-section-heading-wrapper">
  <h2 class="section-title">{{ section.settings.heading }}</h2>
</div>

<style>
  .origin-section-heading-wrapper {
    background: #ffffff;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: 2rem; /* Little padding for smaller screens */
    padding-right: 2rem;
    text-align: {{ section.settings.text_alignment }};
  }

  .section-title {
    font-family: var(--font-heading-family);
    font-size: 1.8rem;
    font-weight: 500; /* Medium weight, not too bold */
    letter-spacing: 0.1em; /* Spaced out for luxury */
    text-transform: uppercase;
    color: {{ section.settings.text_color }};
    max-width: 1200px; /* Constrain width */
    margin-left: auto;
    margin-right: auto;
  }

  @media screen and (max-width: 768px) {
    .section-title {
      font-size: 1.5rem;
    }
  }
</style>