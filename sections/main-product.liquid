{{ 'section-main-product.css' | asset_url | stylesheet_tag }}
{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-rating.css' | asset_url | stylesheet_tag }}
{{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}

{% unless product.has_only_default_variant %}
  {{ 'component-product-variant-picker.css' | asset_url | stylesheet_tag }}
  {{ 'component-swatch-input.css' | asset_url | stylesheet_tag }}
  {{ 'component-swatch.css' | asset_url | stylesheet_tag }}
{% endunless %}

<script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<product-info
  id="MainProduct-{{ section.id }}"
  class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}"
  data-section="{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-update-url="true"
  data-url="{{ product.url }}"
>
  
  <div class="page-width">
    
    <!-- 1. ADDED: BREADCRUMBS -->
    <nav class="product-breadcrumbs" role="navigation" aria-label="breadcrumbs">
      <a href="/" title="Home">Home</a>
      {% if collection %}
        <span class="divider">/</span>
        <a href="{{ collection.url }}">{{ collection.title }}</a>
      {% endif %}
      <span class="divider">/</span>
      <span class="current-page">{{ product.title }}</span>
    </nav>

    <div class="product-grid-container">
      
      <!-- 2. MODIFIED: VERTICAL IMAGE STACK (Replaces Slider) -->
      <div class="product-media-column">
        {% if product.media.size > 0 %}
          {% for media in product.media %}
            <div class="product-media-item" data-media-id="{{ section.id }}-{{ media.id }}">
              <img 
                src="{{ media | image_url: width: 1500 }}" 
                alt="{{ media.alt | escape }}"
                width="1500"
                height="{{ 1500 | divided_by: media.aspect_ratio | ceil }}"
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                class="gucci-media-image"
              >
            </div>
          {% endfor %}
        {% else %}
           <div class="product-media-placeholder">
             {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
           </div>
        {% endif %}
      </div>

      <!-- 3. MODIFIED: STICKY INFO COLUMN -->
      <div class="product-info-column">
        <div id="ProductInfo-{{ section.id }}" class="product__info-container product__column-sticky">
          
          {%- assign product_form_id = 'product-form-' | append: section.id -%}

          <!-- PRESERVED: ALL ORIGINAL BLOCKS -->
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              
              {%- when '@app' -%}
                {% render block %}
              
              {%- when 'text' -%}
                <p class="product__text inline-richtext {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                  {{- block.settings.text -}}
                </p>
              
              {%- when 'title' -%}
                <div class="product__title" {{ block.shopify_attributes }}>
                  <h1 class="gucci-title">{{ product.title | escape }}</h1>
                </div>
              
              {%- when 'price' -%}
                <div id="price-{{ section.id }}" role="status" {{ block.shopify_attributes }} class="gucci-price-wrapper">
                  {%- render 'price', product: product, use_variant: true, show_badges: true -%}
                </div>
                {%- if cart.taxes_included or cart.duties_included or shop.shipping_policy.body != blank -%}
                  <div class="product__tax caption rte">
                    {%- if cart.duties_included and cart.taxes_included -%}
                      {{ 'products.product.duties_and_taxes_included' | t }}
                    {%- elsif cart.taxes_included -%}
                      {{ 'products.product.taxes_included' | t }}
                    {%- elsif cart.duties_included -%}
                      {{ 'products.product.duties_included' | t }}
                    {%- endif -%}
                    {%- if shop.shipping_policy.body != blank -%}
                      {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                    {%- endif -%}
                  </div>
                {%- endif -%}

              {%- when 'inventory' -%}
                <p class="product__inventory" {{ block.shopify_attributes }} id="Inventory-{{ section.id }}" role="status">
                  {%- if product.selected_or_first_available_variant.inventory_management == 'shopify' -%}
                    {%- if product.selected_or_first_available_variant.inventory_quantity > 0 -%}
                       {%- if product.selected_or_first_available_variant.inventory_quantity <= block.settings.inventory_threshold -%}
                        <span style="color: #eb4d4b">Low stock: {{ product.selected_or_first_available_variant.inventory_quantity }} left</span>
                       {%- else -%}
                        <span style="color: #444">In stock</span>
                       {%- endif -%}
                    {%- endif -%}
                  {%- endif -%}
                </p>

              {%- when 'sku' -%}
                <p class="product__sku" {{ block.shopify_attributes }}>
                  <span class="visually-hidden">{{ 'products.product.sku' | t }}:</span>
                  {{- product.selected_or_first_available_variant.sku -}}
                </p>

              {%- when 'description' -%}
                {%- if product.description != blank -%}
                  <div class="product__description rte quick-add-hidden" {{ block.shopify_attributes }}>
                    {{ product.description }}
                  </div>
                {%- endif -%}

              {%- when 'quantity_selector' -%}
                <div class="product-form__input product-form__quantity" {{ block.shopify_attributes }}>
                  <label class="form__label" for="Quantity-{{ section.id }}">Quantity</label>
                  <quantity-input class="quantity">
                    <button class="quantity__button" name="minus" type="button">-</button>
                    <input class="quantity__input" type="number" name="quantity" id="Quantity-{{ section.id }}" min="1" value="1" form="{{ product_form_id }}">
                    <button class="quantity__button" name="plus" type="button">+</button>
                  </quantity-input>
                </div>

              {%- when 'variant_picker' -%}
                {% render 'product-variant-picker', product: product, block: block, product_form_id: product_form_id %}
              
              {%- when 'buy_buttons' -%}
                {%- render 'buy-buttons', block: block, product: product, product_form_id: product_form_id, section_id: section.id, show_pickup_availability: true -%}
              
              {%- when 'rating' -%}
                {%- if product.metafields.reviews.rating.value != blank -%}
                  <div class="rating-wrapper">
                     <p class="rating-text">{{ product.metafields.reviews.rating.value }} stars</p>
                  </div>
                {%- endif -%}

              {%- when 'collapsible_tab' -%}
                <div class="product__accordion accordion quick-add-hidden" {{ block.shopify_attributes }}>
                  <details id="Details-{{ block.id }}-{{ section.id }}">
                    <summary>
                      <div class="summary__title">
                        {% render 'icon-accordion', icon: block.settings.icon %}
                        <h2 class="h4 accordion__title inline-richtext">
                          {{ block.settings.heading | default: block.settings.page.title | escape }}
                        </h2>
                      </div>
                      <span class="icon-plus">+</span>
                    </summary>
                    <div class="accordion__content rte" id="ProductAccordion-{{ block.id }}-{{ section.id }}">
                      {{ block.settings.content }}
                      {{ block.settings.page.content }}
                    </div>
                  </details>
                </div>

              {%- when 'popup' -%}
                <modal-opener class="product-popup-modal__opener quick-add-hidden" data-modal="#PopupModal-{{ block.id }}" {{ block.shopify_attributes }}>
                  <button id="ProductPopup-{{ block.id }}" class="product-popup-modal__button link" type="button" aria-haspopup="dialog">
                    {{ block.settings.text | default: block.settings.page.title | escape }}
                  </button>
                </modal-opener>

              {%- when 'share' -%}
                {% render 'share-button', block: block, share_link: product.url %}

            {%- endcase -%}
          {%- endfor -%}
          
        </div>
      </div>

    </div>
  </div>
  
  <!-- PRESERVED: POPUP MODALS LOGIC -->
  {% assign popups = section.blocks | where: 'type', 'popup' %}
  {%- for block in popups -%}
    <modal-dialog id="PopupModal-{{ block.id }}" class="product-popup-modal" {{ block.shopify_attributes }}>
      <div role="dialog" aria-label="{{ block.settings.text }}" aria-modal="true" class="product-popup-modal__content" tabindex="-1">
        <button id="ModalClose-{{ block.id }}" type="button" class="product-popup-modal__toggle" aria-label="{{ 'accessibility.close' | t }}">Ã—</button>
        <div class="product-popup-modal__content-info">
          <h1 class="h2">{{ block.settings.page.title | escape }}</h1>
          {{ block.settings.page.content }}
        </div>
      </div>
    </modal-dialog>
  {%- endfor -%}

</product-info>

<style>
  /* --- GUCCI LAYOUT CSS OVERRIDES --- */
  
  .product-grid-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-top: 2rem;
    margin-bottom: 4rem;
  }

  /* Desktop Layout: 60% Images, 40% Sticky Info */
  @media screen and (min-width: 990px) {
    .product-grid-container {
      grid-template-columns: 1.5fr 1fr;
      gap: 4rem;
      align-items: start;
    }
    
    /* This is the Magic "Sticky" Code */
    .product-info-column {
      position: -webkit-sticky;
      position: sticky;
      top: 120px; /* Adjust based on your header height */
      height: fit-content;
    }
  }

  /* Images - Vertical Stack */
  .product-media-column {
    display: flex;
    flex-direction: column;
    gap: 4px; /* Minimal gap between stacked images */
  }
  .gucci-media-image {
    width: 100%;
    height: auto;
    display: block;
    background-color: #f5f5f5;
  }

  /* Breadcrumbs */
  .product-breadcrumbs {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #666;
    margin-bottom: 2rem;
    margin-top: 1rem;
  }
  .product-breadcrumbs a { text-decoration: none; color: inherit; }
  .product-breadcrumbs .divider { margin: 0 8px; }

  /* Typography & Buttons */
  .gucci-title {
    font-family: var(--font-heading-family);
    font-size: 2.2rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 400;
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  .product-form__submit {
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 1.5rem;
    font-size: 0.9rem;
  }

  /* Accordions */
  .accordion summary {
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #e5e5e5;
    padding: 1.5rem 0;
    cursor: pointer;
  }
  .accordion__content {
    padding-bottom: 1.5rem;
  }
  .icon-plus { font-size: 1.2rem; font-weight: 300; }
</style>

{% schema %}
{
  "name": "t:sections.main-product.name",
  "tag": "section",
  "class": "section",
  "blocks": [
    { "type": "@app" },
    {
      "type": "text",
      "name": "t:sections.main-product.blocks.text.name",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "default": "t:sections.main-product.blocks.text.settings.text.default",
          "label": "t:sections.main-product.blocks.text.settings.text.label"
        },
        {
          "type": "select",
          "id": "text_style",
          "options": [
            { "value": "body", "label": "Body" },
            { "value": "subtitle", "label": "Subtitle" },
            { "value": "uppercase", "label": "Uppercase" }
          ],
          "default": "body",
          "label": "Text Style"
        }
      ]
    },
    { "type": "title", "name": "t:sections.main-product.blocks.title.name", "limit": 1 },
    { "type": "price", "name": "t:sections.main-product.blocks.price.name", "limit": 1 },
    { "type": "sku", "name": "t:sections.main-product.blocks.sku.name", "limit": 1 },
    { 
      "type": "inventory", 
      "name": "t:sections.main-product.blocks.inventory.name", 
      "limit": 1,
      "settings": [
        { "type": "range", "id": "inventory_threshold", "label": "Low stock threshold", "min": 0, "max": 100, "default": 10 }
      ] 
    },
    { "type": "quantity_selector", "name": "t:sections.main-product.blocks.quantity_selector.name", "limit": 1 },
    {
      "type": "variant_picker",
      "name": "t:sections.main-product.blocks.variant_picker.name",
      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "picker_type",
          "options": [
            { "value": "dropdown", "label": "Dropdown" },
            { "value": "button", "label": "Buttons" }
          ],
          "default": "button",
          "label": "Picker Type"
        }
      ]
    },
    {
      "type": "buy_buttons",
      "name": "t:sections.main-product.blocks.buy_buttons.name",
      "limit": 1,
      "settings": [
        { "type": "checkbox", "id": "show_dynamic_checkout", "default": true, "label": "Show dynamic checkout" },
        { "type": "checkbox", "id": "show_gift_card_recipient", "default": true, "label": "Show gift card recipient form" }
      ]
    },
    { "type": "description", "name": "t:sections.main-product.blocks.description.name", "limit": 1 },
    { "type": "share", "name": "t:sections.main-product.blocks.share.name", "limit": 1 },
    { "type": "rating", "name": "t:sections.main-product.blocks.rating.name", "limit": 1 },
    {
      "type": "collapsible_tab",
      "name": "t:sections.main-product.blocks.collapsible_tab.name",
      "settings": [
        { "type": "text", "id": "heading", "default": "Collapsible Row", "label": "Heading" },
        { "type": "select", "id": "icon", "label": "Icon", "default": "check_mark", "options": [
            { "value": "none", "label": "None" },
            { "value": "check_mark", "label": "Check Mark" },
            { "value": "heart", "label": "Heart" },
            { "value": "ruler", "label": "Ruler" }
        ]},
        { "type": "richtext", "id": "content", "label": "Row content" },
        { "type": "page", "id": "page", "label": "Row content from page" }
      ]
    },
    {
      "type": "popup",
      "name": "t:sections.main-product.blocks.popup.name",
      "settings": [
        { "type": "text", "id": "text", "default": "Pop-up link text", "label": "Link Label" },
        { "type": "page", "id": "page", "label": "Page" }
      ]
    }
  ],
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ]
}
{% endschema %}


