{% schema %}
{
  "name": "Editorial Spotlight",
  "class": "section-editorial-spotlight",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop Image",
      "info": "High Res (2000px+)"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image",
      "info": "Portrait Mode (9:16)"
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 400,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Desktop Height",
      "default": 750
    },
    {
      "type": "header",
      "content": "TEXT"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Cruise 2026 Collection"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link"
    },
    {
      "type": "header",
      "content": "COLORS"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 60,
      "step": 5,
      "unit": "%",
      "label": "Black Overlay",
      "default": 10
    }
  ],
  "blocks": [
    {
      "type": "heading_block",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading_text",
          "label": "Heading",
          "default": "Featured story"
        },
        {
          "type": "range",
          "id": "padding_vertical",
          "min": 0,
          "max": 80,
          "step": 4,
          "unit": "px",
          "label": "Vertical padding",
          "default": 0
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#FFFFFF"
        },
        {
          "type": "range",
          "id": "font_size",
          "min": 10,
          "max": 72,
          "step": 1,
          "unit": "px",
          "label": "Font size",
          "default": 32
        }
      ]
    },
    {
      "type": "subheading_block",
      "name": "Subheading",
      "settings": [
        {
          "type": "text",
          "id": "subheading_text",
          "label": "Subheading",
          "default": "A closer look"
        },
        {
          "type": "range",
          "id": "padding_vertical",
          "min": 0,
          "max": 80,
          "step": 4,
          "unit": "px",
          "label": "Vertical padding",
          "default": 0
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#FFFFFF"
        },
        {
          "type": "range",
          "id": "font_size",
          "min": 10,
          "max": 48,
          "step": 1,
          "unit": "px",
          "label": "Font size",
          "default": 22
        }
      ]
    },
    {
      "type": "body_block",
      "name": "Body",
      "settings": [
        {
          "type": "richtext",
          "id": "body_content",
          "label": "Body text",
          "default": "<p>Share the story behind this edit or add supporting copy for the collection.</p>"
        },
        {
          "type": "range",
          "id": "padding_vertical",
          "min": 0,
          "max": 80,
          "step": 4,
          "unit": "px",
          "label": "Vertical padding",
          "default": 0
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#FFFFFF"
        },
        {
          "type": "range",
          "id": "font_size",
          "min": 10,
          "max": 36,
          "step": 1,
          "unit": "px",
          "label": "Font size",
          "default": 16
        }
      ]
    },
    {
      "type": "button_block",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Label",
          "default": "Discover"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button style",
          "default": "primary",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            },
            {
              "value": "link",
              "label": "Link"
            }
          ]
        },
        {
          "type": "range",
          "id": "padding_vertical",
          "min": 0,
          "max": 80,
          "step": 4,
          "unit": "px",
          "label": "Vertical padding",
          "default": 0
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#FFFFFF"
        },
        {
          "type": "range",
          "id": "font_size",
          "min": 10,
          "max": 32,
          "step": 1,
          "unit": "px",
          "label": "Font size",
          "default": 16
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Editorial Spotlight"
    }
  ]
}
{% endschema %}

<style>
  .section-editorial-spotlight .spotlight-button-row {
    display: flex;
    justify-content: center;
    align-items: center;
    column-gap: 16px;
    row-gap: 12px;
    flex-wrap: wrap;
  }

  @media (max-width: 749px) {
    .section-editorial-spotlight .spotlight-button-row {
      flex-direction: column;
      width: 100%;
    }

    .section-editorial-spotlight .spotlight-button-row .spotlight-block-button {
      width: 100%;
    }
  }
</style>

<div
  class="editorial-spotlight-wrapper{% if section.settings.image_mobile != blank %} has-mobile-image{% endif %}"
  style="--origin-spotlight-height: {{ section.settings.height_desktop }}px; --origin-spotlight-text-color: {{ section.settings.text_color }}; --origin-spotlight-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
>
  <div class="hero-bg">
    <div class="overlay"></div>
    
    {% if section.settings.image_desktop %}
      <img src="{{ section.settings.image_desktop | image_url: width: 2000 }}" 
           class="hero-img desktop-img" 
           loading="eager" 
           alt="{{ section.settings.heading }}"
           width="2000" height="1000"> 
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-img placeholder' }}
    {% endif %}

    {% if section.settings.image_mobile %}
      <img src="{{ section.settings.image_mobile | image_url: width: 1000 }}" 
           class="hero-img mobile-img" 
           loading="eager" 
           alt="{{ section.settings.heading }}"
           width="1000" height="1500"> 
    {% endif %}
  </div>

  <div class="hero-content" style="position: static; top: auto; left: auto; transform: none; width: 100%; max-width: 960px; margin: 0 auto; text-align: center; display: flex; flex-direction: column; align-items: center; justify-content: flex-end; min-height: 100vh; padding: 0 16px 120px; box-sizing: border-box;">
    <h2 class="hero-title">{{ section.settings.heading }}</h2>
    
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-btn">
        {{ section.settings.button_text }}
      </a>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="spotlight-blocks" style="color: var(--origin-spotlight-text-color); text-align: center; width: 100%; max-width: 960px; margin: 0 auto;">
        {% assign button_row_open = false %}
        {% for block in section.blocks %}
        {% case block.type %}
        {% when 'heading_block' %}
          {% if block.settings.heading_text != blank %}
            {% assign padding_val = block.settings.padding_vertical | default: 0 %}
            {% assign color_val = block.settings.text_color | default: '#FFFFFF' %}
            {% assign font_size_val = block.settings.font_size | default: 32 %}
            <h3
              class="spotlight-block-heading"
              style="padding-top: {{ padding_val }}px; padding-bottom: {{ padding_val }}px; color: {{ color_val }}; font-size: {{ font_size_val }}px;"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.heading_text }}
            </h3>
          {% endif %}

        {% when 'subheading_block' %}
          {% if block.settings.subheading_text != blank %}
            {% assign padding_val = block.settings.padding_vertical | default: 0 %}
            {% assign color_val = block.settings.text_color | default: '#FFFFFF' %}
            {% assign font_size_val = block.settings.font_size | default: 22 %}
            <h4
              class="spotlight-block-subheading"
              style="padding-top: {{ padding_val }}px; padding-bottom: {{ padding_val }}px; color: {{ color_val }}; font-size: {{ font_size_val }}px;"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.subheading_text }}
            </h4>
          {% endif %}

        {% when 'body_block' %}
          {% if block.settings.body_content != blank %}
            {% assign padding_val = block.settings.padding_vertical | default: 0 %}
            {% assign color_val = block.settings.text_color | default: '#FFFFFF' %}
            {% assign font_size_val = block.settings.font_size | default: 16 %}
            <div
              class="spotlight-block-body rte"
              style="padding-top: {{ padding_val }}px; padding-bottom: {{ padding_val }}px; color: {{ color_val }}; font-size: {{ font_size_val }}px;"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.body_content }}
            </div>
          {% endif %}

        {% when 'button_block' %}
          {% if block.settings.button_label != blank %}
            {% assign btn_style = block.settings.button_style | default: 'primary' %}
            {% assign btn_classes = 'spotlight-block-button' %}
            {% assign padding_val = block.settings.padding_vertical | default: 0 %}
            {% assign color_val = block.settings.text_color | default: '#FFFFFF' %}
            {% assign font_size_val = block.settings.font_size | default: 16 %}
            {% if button_row_open == false %}
              <div class="spotlight-button-row">
              {% assign button_row_open = true %}
            {% endif %}
            {% if btn_style == 'link' %}
              {% assign btn_classes = btn_classes | append: ' spotlight-block-button--link' %}
            {% else %}
              {% assign btn_classes = btn_classes | append: ' hero-btn' %}
              {% if btn_style == 'secondary' %}
                {% assign btn_classes = btn_classes | append: ' hero-btn--secondary' %}
              {% endif %}
            {% endif %}

            <a
              href="{{ block.settings.button_link | default: '#' }}"
              class="{{ btn_classes }}"
              style="padding-top: {{ padding_val }}px; padding-bottom: {{ padding_val }}px; color: {{ color_val }}; font-size: {{ font_size_val }}px;"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.button_label }}
            </a>
          {% endif %}
        {% endcase %}
        {% endfor %}
        {% if button_row_open %}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>
