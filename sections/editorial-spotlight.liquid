{% schema %}
{
  "name": "Editorial Spotlight",
  "class": "section-editorial-spotlight",
  "settings": [
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop Image",
      "info": "High Res (2000px+)"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image",
      "info": "Portrait Mode (9:16)"
    },
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Section Background Color",
      "default": "#000000",
      "info": "Useful if using transparent PNG images."
    },
    {
      "type": "select",
      "id": "section_height",
      "label": "Desktop Section Height",
      "default": "full",
      "options": [
        { "value": "full", "label": "Full Screen (100vh)" },
        { "value": "large", "label": "Large (80vh)" },
        { "value": "medium", "label": "Medium (60vh)" },
        { "value": "auto", "label": "Adapt to Image (Natural Height)" }
      ]
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 0
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "font_picker",
      "id": "font_heading",
      "label": "Heading Font",
      "default": "serif"
    },
    {
      "type": "font_picker",
      "id": "font_body",
      "label": "Body & UI Font",
      "default": "sans-serif"
    },
    {
      "type": "header",
      "content": "Content Alignment"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Desktop Text Position",
      "default": "bottom-center",
      "options": [
        { "value": "top-left", "label": "Top Left" },
        { "value": "top-center", "label": "Top Center" },
        { "value": "top-right", "label": "Top Right" },
        { "value": "center-left", "label": "Center Left" },
        { "value": "center", "label": "Center" },
        { "value": "center-right", "label": "Center Right" },
        { "value": "bottom-left", "label": "Bottom Left" },
        { "value": "bottom-center", "label": "Bottom Center" },
        { "value": "bottom-right", "label": "Bottom Right" }
      ]
    },
    {
      "type": "checkbox",
      "id": "mobile_text_below",
      "label": "Show text below image on mobile",
      "default": true,
      "info": "RECOMMENDED: Allows full mobile image to be seen without cropping."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "mobile_text_color",
      "label": "Mobile Text Color (if below image)",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "heading_block",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading_text",
          "label": "Heading",
          "default": "THE COLLECTION"
        },
        {
          "type": "range",
          "id": "font_scale_desktop",
          "min": 1,
          "max": 15,
          "step": 0.5,
          "unit": "vw",
          "label": "Font Scale (Desktop)",
          "default": 4
        },
        {
          "type": "range",
          "id": "font_scale_mobile",
          "min": 20,
          "max": 100,
          "step": 2,
          "unit": "px",
          "label": "Font Size (Mobile)",
          "default": 42
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 60,
          "step": 4,
          "unit": "px",
          "label": "Bottom Spacing",
          "default": 16
        }
      ]
    },
    {
      "type": "subheading_block",
      "name": "Subheading",
      "settings": [
        {
          "type": "text",
          "id": "subheading_text",
          "label": "Subheading",
          "default": "New Arrivals"
        },
        {
          "type": "range",
          "id": "font_size",
          "min": 10,
          "max": 30,
          "step": 1,
          "unit": "px",
          "label": "Font Size",
          "default": 14
        },
        {
          "type": "range",
          "id": "letter_spacing",
          "min": 0,
          "max": 10,
          "step": 1,
          "unit": "px",
          "label": "Letter Spacing",
          "default": 2
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 60,
          "step": 4,
          "unit": "px",
          "label": "Bottom Spacing",
          "default": 16
        }
      ]
    },
    {
      "type": "body_block",
      "name": "Body Text",
      "settings": [
        {
          "type": "richtext",
          "id": "body_content",
          "label": "Body text",
          "default": "<p>Explore the campaign.</p>"
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 60,
          "step": 4,
          "unit": "px",
          "label": "Bottom Spacing",
          "default": 24
        }
      ]
    },
    {
      "type": "button_block",
      "name": "Buttons",
      "settings": [
        {
          "type": "text",
          "id": "button_label_1",
          "label": "Button 1 Label",
          "default": "SHOP WOMEN"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "Button 1 Link"
        },
        {
          "type": "text",
          "id": "button_label_2",
          "label": "Button 2 Label",
          "default": "SHOP MEN"
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "Button 2 Link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button Style",
          "default": "solid",
          "options": [
            {"value": "solid", "label": "Solid Box"},
            {"value": "outline", "label": "Outline"},
            {"value": "underline", "label": "Underline Text"}
          ]
        },
        {
          "type": "header",
          "content": "Button Colors (Normal)"
        },
        {
          "type": "color",
          "id": "btn_text",
          "label": "Text Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "btn_bg",
          "label": "Background Color",
          "default": "#FFFFFF"
        },
        {
          "type": "color",
          "id": "btn_border",
          "label": "Border Color",
          "default": "#FFFFFF"
        },
        {
          "type": "header",
          "content": "Button Colors (Hover)"
        },
        {
          "type": "color",
          "id": "btn_hover_text",
          "label": "Hover Text Color",
          "default": "#FFFFFF"
        },
        {
          "type": "color",
          "id": "btn_hover_bg",
          "label": "Hover Background Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "btn_hover_border",
          "label": "Hover Border Color",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Origin Editorial Spotlight",
      "blocks": [
        { "type": "subheading_block" },
        { "type": "heading_block" },
        { "type": "button_block" }
      ]
    }
  ]
}
{% endschema %}

{% style %}
  {{ section.settings.font_heading | font_face: font_display: 'swap' }}
  {{ section.settings.font_body | font_face: font_display: 'swap' }}

  .origin-spotlight {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    background-color: {{ section.settings.section_bg_color }};
    
    /* CSS Variables for Fonts */
    --font-heading: {{ section.settings.font_heading.family }}, {{ section.settings.font_heading.fallback_families }};
    --font-body: {{ section.settings.font_body.family }}, {{ section.settings.font_body.fallback_families }};
  }

  /* --- HEIGHT SETTINGS --- */
  .origin-spotlight--full { height: 100vh; }
  .origin-spotlight--large { height: 80vh; }
  .origin-spotlight--medium { height: 60vh; }
  .origin-spotlight--auto { height: auto; }

  /* --- IMAGE LAYER --- */
  .origin-spotlight__bg {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .origin-spotlight--auto .origin-spotlight__bg {
    position: relative;
    height: auto;
  }

  .origin-spotlight__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Overlay */
  .origin-spotlight__overlay {
    position: absolute;
    inset: 0;
    background: #000;
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  /* --- CONTENT LAYER (CSS GRID) --- */
  .origin-spotlight__content-wrapper {
    position: absolute; 
    top: 0;
    left: 0;
    width: 100%;
    height: 100%; 
    z-index: 3;
    pointer-events: none;
    padding: 60px 40px;
    box-sizing: border-box;
    color: {{ section.settings.text_color }};
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
  }

  .origin-spotlight__content {
    max-width: 1200px;
    width: 100%;
    pointer-events: auto;
  }

  /* Grid Alignment */
  .pos-top-left      { grid-column: 1; grid-row: 1; justify-self: start; align-self: start; text-align: left; }
  .pos-top-center    { grid-column: 2; grid-row: 1; justify-self: center; align-self: start; text-align: center; }
  .pos-top-right     { grid-column: 3; grid-row: 1; justify-self: end; align-self: start; text-align: right; }
  
  .pos-center-left   { grid-column: 1; grid-row: 2; justify-self: start; align-self: center; text-align: left; }
  .pos-center        { grid-column: 2; grid-row: 2; justify-self: center; align-self: center; text-align: center; }
  .pos-center-right  { grid-column: 3; grid-row: 2; justify-self: end; align-self: center; text-align: right; }
  
  .pos-bottom-left   { grid-column: 1; grid-row: 3; justify-self: start; align-self: end; text-align: left; }
  .pos-bottom-center { grid-column: 1 / span 3; grid-row: 3; justify-self: center; align-self: end; text-align: center; }
  .pos-bottom-right  { grid-column: 3; grid-row: 3; justify-self: end; align-self: end; text-align: right; }

  /* --- TYPOGRAPHY --- */
  .origin-spotlight__heading {
    margin: 0;
    line-height: 0.9;
    font-family: var(--font-heading); /* User Selected Font */
    text-transform: uppercase;
    font-weight: 400;
  }

  .origin-spotlight__subheading {
    margin: 0;
    text-transform: uppercase;
    font-weight: 600;
    opacity: 0.9;
    font-family: var(--font-body); /* User Selected Font */
  }

  .origin-spotlight__body p {
    margin: 0;
    font-size: 16px;
    line-height: 1.6;
    font-family: var(--font-body); /* User Selected Font */
  }

  /* --- BUTTONS --- */
  .origin-spotlight__buttons {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    margin-top: 10px;
  }
  
  .pos-top-center .origin-spotlight__buttons,
  .pos-center .origin-spotlight__buttons,
  .pos-bottom-center .origin-spotlight__buttons {
    justify-content: center;
  }
  .pos-top-right .origin-spotlight__buttons,
  .pos-center-right .origin-spotlight__buttons,
  .pos-bottom-right .origin-spotlight__buttons {
    justify-content: flex-end;
  }

  .origin-btn {
    display: inline-block;
    padding: 14px 32px;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 12px;
    letter-spacing: 0.1em;
    font-weight: 600;
    transition: all 0.3s ease;
    cursor: pointer;
    font-family: var(--font-body);
    
    /* CSS Variables assigned via inline style on the link */
    color: var(--btn-text);
    background-color: var(--btn-bg);
    border: 1px solid var(--btn-border);
  }

  .origin-btn:hover {
    color: var(--btn-hover-text);
    background-color: var(--btn-hover-bg);
    border-color: var(--btn-hover-border);
  }

  /* Specific Override Logic for Styles */
  /* Solid: Uses colors exactly as defined */
  /* Outline: Transparent BG, Text color as border */
  .origin-btn.btn-outline {
    background-color: transparent;
    color: var(--btn-text);
    border-color: var(--btn-border);
  }
  .origin-btn.btn-outline:hover {
    background-color: var(--btn-hover-bg); /* Usually solid on hover */
    color: var(--btn-hover-text);
    border-color: var(--btn-hover-border);
  }

  /* Underline: No box, just bottom border */
  .origin-btn.btn-underline {
    background-color: transparent;
    border: none;
    border-bottom: 1px solid var(--btn-border);
    padding: 10px 0;
  }
  .origin-btn.btn-underline:hover {
    background-color: transparent;
    opacity: 0.7;
    color: var(--btn-hover-text);
    border-bottom-color: var(--btn-hover-border);
  }

  /* --- MOBILE LOGIC --- */
  @media (max-width: 768px) {
    .desktop-img { display: none !important; }
    .mobile-img { display: block !important; }

    {% if section.settings.mobile_text_below %}
      .origin-spotlight {
        height: auto !important;
        min-height: 0 !important;
        display: block; 
      }
      .origin-spotlight__bg {
        position: relative;
        width: 100%;
        height: auto;
        inset: auto;
      }
      .origin-spotlight__img.mobile-img {
        width: 100%;
        height: auto;
        object-fit: contain;
        display: block;
      }
      .origin-spotlight__overlay { display: none; }
      .origin-spotlight__content-wrapper {
        position: relative;
        height: auto;
        width: 100%;
        padding: 40px 20px;
        background: {{ section.settings.section_bg_color }};
        color: {{ section.settings.mobile_text_color }};
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        pointer-events: auto;
      }
      .origin-spotlight__content { grid-column: auto; grid-row: auto; }
      .origin-spotlight__buttons { justify-content: center; }
      
      /* Mobile Text Below: Force high contrast buttons based on mobile text color */
      /* Note: We actually keep the block settings, but user should adjust them in the block settings if needed. */
      /* If you want to force specific mobile colors, add mobile color settings. For now, block settings rule. */
    {% else %}
      .origin-spotlight__content-wrapper { padding: 30px 20px; }
    {% endif %}
  }

  @media (min-width: 769px) {
    .mobile-img { display: none !important; }
    .desktop-img { display: block !important; }
  }
{% endstyle %}

<div class="origin-spotlight origin-spotlight--{{ section.settings.section_height }}">
  
  <div class="origin-spotlight__bg">
    <div class="origin-spotlight__overlay"></div>
    {% if section.settings.image_desktop %}
      <img src="{{ section.settings.image_desktop | image_url: width: 2400 }}" class="origin-spotlight__img desktop-img" loading="lazy" alt="" width="{{ section.settings.image_desktop.width }}" height="{{ section.settings.image_desktop.height }}">
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'origin-spotlight__img desktop-img' }}
    {% endif %}

    {% if section.settings.image_mobile %}
      <img src="{{ section.settings.image_mobile | image_url: width: 1200 }}" class="origin-spotlight__img mobile-img" loading="lazy" alt="" width="{{ section.settings.image_mobile.width }}" height="{{ section.settings.image_mobile.height }}">
    {% else %}
      {% if section.settings.image_desktop %}
        <img src="{{ section.settings.image_desktop | image_url: width: 1200 }}" class="origin-spotlight__img mobile-img" loading="lazy" alt="" width="{{ section.settings.image_desktop.width }}" height="{{ section.settings.image_desktop.height }}">
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'origin-spotlight__img mobile-img' }}
      {% endif %}
    {% endif %}
  </div>

  <div class="origin-spotlight__content-wrapper">
    <div class="origin-spotlight__content pos-{{ section.settings.text_position }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'heading_block' %}
            <h2 class="origin-spotlight__heading" 
                style="font-size: clamp({{ block.settings.font_scale_mobile }}px, {{ block.settings.font_scale_desktop }}vw, 200px); padding-bottom: {{ block.settings.padding_bottom }}px;">
              {{ block.settings.heading_text }}
            </h2>

          {% when 'subheading_block' %}
            <h3 class="origin-spotlight__subheading" 
                style="font-size: {{ block.settings.font_size }}px; letter-spacing: {{ block.settings.letter_spacing }}px; padding-bottom: {{ block.settings.padding_bottom }}px;">
              {{ block.settings.subheading_text }}
            </h3>

          {% when 'body_block' %}
            <div class="origin-spotlight__body" style="padding-bottom: {{ block.settings.padding_bottom }}px;">
              {{ block.settings.body_content }}
            </div>

          {% when 'button_block' %}
            <div class="origin-spotlight__buttons">
              {% comment %} Define Variables for this block's specific colors {% endcomment %}
              {% style %}
                #btn-block-{{ block.id }} .origin-btn {
                  --btn-text: {{ block.settings.btn_text }};
                  --btn-bg: {{ block.settings.btn_bg }};
                  --btn-border: {{ block.settings.btn_border }};
                  --btn-hover-text: {{ block.settings.btn_hover_text }};
                  --btn-hover-bg: {{ block.settings.btn_hover_bg }};
                  --btn-hover-border: {{ block.settings.btn_hover_border }};
                }
              {% endstyle %}
              
              <div id="btn-block-{{ block.id }}" class="origin-spotlight__buttons-inner" style="display:contents;">
                {% if block.settings.button_label_1 != blank %}
                  <a href="{{ block.settings.button_link_1 }}" class="origin-btn btn-{{ block.settings.button_style }}">
                    {{ block.settings.button_label_1 }}
                  </a>
                {% endif %}
                {% if block.settings.button_label_2 != blank %}
                  <a href="{{ block.settings.button_link_2 }}" class="origin-btn btn-{{ block.settings.button_style }}">
                    {{ block.settings.button_label_2 }}
                  </a>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>

</div>



