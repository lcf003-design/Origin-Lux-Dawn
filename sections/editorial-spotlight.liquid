{% schema %}
{
  "name": "Editorial Spotlight",
  "class": "section-editorial-spotlight",
  "settings": [
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop Image",
      "info": "High Res (2000px+)"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image",
      "info": "Portrait Mode (9:16)"
    },
    {
      "type": "select",
      "id": "section_height",
      "label": "Desktop Section Height",
      "default": "full",
      "options": [
        { "value": "full", "label": "Full Screen (100vh)" },
        { "value": "large", "label": "Large (80vh)" },
        { "value": "medium", "label": "Medium (60vh)" },
        { "value": "auto", "label": "Adapt to Image" }
      ]
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 10
    },
    {
      "type": "header",
      "content": "Content Alignment"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Desktop Text Position",
      "default": "center",
      "options": [
        { "value": "top-left", "label": "Top Left" },
        { "value": "top-center", "label": "Top Center" },
        { "value": "top-right", "label": "Top Right" },
        { "value": "center-left", "label": "Center Left" },
        { "value": "center", "label": "Center" },
        { "value": "center-right", "label": "Center Right" },
        { "value": "bottom-left", "label": "Bottom Left" },
        { "value": "bottom-center", "label": "Bottom Center" },
        { "value": "bottom-right", "label": "Bottom Right" }
      ]
    },
    {
      "type": "checkbox",
      "id": "mobile_text_below",
      "label": "Show text below image on mobile",
      "default": true,
      "info": "RECOMMENDED: Allows full mobile image to be seen without cropping."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "mobile_text_color",
      "label": "Mobile Text Color (if below image)",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "heading_block",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading_text",
          "label": "Heading",
          "default": "THE COLLECTION"
        },
        {
          "type": "range",
          "id": "font_scale_desktop",
          "min": 1,
          "max": 10,
          "step": 0.5,
          "unit": "vw",
          "label": "Font Scale (Desktop)",
          "default": 4
        },
        {
          "type": "range",
          "id": "font_scale_mobile",
          "min": 20,
          "max": 100,
          "step": 2,
          "unit": "px",
          "label": "Font Size (Mobile)",
          "default": 42
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 60,
          "step": 4,
          "unit": "px",
          "label": "Bottom Spacing",
          "default": 16
        }
      ]
    },
    {
      "type": "subheading_block",
      "name": "Subheading",
      "settings": [
        {
          "type": "text",
          "id": "subheading_text",
          "label": "Subheading",
          "default": "New Arrivals"
        },
        {
          "type": "range",
          "id": "font_size",
          "min": 10,
          "max": 30,
          "step": 1,
          "unit": "px",
          "label": "Font Size",
          "default": 14
        },
        {
          "type": "range",
          "id": "letter_spacing",
          "min": 0,
          "max": 10,
          "step": 1,
          "unit": "px",
          "label": "Letter Spacing",
          "default": 2
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 60,
          "step": 4,
          "unit": "px",
          "label": "Bottom Spacing",
          "default": 16
        }
      ]
    },
    {
      "type": "body_block",
      "name": "Body Text",
      "settings": [
        {
          "type": "richtext",
          "id": "body_content",
          "label": "Body text",
          "default": "<p>Explore the campaign.</p>"
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 60,
          "step": 4,
          "unit": "px",
          "label": "Bottom Spacing",
          "default": 24
        }
      ]
    },
    {
      "type": "button_block",
      "name": "Buttons",
      "settings": [
        {
          "type": "text",
          "id": "button_label_1",
          "label": "Button 1 Label",
          "default": "SHOP WOMEN"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "Button 1 Link"
        },
        {
          "type": "text",
          "id": "button_label_2",
          "label": "Button 2 Label",
          "default": "SHOP MEN"
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "Button 2 Link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button Style",
          "default": "solid",
          "options": [
            {"value": "solid", "label": "Solid Box"},
            {"value": "outline", "label": "Outline"},
            {"value": "underline", "label": "Underline Text"}
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Origin Editorial Spotlight",
      "blocks": [
        { "type": "subheading_block" },
        { "type": "heading_block" },
        { "type": "button_block" }
      ]
    }
  ]
}
{% endschema %}

<style>
  .origin-spotlight {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  /* --- HEIGHT SETTINGS --- */
  .origin-spotlight--full { min-height: 100vh; }
  .origin-spotlight--large { min-height: 80vh; }
  .origin-spotlight--medium { min-height: 60vh; }
  .origin-spotlight--auto { min-height: auto; aspect-ratio: 16/9; }

  /* --- IMAGE LAYER --- */
  .origin-spotlight__bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .origin-spotlight__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .origin-spotlight__overlay {
    position: absolute;
    inset: 0;
    background: #000;
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  /* --- CONTENT LAYER --- */
  .origin-spotlight__content-wrapper {
    position: relative;
    z-index: 3;
    width: 100%;
    height: 100%;
    min-height: inherit; /* Matches parent height */
    display: flex;
    padding: 60px 40px;
    box-sizing: border-box;
    color: {{ section.settings.text_color }};
  }

  /* Alignment Logic */
  .pos-top-left { align-items: flex-start; justify-content: flex-start; text-align: left; }
  .pos-top-center { align-items: flex-start; justify-content: center; text-align: center; }
  .pos-top-right { align-items: flex-start; justify-content: flex-end; text-align: right; }
  
  .pos-center-left { align-items: center; justify-content: flex-start; text-align: left; }
  .pos-center { align-items: center; justify-content: center; text-align: center; }
  .pos-center-right { align-items: center; justify-content: flex-end; text-align: right; }
  
  .pos-bottom-left { align-items: flex-end; justify-content: flex-start; text-align: left; }
  .pos-bottom-center { align-items: flex-end; justify-content: center; text-align: center; }
  .pos-bottom-right { align-items: flex-end; justify-content: flex-end; text-align: right; }

  .origin-spotlight__content {
    max-width: 800px;
    width: 100%;
  }

  /* --- TYPOGRAPHY --- */
  .origin-spotlight__heading {
    margin: 0;
    line-height: 1.1;
    font-family: serif;
    text-transform: uppercase;
    font-weight: 400;
  }

  .origin-spotlight__subheading {
    margin: 0;
    text-transform: uppercase;
    font-weight: 600;
    opacity: 0.9;
  }

  .origin-spotlight__body p {
    margin: 0;
    font-size: 16px;
    line-height: 1.6;
  }

  /* --- BUTTONS --- */
  .origin-spotlight__buttons {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    margin-top: 10px;
  }
  
  /* Inherit text alignment for buttons */
  .pos-top-center .origin-spotlight__buttons,
  .pos-center .origin-spotlight__buttons,
  .pos-bottom-center .origin-spotlight__buttons {
    justify-content: center;
  }
  .pos-top-right .origin-spotlight__buttons,
  .pos-center-right .origin-spotlight__buttons,
  .pos-bottom-right .origin-spotlight__buttons {
    justify-content: flex-end;
  }

  .origin-btn {
    display: inline-block;
    padding: 14px 32px;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 12px;
    letter-spacing: 0.1em;
    font-weight: 600;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  /* Solid Style */
  .btn-solid {
    background: #fff;
    color: #000;
    border: 1px solid #fff;
  }
  .btn-solid:hover {
    background: transparent;
    color: #fff;
  }

  /* Outline Style */
  .btn-outline {
    background: transparent;
    color: #fff;
    border: 1px solid #fff;
  }
  .btn-outline:hover {
    background: #fff;
    color: #000;
  }

  /* Underline Style */
  .btn-underline {
    background: transparent;
    color: #fff;
    padding: 10px 0;
    border-bottom: 1px solid #fff;
  }
  .btn-underline:hover {
    opacity: 0.7;
  }

  /* --- MOBILE LOGIC --- */
  @media (max-width: 768px) {
    .desktop-img { display: none !important; }
    .mobile-img { display: block !important; }

    /* If "Text Below" is checked, we force natural layout */
    {% if section.settings.mobile_text_below %}
      .origin-spotlight {
        height: auto !important; /* Force auto height so image can grow */
        min-height: 0 !important;
        display: block; /* Stack vertically */
      }
      .origin-spotlight__bg {
        position: relative; /* Remove absolute positioning */
        width: 100%;
        height: auto; /* Let image dictate height */
        inset: auto;
      }
      .origin-spotlight__img.mobile-img {
        width: 100%;
        height: auto; /* Show full image natural height */
        object-fit: contain; /* Never crop */
        display: block;
      }
      .origin-spotlight__overlay {
        display: none; /* No overlay needed when text is below */
      }
      .origin-spotlight__content-wrapper {
        position: relative;
        height: auto;
        min-height: 0;
        padding: 40px 20px;
        background: #fff; /* White bg for text below */
        color: {{ section.settings.mobile_text_color }};
        text-align: center;
        justify-content: center;
        align-items: center;
      }
      
      /* Invert button colors for white background */
      .origin-spotlight__buttons { justify-content: center; }
      .btn-solid { background: #000; color: #fff; border-color: #000; }
      .btn-outline { color: #000; border-color: #000; }
      .btn-underline { color: #000; border-color: #000; }
    {% else %}
      /* Standard overlay mode */
      .origin-spotlight__content-wrapper { padding: 30px 20px; }
    {% endif %}
  }

  @media (min-width: 769px) {
    .mobile-img { display: none !important; }
    .desktop-img { display: block !important; }
  }
</style>

<div class="origin-spotlight origin-spotlight--{{ section.settings.section_height }} pos-{{ section.settings.text_position }}">
  
  <div class="origin-spotlight__bg">
    <div class="origin-spotlight__overlay"></div>
    {% if section.settings.image_desktop %}
      <img src="{{ section.settings.image_desktop | image_url: width: 2400 }}" class="origin-spotlight__img desktop-img" loading="lazy" alt="" width="{{ section.settings.image_desktop.width }}" height="{{ section.settings.image_desktop.height }}">
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'origin-spotlight__img desktop-img' }}
    {% endif %}

    {% if section.settings.image_mobile %}
      <img src="{{ section.settings.image_mobile | image_url: width: 1200 }}" class="origin-spotlight__img mobile-img" loading="lazy" alt="" width="{{ section.settings.image_mobile.width }}" height="{{ section.settings.image_mobile.height }}">
    {% else %}
      {% if section.settings.image_desktop %}
        <img src="{{ section.settings.image_desktop | image_url: width: 1200 }}" class="origin-spotlight__img mobile-img" loading="lazy" alt="" width="{{ section.settings.image_desktop.width }}" height="{{ section.settings.image_desktop.height }}">
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'origin-spotlight__img mobile-img' }}
      {% endif %}
    {% endif %}
  </div>

  <div class="origin-spotlight__content-wrapper">
    <div class="origin-spotlight__content">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'heading_block' %}
            <h2 class="origin-spotlight__heading" 
                style="font-size: clamp({{ block.settings.font_scale_mobile }}px, {{ block.settings.font_scale_desktop }}vw, 120px); padding-bottom: {{ block.settings.padding_bottom }}px;">
              {{ block.settings.heading_text }}
            </h2>

          {% when 'subheading_block' %}
            <h3 class="origin-spotlight__subheading" 
                style="font-size: {{ block.settings.font_size }}px; letter-spacing: {{ block.settings.letter_spacing }}px; padding-bottom: {{ block.settings.padding_bottom }}px;">
              {{ block.settings.subheading_text }}
            </h3>

          {% when 'body_block' %}
            <div class="origin-spotlight__body" style="padding-bottom: {{ block.settings.padding_bottom }}px;">
              {{ block.settings.body_content }}
            </div>

          {% when 'button_block' %}
            <div class="origin-spotlight__buttons">
              {% if block.settings.button_label_1 != blank %}
                <a href="{{ block.settings.button_link_1 }}" class="origin-btn btn-{{ block.settings.button_style }}">
                  {{ block.settings.button_label_1 }}
                </a>
              {% endif %}
              {% if block.settings.button_label_2 != blank %}
                <a href="{{ block.settings.button_link_2 }}" class="origin-btn btn-{{ block.settings.button_style }}">
                  {{ block.settings.button_label_2 }}
                </a>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>

</div>


