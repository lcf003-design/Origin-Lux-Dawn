{% comment %}
  Fresh Start Marquee
  Contains: Infinite scrolling text loop
{% endcomment %}

{% comment %}
  theme-check-disable RemoteAsset
{% endcomment %}
<script src="https://cdn.tailwindcss.com" defer></script>
{% comment %}
  theme-check-enable RemoteAsset
{% endcomment %}

<style>
  @keyframes fs-marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  .animate-fs-marquee {
    animation: fs-marquee 30s linear infinite;
  }

  /* Lightning Stroke Animation */
  .lightning-text {
    fill: transparent;
    stroke: #00ffff; /* Cyan/Lightning Blue */
    stroke-width: 2px;
    stroke-dasharray: 50 400; /* Short dash (bolt), long gap */
    animation: stroke-lightning 4s linear infinite;
    font-size: 80px; /* SVG internal font size */
    font-weight: 900;
  }

  @keyframes stroke-lightning {
    0% {
      stroke-dashoffset: 450;
    }
    100% {
      stroke-dashoffset: 0;
    }
  }
</style>

<div class="w-full bg-black py-4 overflow-hidden flex whitespace-nowrap z-20 relative">
  {%- assign marquee_content = section.settings.marquee_text
    | default: 'GUCCI PRADA BALENCIAGA CHANEL DIOR OFF-WHITE VERSACE'
  -%}
  <div class="animate-fs-marquee flex gap-16 items-center">
    <!-- Lightning SVG Text -->
    <svg class="h-24 md:h-32 w-auto" viewBox="0 0 1000 100" overflow="visible">
      <defs>
        <symbol id="marquee-text">
          <text x="0" y="50%" dy=".35em" class="text-4xl md:text-6xl font-black uppercase tracking-tighter">
            {{ marquee_content }}
          </text>
        </symbol>
      </defs>
      <use xlink:href="#marquee-text" class="lightning-text"></use>
      <use xlink:href="#marquee-text" class="lightning-text" x="100%"></use>
    </svg>
    <svg class="h-24 md:h-32 w-auto" viewBox="0 0 1000 100" overflow="visible">
      <use xlink:href="#marquee-text" class="lightning-text"></use>
      <use xlink:href="#marquee-text" class="lightning-text" x="100%"></use>
    </svg>
    <svg class="h-24 md:h-32 w-auto" viewBox="0 0 1000 100" overflow="visible">
      <use xlink:href="#marquee-text" class="lightning-text"></use>
      <use xlink:href="#marquee-text" class="lightning-text" x="100%"></use>
    </svg>
  </div>
</div>

{% schema %}
{
  "name": "Fresh Start Marquee",
  "settings": [
    {
      "type": "textarea",
      "id": "marquee_text",
      "label": "Marquee Text",
      "default": "GUCCI PRADA BALENCIAGA CHANEL DIOR OFF-WHITE VERSACE"
    }
  ],
  "presets": [{ "name": "Fresh Start Marquee" }]
}
{% endschema %}
