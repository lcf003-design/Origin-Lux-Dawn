{%- comment -%}
  Origin – Complete the Look / Related Products
  Uses Shopify recommendations by default with optional manual collection.
{%- endcomment -%}

{%- liquid
  assign heading = section.settings.heading | default: 'Complete the look'
  assign use_collection = section.settings.source == 'collection' and section.settings.collection != blank
  assign related_products = collection.products | default: null
  if use_collection
    assign related_products = section.settings.collection.products
  endif
-%}

<section class="origin-related" aria-labelledby="origin-related-{{ section.id }}">
  <div class="page-width">
    <div class="origin-related__header">
      <p class="origin-related__eyebrow">Styled for you</p>
      <h2 id="origin-related-{{ section.id }}" class="origin-related__heading">{{ heading }}</h2>
    </div>
    {%- if use_collection -%}
      <div class="origin-related__grid">
        {%- for card_product in related_products limit: section.settings.products_to_show -%}
          <div class="origin-related__item">
            {% render 'card-product',
              card_product: card_product,
              media_aspect_ratio: section.settings.image_ratio,
              show_secondary_image: section.settings.show_secondary_image,
              quick_add: 'standard',
              section_id: section.id
            %}
          </div>
        {%- endfor -%}
      </div>
    {%- else -%}
      <product-recommendations
        class="origin-related__recommendations"
        data-url="{{ routes.product_recommendations_url }}?product_id={{ product.id }}&section_id={{ section.id }}&limit={{ section.settings.products_to_show }}"
      >
        {%- if recommendations.performed and recommendations.products_count > 0 -%}
          <div class="origin-related__grid">
            {%- for card_product in recommendations.products limit: section.settings.products_to_show -%}
              <div class="origin-related__item">
                {% render 'card-product',
                  card_product: card_product,
                  media_aspect_ratio: section.settings.image_ratio,
                  show_secondary_image: section.settings.show_secondary_image,
                  quick_add: 'standard',
                  section_id: section.id
                %}
              </div>
            {%- endfor -%}
          </div>
        {%- else -%}
          <div class="origin-related__placeholder">
            <p>Loading looks curated for you…</p>
          </div>
        {%- endif -%}
      </product-recommendations>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Origin – Related Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Complete the look"
    },
    {
      "type": "select",
      "id": "source",
      "label": "Source",
      "default": "recommendations",
      "options": [
        {
          "value": "recommendations",
          "label": "Use Shopify recommendations"
        },
        {
          "value": "collection",
          "label": "Manual collection"
        }
      ]
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection (optional)"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image ratio",
      "default": "portrait",
      "options": [
        {
          "value": "portrait",
          "label": "Portrait"
        },
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "adapt",
          "label": "Adapt"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "label": "Show secondary image",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Origin – Complete the look"
    }
  ]
}
{% endschema %}
