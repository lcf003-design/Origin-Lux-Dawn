{% style %}
  /* FADE IN ANIMATION */
  @keyframes fadeInLuxury {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .gucci-slider-section {
    width: 100%;
    position: relative;
    background-color: {{ section.settings.bg_color }};
    padding: 0;
    margin: 0;
    overflow: hidden;
    animation: fadeInLuxury 0.8s ease-out forwards;
  }

  /* --- 1. VISUAL STAGE --- */
  .gucci-visuals-stage {
    position: relative;
    width: 100%;
    height: 80vh;
    max-height: 900px;
    min-height: 500px; /* Safety minimum */
    overflow: hidden;
    background-color: #f5f5f5;
    /* Critical for swipe to work without scrolling page */
    touch-action: pan-y; 
    user-select: none;
  }

  .gucci-slider-track {
    display: flex;
    width: 100%;
    height: 100%;
    will-change: transform;
    /* Transition handled in JS */
  }

  .gucci-slide {
    flex: 0 0 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  @media (min-width: 990px) {
    .gucci-slide { flex: 0 0 50%; }
  }

  .gucci-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    pointer-events: none; /* Prevents image dragging ghost on desktop */
  }

  /* --- 2. CONTROL STRIP (Fixed & Centered) --- */
  .gs-control-strip {
    width: 100%;
    background-color: #ffffff; 
    padding: 20px 0;
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid rgba(0,0,0,0.05);
  }

  .gs-controls-wrapper {
    display: flex;
    align-items: center;
    gap: 15px;
    max-width: 100%;
    padding: 0 20px;
  }

  /* Thumbnails */
  .gs-mini-preview {
    display: flex;
    align-items: center;
    gap: 10px;
    overflow-x: auto;
    max-width: 500px;
    padding-bottom: 2px;
    scrollbar-width: none; 
    -ms-overflow-style: none;
  }
  .gs-mini-preview::-webkit-scrollbar { display: none; }

  .gs-mini-thumb {
    width: 50px;
    height: 50px;
    flex-shrink: 0;
    cursor: pointer;
    opacity: 0.5;
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }
  .gs-mini-thumb img { width: 100%; height: 100%; object-fit: cover; display: block; }
  .gs-mini-thumb:hover { opacity: 1; }
  .gs-mini-thumb.active { opacity: 1; border-color: #000; }

  /* Arrows */
  .gs-nav-group {
    display: flex;
    gap: 8px;
    flex-shrink: 0;
  }

  .gs-nav-btn {
    background: #e0e0e0;
    border: none;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    color: #333;
    padding: 0;
    -webkit-tap-highlight-color: transparent;
  }
  .gs-nav-btn:hover { background: #cccccc; color: #000; }
  .gs-nav-btn svg { width: 16px; height: 16px; stroke-width: 2px; }

  /* --- 3. PRODUCT BLOCKS --- */
  .gs-product-container {
    padding: 60px 20px;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    background-color: {{ section.settings.bg_color }};
  }
   
  .gs-product-container .product__title h1 { text-align: center; font-size: 2.5rem; font-weight: 400; margin: 0; }
  .gs-product-container .price { justify-content: center; }
  .gs-product-container .product-form__buttons { max-width: 400px; margin: 20px auto; }
  .gs-product-container fieldset { justify-content: center; display: flex; gap: 10px; border: none; padding: 0; margin-bottom: 20px; }
  .gs-product-container .accordion { border-top: 1px solid #e5e5e5; margin-top: 20px; }
  .gs-product-container .accordion summary { padding: 15px 0; justify-content: space-between; }
  .gs-product-container .accordion__content { text-align: left; padding-bottom: 15px; }
{% endstyle %}

<div class="gucci-slider-section" id="GucciSlider-{{ section.id }}">
  
  <div class="gucci-visuals-stage">
    <div class="gucci-slider-track" id="gsTrack">
      {% if product.media.size > 0 %}
        
        {% comment %} 
          LOGIC: Infinite Loop requires cloning. 
          We clone the LAST 2 items to the FRONT, and the FIRST 2 items to the BACK.
          This accommodates the 2-up desktop view.
        {% endcomment %}

        {% assign last_index = product.media.size | minus: 1 %}
        {% assign second_last_index = product.media.size | minus: 2 %}
        
        <!-- SAFETY: Only run clone logic if we have enough images (>=2) -->
        {% if product.media.size > 1 %}
          
            <!-- CLONES AT START -->
            <div class="gucci-slide clone-last-2">
              <img src="{{ product.media[second_last_index] | image_url: width: 2000 }}" alt="" width="2000" height="{{ 2000 | divided_by: product.media[second_last_index].aspect_ratio | ceil }}" loading="lazy">
            </div>
            
            <div class="gucci-slide clone-last-1">
              <img src="{{ product.media[last_index] | image_url: width: 2000 }}" alt="" width="2000" height="{{ 2000 | divided_by: product.media[last_index].aspect_ratio | ceil }}" loading="lazy">
            </div>

            <!-- REAL IMAGES -->
            {% for media in product.media %}
              <div class="gucci-slide" data-index="{{ forloop.index0 }}">
                {% comment %} Performance: First 2 images Eager load, others Lazy {% endcomment %}
                {% assign loading_strat = 'lazy' %}
                {% if forloop.index <= 2 %}{% assign loading_strat = 'eager' %}{% endif %}
                
                <img 
                  src="{{ media | image_url: width: 2000 }}" 
                  alt="{{ media.alt | escape }}" 
                  width="2000" 
                  height="{{ 2000 | divided_by: media.aspect_ratio | ceil }}" 
                  loading="{{ loading_strat }}"
                  {% if forloop.first %}fetchpriority="high"{% endif %}
                >
              </div>
            {% endfor %}

            <!-- CLONES AT END -->
            <div class="gucci-slide clone-first-1">
              <img src="{{ product.media[0] | image_url: width: 2000 }}" alt="" width="2000" height="{{ 2000 | divided_by: product.media[0].aspect_ratio | ceil }}" loading="lazy">
            </div>
            
            <div class="gucci-slide clone-first-2">
              <img src="{{ product.media[1] | image_url: width: 2000 }}" alt="" width="2000" height="{{ 2000 | divided_by: product.media[1].aspect_ratio | ceil }}" loading="lazy">
            </div>

        {% else %}
            <!-- FALLBACK FOR SINGLE IMAGE -->
            <div class="gucci-slide">
              <img src="{{ product.media[0] | image_url: width: 2000 }}" alt="{{ product.media[0].alt | escape }}" width="2000" height="{{ 2000 | divided_by: product.media[0].aspect_ratio | ceil }}" fetchpriority="high">
            </div>
        {% endif %}

      {% else %}
        <div class="gucci-slide">{{ 'product-1' | placeholder_svg_tag }}</div>
      {% endif %}
    </div>
  </div>

  <!-- CONTROL STRIP (Only show if more than 1 image) -->
  {% if product.media.size > 1 %}
  <div class="gs-control-strip">
    <div class="gs-controls-wrapper">
       
      <div class="gs-mini-preview">
        {% for media in product.media %}
          <div class="gs-mini-thumb {% if forloop.first %}active{% endif %}" onclick="jumpToSlide({{ forloop.index0 }})">
            <img src="{{ media | image_url: width: 100 }}" alt="Thumb" width="100" height="{{ 100 | divided_by: media.aspect_ratio | ceil }}">
          </div>
        {% endfor %}
      </div>

      <div class="gs-nav-group">
        <button class="gs-nav-btn prev" id="gsPrevBtn" aria-label="Previous">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M15 18l-6-6 6-6"/></svg>
        </button>
        <button class="gs-nav-btn next" id="gsNextBtn" aria-label="Next">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M9 18l6-6-6-6"/></svg>
        </button>
      </div>

    </div>
  </div>
  {% endif %}

  <div class="gs-product-container">
    <product-info id="ProductInfo-{{ section.id }}" data-section="{{ section.id }}" data-product-id="{{ product.id }}" data-update-url="true" data-url="{{ product.url }}">
      {%- assign product_form_id = 'product-form-' | append: section.id -%}

      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when '@app' -%}{% render block %}
          {%- when 'text' -%}
            <p class="product__text {{ block.settings.text_style }}" {{ block.shopify_attributes }}>{{ block.settings.text }}</p>
          {%- when 'title' -%}
            <div class="product__title" {{ block.shopify_attributes }}><h1>{{ product.title | escape }}</h1></div>
          {%- when 'price' -%}
            <div id="price-{{ section.id }}" {{ block.shopify_attributes }}>{%- render 'price', product: product, use_variant: true, show_badges: true -%}</div>
          {%- when 'variant_picker' -%}
            {% render 'product-variant-picker', product: product, block: block, product_form_id: product_form_id %}
          {%- when 'buy_buttons' -%}
            {%- render 'buy-buttons', block: block, product: product, product_form_id: product_form_id, section_id: section.id, show_pickup_availability: true -%}
          {%- when 'description' -%}
            <div class="product__description rte" {{ block.shopify_attributes }}>{{ product.description }}</div>
          {%- when 'share' -%}
            {% render 'share-button', block: block, share_link: product.url %}
          {%- when 'quantity_selector' -%}
            <div class="product-form__input product-form__quantity" {{ block.shopify_attributes }} style="justify-content: center; display: flex; margin: 0 auto 20px;">
              <label class="form__label" for="Quantity-{{ section.id }}" style="margin-right: 10px;">Quantity</label>
              <quantity-input class="quantity">
                <button class="quantity__button" name="minus" type="button">-</button>
                <input class="quantity__input" type="number" name="quantity" id="Quantity-{{ section.id }}" min="1" value="1" form="{{ product_form_id }}">
                <button class="quantity__button" name="plus" type="button">+</button>
              </quantity-input>
            </div>
          {%- when 'collapsible_tab' -%}
            <div class="product__accordion accordion quick-add-hidden" {{ block.shopify_attributes }}>
              <details id="Details-{{ block.id }}-{{ section.id }}">
                <summary>
                  <div class="summary__title">
                    {% render 'icon-accordion', icon: block.settings.icon %}
                    <h2 class="h4 accordion__title inline-richtext">{{ block.settings.heading | default: block.settings.page.title }}</h2>
                  </div>
                  {{- 'icon-caret.svg' | inline_asset_content -}}
                </summary>
                <div class="accordion__content rte" id="ProductAccordion-{{ block.id }}-{{ section.id }}">
                  {{ block.settings.content }}
                  {{ block.settings.page.content }}
                </div>
              </details>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </product-info>
  </div>

</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const track = document.getElementById('gsTrack');
    const visualStage = document.querySelector('.gucci-visuals-stage');
    const realSlides = document.querySelectorAll('.gucci-slide:not([class*="clone-"])');
    const thumbs = document.querySelectorAll('.gs-mini-thumb');
    const prevBtn = document.getElementById('gsPrevBtn');
    const nextBtn = document.getElementById('gsNextBtn');
    
    if (realSlides.length < 2) return; // Exit if not enough slides

    // Configuration
    const cloneCountStart = 2; 
    let currentIndex = cloneCountStart; 
    let isTransitioning = false;
    const totalReal = realSlides.length;
    const totalSlides = document.querySelectorAll('.gucci-slide').length;

    // --- CORE MOVING LOGIC ---
    function updatePosition(transition = true) {
      const isDesktop = window.innerWidth >= 990;
      const movePercent = isDesktop ? 50 : 100;
      
      track.style.transition = transition ? 'transform 0.5s cubic-bezier(0.25, 1, 0.5, 1)' : 'none';
      track.style.transform = `translateX(-${currentIndex * movePercent}%)`;

      // Update Thumbs (Map clone indices back to real indices)
      let realIndex = currentIndex - cloneCountStart;
      
      // Loop mapping
      if (realIndex < 0) realIndex = totalReal + realIndex;
      if (realIndex >= totalReal) realIndex = realIndex % totalReal;

      thumbs.forEach(t => t.classList.remove('active'));
      if(thumbs[realIndex]) {
        thumbs[realIndex].classList.add('active');
        thumbs[realIndex].scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
      }
    }

    // --- INFINITE LOOP JUMP ---
    track.addEventListener('transitionend', () => {
      isTransitioning = false;
      
      // If at end clones, snap to start
      if (currentIndex >= totalSlides - 2) {
        currentIndex = currentIndex - totalReal;
        updatePosition(false); 
      }
      
      // If at start clones, snap to end
      if (currentIndex < cloneCountStart) {
        currentIndex = currentIndex + totalReal;
        updatePosition(false); 
      }
    });

    function moveSlide(direction) {
      if (isTransitioning) return;
      isTransitioning = true;
      currentIndex += direction;
      updatePosition();
    }

    // Global accessible function for thumbs
    window.jumpToSlide = function(index) {
      currentIndex = index + cloneCountStart;
      updatePosition();
    }

    // --- BUTTON EVENTS ---
    if(prevBtn) prevBtn.addEventListener('click', () => moveSlide(-1));
    if(nextBtn) nextBtn.addEventListener('click', () => moveSlide(1));

    // --- TOUCH / SWIPE SUPPORT (ROBUST) ---
    let touchStartX = 0;
    let touchCurrentX = 0;
    const swipeThreshold = 50; 

    // 1. Start
    visualStage.addEventListener('touchstart', e => {
      touchStartX = e.changedTouches[0].screenX;
      touchCurrentX = touchStartX; // Init current to start
    }, {passive: true});

    // 2. Move (Track position)
    visualStage.addEventListener('touchmove', e => {
      touchCurrentX = e.changedTouches[0].screenX;
    }, {passive: true});

    // 3. End (Decide)
    visualStage.addEventListener('touchend', e => {
      // Ensure we have a valid end position even if move didn't fire
      if (touchCurrentX === 0) touchCurrentX = e.changedTouches[0].screenX;
      
      const deltaX = touchStartX - touchCurrentX;
      
      // Reset
      touchStartX = 0;
      touchCurrentX = 0;

      if (Math.abs(deltaX) > swipeThreshold) {
        if (deltaX > 0) moveSlide(1); // Swipe Left -> Next
        else moveSlide(-1); // Swipe Right -> Prev
      }
    });

    // --- RESIZE HANDLER (Debounced) ---
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => updatePosition(false), 100);
    });
    
    // Init
    setTimeout(() => updatePosition(false), 50); 
  });
</script>

