{% style %}
  .gucci-slider-section {
    width: 100%;
    position: relative;
    background-color: {{ section.settings.bg_color }};
    padding: 0;
    margin: 0;
    overflow: hidden;
  }

  /* --- VISUAL STAGE --- */
  .gucci-visuals-stage {
    position: relative;
    width: 100%;
    height: 85vh;
    max-height: 1000px;
    overflow: hidden;
    /* This ensures the UI elements inside are relative to THIS box, not the moving track */
  }

  /* --- SLIDER TRACK --- */
  .gucci-slider-track {
    display: flex;
    width: 100%;
    height: 100%;
    will-change: transform;
    /* Initial position handles JS logic */
  }

  /* --- SLIDES --- */
  .gucci-slide {
    flex: 0 0 100%; /* Mobile: 100% Width */
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  @media (min-width: 990px) {
    .gucci-slide {
      flex: 0 0 50%; /* Desktop: 50% Width */
    }
  }

  .gucci-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* --- NAVIGATION ARROWS (LOCKED) --- */
  .gs-nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 50; /* Higher than everything */
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(4px);
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s ease, transform 0.2s ease;
    color: #000;
  }
  .gs-nav-btn:hover { background: rgba(255, 255, 255, 0.9); transform: translateY(-50%) scale(1.05); }
  .gs-nav-btn.prev { left: 20px; }
  .gs-nav-btn.next { right: 20px; }
  .gs-nav-btn svg { width: 20px; height: 20px; stroke-width: 2px; }

  /* --- MINI PREVIEW (LOCKED) --- */
  .gs-mini-preview {
    position: absolute;
    bottom: 30px;
    right: 30px;
    z-index: 50; /* Higher than slider track */
    display: flex;
    align-items: center;
    gap: 10px;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    padding: 8px;
    border-radius: 4px;
    max-width: 300px;
    overflow-x: auto;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    scrollbar-width: none; 
    -ms-overflow-style: none;
  }
  .gs-mini-preview::-webkit-scrollbar { display: none; }

  .gs-mini-thumb {
    width: 45px;
    height: 45px;
    flex-shrink: 0;
    cursor: pointer;
    opacity: 0.5;
    transition: all 0.2s ease;
    border: 2px solid transparent;
  }
  .gs-mini-thumb img { width: 100%; height: 100%; object-fit: cover; display: block; }
  .gs-mini-thumb:hover { opacity: 1; }
  .gs-mini-thumb.active { opacity: 1; border-color: #000; }

  /* --- PRODUCT CONTENT --- */
  .gs-product-container {
    padding: 60px 20px;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }
  .gs-product-container .product__title h1 { font-size: 2.5rem; font-weight: 400; margin: 0; text-align: center; }
  .gs-product-container .price { justify-content: center; }
  .gs-product-container .product-form__buttons { max-width: 400px; margin: 20px auto; }
  .gs-product-container fieldset { justify-content: center; display: flex; gap: 10px; border: none; padding: 0; margin-bottom: 20px; }
  
  /* Accordion Styling */
  .gs-product-container .accordion { border-top: 1px solid #e5e5e5; margin-top: 20px; }
  .gs-product-container .accordion summary { padding: 15px 0; justify-content: space-between; }
  .gs-product-container .accordion__content { text-align: left; padding-bottom: 15px; }

{% endstyle %}

<div class="gucci-slider-section" id="GucciSlider-{{ section.id }}">
  
  <!-- VISUAL STAGE -->
  <div class="gucci-visuals-stage">
    
    <!-- STATIONARY UI: Arrows & Preview are OUTSIDE the slider track -->
    <button class="gs-nav-btn prev" id="gsPrevBtn" aria-label="Previous"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M15 18l-6-6 6-6"/></svg></button>
    <button class="gs-nav-btn next" id="gsNextBtn" aria-label="Next"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M9 18l6-6-6-6"/></svg></button>

    <div class="gs-mini-preview">
      {% for media in product.media %}
        <div class="gs-mini-thumb {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}">
          <img src="{{ media | image_url: width: 100 }}" alt="Thumb" width="100" height="100">
        </div>
      {% endfor %}
    </div>

    <!-- SLIDER TRACK -->
    <div class="gucci-slider-track" id="gsTrack">
      <!-- Clones for Infinite Loop (Prepended) -->
      <div class="gucci-slide clone-last"><img src="{{ product.media.last | image_url: width: 2000 }}" alt="" loading="lazy"></div>

      {% for media in product.media %}
        <div class="gucci-slide" data-index="{{ forloop.index0 }}">
          <img src="{{ media | image_url: width: 2000 }}" alt="{{ media.alt | escape }}" width="2000" height="{{ 2000 | divided_by: media.aspect_ratio | ceil }}" loading="lazy">
        </div>
      {% endfor %}

      <!-- Clones for Infinite Loop (Appended) -->
      <div class="gucci-slide clone-first"><img src="{{ product.media.first | image_url: width: 2000 }}" alt="" loading="lazy"></div>
    </div>

  </div>

  <!-- PRODUCT BLOCKS -->
  <div class="gs-product-container">
    <product-info id="ProductInfo-{{ section.id }}" data-section="{{ section.id }}" data-product-id="{{ product.id }}" data-update-url="true" data-url="{{ product.url }}">
      {%- assign product_form_id = 'product-form-' | append: section.id -%}

      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when '@app' -%}{% render block %}
          {%- when 'text' -%}
            <p class="product__text {{ block.settings.text_style }}" {{ block.shopify_attributes }}>{{ block.settings.text }}</p>
          {%- when 'title' -%}
            <div class="product__title" {{ block.shopify_attributes }}><h1>{{ product.title | escape }}</h1></div>
          {%- when 'price' -%}
            <div id="price-{{ section.id }}" {{ block.shopify_attributes }}>{%- render 'price', product: product, use_variant: true, show_badges: true -%}</div>
          {%- when 'variant_picker' -%}
            {% render 'product-variant-picker', product: product, block: block, product_form_id: product_form_id %}
          {%- when 'buy_buttons' -%}
            {%- render 'buy-buttons', block: block, product: product, product_form_id: product_form_id, section_id: section.id, show_pickup_availability: true -%}
          {%- when 'description' -%}
            <div class="product__description rte" {{ block.shopify_attributes }}>{{ product.description }}</div>
          {%- when 'share' -%}
            {% render 'share-button', block: block, share_link: product.url %}
          {%- when 'quantity_selector' -%}
            <div class="product-form__input product-form__quantity" {{ block.shopify_attributes }} style="justify-content: center; display: flex; margin: 0 auto 20px;">
              <label class="form__label" for="Quantity-{{ section.id }}" style="margin-right: 10px;">Quantity</label>
              <quantity-input class="quantity">
                <button class="quantity__button" name="minus" type="button">-</button>
                <input class="quantity__input" type="number" name="quantity" id="Quantity-{{ section.id }}" min="1" value="1" form="{{ product_form_id }}">
                <button class="quantity__button" name="plus" type="button">+</button>
              </quantity-input>
            </div>
          {%- when 'collapsible_tab' -%}
            <div class="product__accordion accordion quick-add-hidden" {{ block.shopify_attributes }}>
              <details id="Details-{{ block.id }}-{{ section.id }}">
                <summary>
                  <div class="summary__title">
                    {% render 'icon-accordion', icon: block.settings.icon %}
                    <h2 class="h4 accordion__title inline-richtext">{{ block.settings.heading | default: block.settings.page.title }}</h2>
                  </div>
                  {{- 'icon-caret.svg' | inline_asset_content -}}
                </summary>
                <div class="accordion__content rte" id="ProductAccordion-{{ block.id }}-{{ section.id }}">
                  {{ block.settings.content }}
                  {{ block.settings.page.content }}
                </div>
              </details>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </product-info>
  </div>

</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const track = document.getElementById('gsTrack');
    const slides = document.querySelectorAll('.gucci-slide:not(.clone-last):not(.clone-first)');
    const thumbs = document.querySelectorAll('.gs-mini-thumb');
    const prevBtn = document.getElementById('gsPrevBtn');
    const nextBtn = document.getElementById('gsNextBtn');
    
    let currentIndex = 1; // Start at 1 because of clone-last at index 0
    let isTransitioning = false;
    let totalSlides = slides.length + 2; // Real slides + 2 clones

    // Initial Position (Hide clone)
    function updatePosition(transition = true) {
      const isDesktop = window.innerWidth >= 990;
      const movePercent = isDesktop ? 50 : 100;
      
      track.style.transition = transition ? 'transform 0.5s cubic-bezier(0.25, 1, 0.5, 1)' : 'none';
      track.style.transform = `translateX(-${currentIndex * movePercent}%)`;

      // Update Thumbs (Account for clones)
      let realIndex = currentIndex - 1;
      if (realIndex < 0) realIndex = slides.length - 1;
      if (realIndex >= slides.length) realIndex = 0;

      thumbs.forEach(t => t.classList.remove('active'));
      if(thumbs[realIndex]) {
        thumbs[realIndex].classList.add('active');
        thumbs[realIndex].scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
      }
    }

    // Infinite Loop Logic
    track.addEventListener('transitionend', () => {
      isTransitioning = false;
      if (currentIndex === 0) {
        currentIndex = slides.length;
        updatePosition(false); // Snap without transition
      }
      if (currentIndex === totalSlides - 1) {
        currentIndex = 1;
        updatePosition(false); // Snap without transition
      }
    });

    function moveSlide(direction) {
      if (isTransitioning) return;
      isTransitioning = true;
      currentIndex += direction;
      updatePosition();
    }

    // Thumbnail Click
    thumbs.forEach((thumb, index) => {
      thumb.addEventListener('click', () => {
        currentIndex = index + 1;
        updatePosition();
      });
    });

    // Buttons
    prevBtn.addEventListener('click', () => moveSlide(-1));
    nextBtn.addEventListener('click', () => moveSlide(1));

    // Resize
    window.addEventListener('resize', () => updatePosition(false));

    // Initialize
    updatePosition(false);
  });
</script>

