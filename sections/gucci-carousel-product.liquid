{% style %}
  /* --- GLOBAL & FONTS --- */
  .gucci-section-wrapper {
    background-color: #fff;
    width: 100%;
    overflow-x: hidden;
  }
  
  /* Reset some default Shopify margins for a cleaner look */
  .gucci-section-wrapper p, 
  .gucci-section-wrapper h1, 
  .gucci-section-wrapper h2 {
    margin: 0;
  }

  /* --- ZONE 1: VISUALS (THE CAROUSEL) --- */
  .gucci-visuals-stage {
    position: relative;
    width: 100%;
    background-color: {{ section.settings.bg_color }};
    /* Aspect Ratio for main stage - usually somewhat landscape on desktop */
    aspect-ratio: 1 / 1; 
    overflow: hidden;
  }
  
  @media screen and (min-width: 990px) {
    .gucci-visuals-stage {
      aspect-ratio: 16 / 9;
      max-height: 85vh;
    }
  }

  .gucci-slider-track {
    display: flex;
    height: 100%;
    /* The "Luxurious" transition curve */
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1); 
  }

  .gucci-slide {
    flex: 0 0 100%;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .gucci-slide img {
    max-width: 100%;
    max-height: 100%;
    height: auto;
    width: auto;
    object-fit: contain;
    mix-blend-mode: multiply; /* Helps integrate image if bg is not perfectly white */
  }

  /* Controls: Bottom Right Floating */
  .gs-controls-container {
    position: absolute;
    bottom: 20px;
    right: 20px;
    display: flex;
    align-items: center;
    gap: 15px;
    z-index: 10;
    background: rgba(255,255,255,0.0); /* Transparent */
  }

  /* Thumbnails */
  .gs-thumb-list {
    display: flex;
    gap: 8px;
  }
  
  .gs-thumb {
    width: 44px;
    height: 44px;
    border: 1px solid #ccc;
    cursor: pointer;
    overflow: hidden;
    background: #fff;
    opacity: 0.6;
    transition: all 0.2s ease;
  }
  .gs-thumb.active {
    opacity: 1;
    border-color: #000;
    border-width: 1px;
  }
  .gs-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Arrows */
  .gs-arrow-group {
    display: flex;
    gap: 8px;
  }

  .gs-nav-btn {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: #e6e6e6;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background 0.2s;
    color: #555;
  }
  .gs-nav-btn:hover {
    background: #d6d6d6;
    color: #000;
  }
  .gs-nav-btn svg {
    width: 12px;
    height: 12px;
  }


  /* --- ZONE 2: THE SPLIT GRID --- */
  .gucci-content-grid {
    display: flex;
    flex-direction: column;
    padding: 30px 20px;
    max-width: 1400px;
    margin: 0 auto;
  }

  @media screen and (min-width: 990px) {
    .gucci-content-grid {
      display: grid;
      grid-template-columns: 1fr 380px; /* Narrative takes space, Action is fixed width */
      gap: 80px; /* Generous gap */
      padding: 60px 40px;
      align-items: start;
    }
  }

  /* --- LEFT COL: NARRATIVE --- */
  .gucci-narrative-col {
    display: flex;
    flex-direction: column;
  }

  .product__title h1 {
    font-family: var(--font-heading-family);
    font-size: 1.8rem;
    font-weight: 400;
    letter-spacing: 0.5px;
    line-height: 1.3;
    margin-bottom: 5px;
    color: #111;
  }

  .price-area {
    margin-bottom: 25px;
    font-size: 1.1rem;
    font-weight: 400;
    letter-spacing: 0.5px;
  }

  .variation-label {
    font-size: 0.8rem;
    color: #555;
    margin-bottom: 10px;
  }
  .variation-label span {
    color: #000;
    font-weight: 600;
  }

  /* Variants */
  fieldset.product-form__input {
    border: none;
    padding: 0;
    margin: 0 0 25px 0;
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }
  
  /* Custom Swatch Styling to match Reference */
  .custom-swatch-label {
    width: 40px;
    height: 40px;
    border: 1px solid #e5e5e5;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: border-color 0.2s;
    background-size: cover;
    background-position: center;
  }
  .custom-swatch-input:checked + .custom-swatch-label {
    border: 1px solid #000;
    box-shadow: inset 0 0 0 1px #000; /* Double border effect */
  }

  /* Description */
  .product__description {
    margin: 30px 0;
    font-size: 0.95rem;
    line-height: 1.7;
    color: #333;
    max-width: 600px;
  }

  /* Accordions */
  .gucci-accordion {
    border-top: 1px solid #e5e5e5;
  }
  .gucci-accordion:last-child {
    border-bottom: 1px solid #e5e5e5;
  }
  
  .gucci-accordion summary {
    padding: 18px 0;
    list-style: none;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .gucci-accordion summary::-webkit-details-marker { display: none; }
  
  .accordion-title {
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: capitalize; /* Or uppercase based on preference */
    letter-spacing: 0.5px;
  }
  
  .gucci-accordion .accordion__content {
    padding-bottom: 20px;
    font-size: 0.9rem;
    color: #555;
    line-height: 1.6;
  }

  /* --- RIGHT COL: ACTION --- */
  .gucci-action-col {
    position: relative;
  }
  @media screen and (min-width: 990px) {
    .gucci-action-col {
      position: sticky;
      top: 40px; /* Sticks to top when scrolling */
    }
  }

  /* Add to Bag Button */
  .gucci-btn-add {
    width: 100%;
    background: #000;
    color: #fff;
    border: none;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    text-transform: uppercase;
    font-size: 0.8rem;
    letter-spacing: 1px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s;
    margin-bottom: 20px;
  }
  .gucci-btn-add:hover {
    background: #333;
  }
  .gucci-btn-add svg {
    width: 16px; 
    height: 16px;
    fill: currentColor;
  }

  .shipping-text {
    font-size: 0.8rem;
    color: #111;
    margin-bottom: 20px;
    line-height: 1.5;
    display: flex;
    gap: 8px;
  }
  .shipping-icon { width: 14px; height: 14px; margin-top: 2px; }

  .service-link {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.85rem;
    text-decoration: underline;
    text-underline-offset: 4px;
    color: #333;
    margin-bottom: 12px;
    cursor: pointer;
  }
{% endstyle %}

<div class="gucci-section-wrapper" id="GucciSection-{{ section.id }}">
  
  <!-- ======================== -->
  <!-- ZONE 1: SMOOTH VISUALS   -->
  <!-- ======================== -->
  <div class="gucci-visuals-stage">
    <div class="gucci-slider-track" id="gsTrack">
      {% if product.media.size > 0 %}
        {% for media in product.media %}
          <div class="gucci-slide">
            <img 
              src="{{ media | image_url: width: 2000 }}" 
              alt="{{ media.alt | escape }}" 
              width="2000" 
              height="{{ 2000 | divided_by: media.aspect_ratio | ceil }}" 
              loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
            >
          </div>
        {% endfor %}
      {% else %}
        <div class="gucci-slide">{{ 'product-1' | placeholder_svg_tag }}</div>
      {% endif %}
    </div>

    <!-- CONTROLS: BOTTOM RIGHT FLOATING -->
    {% if product.media.size > 1 %}
    <div class="gs-controls-container">
      
      <!-- Thumbnails (Hidden on mobile usually, but keeping for reference accuracy) -->
      <div class="gs-thumb-list hidden-mobile">
        {% for media in product.media %}
          <div class="gs-thumb {% if forloop.first %}active{% endif %}" onclick="goToSlide({{ forloop.index0 }})">
             <img src="{{ media | image_url: width: 100 }}" alt="{{ media.alt | escape }}" width="100" height="{{ 100 | divided_by: media.aspect_ratio | ceil }}">
          </div>
        {% endfor %}
      </div>

      <!-- Navigation Arrows -->
      <div class="gs-arrow-group">
        <button class="gs-nav-btn" onclick="prevSlide()" aria-label="Previous">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg>
        </button>
        <button class="gs-nav-btn" onclick="nextSlide()" aria-label="Next">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
        </button>
      </div>

    </div>
    {% endif %}
  </div>


  <!-- ======================== -->
  <!-- ZONE 2: THE SPLIT        -->
  <!-- ======================== -->
  <div class="gucci-content-grid">
    <product-info id="ProductInfo-{{ section.id }}" class="contents" data-section="{{ section.id }}" data-url="{{ product.url }}">
      
      <!-- LEFT COL: THE STORY -->
      <div class="gucci-narrative-col">
        {%- assign product_form_id = 'product-form-' | append: section.id -%}
        
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            
            {%- when 'title' -%}
              <div class="product__title" {{ block.shopify_attributes }}>
                <h1>{{ product.title | escape }}</h1>
              </div>

            {%- when 'price' -%}
              <div class="price-area" {{ block.shopify_attributes }}>
                {% render 'price', product: product, use_variant: true, show_badges: false %}
              </div>

            {%- when 'variant_picker' -%}
              <div {{ block.shopify_attributes }}>
                {%- unless product.has_only_default_variant -%}
                  {%- for option in product.options_with_values -%}
                    <div class="variation-label">Variation: <span>{{ option.selected_value }}</span></div>
                    <fieldset class="product-form__input">
                      {%- for value in option.values -%}
                        <input type="radio" id="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}"
                              name="{{ option.name }}"
                              value="{{ value | escape }}"
                              form="{{ product_form_id }}"
                              {% if option.selected_value == value %}checked{% endif %}
                              class="custom-swatch-input visually-hidden"
                        >
                        <label for="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}" class="custom-swatch-label">
                           <!-- Simple text fallback, ideally replace with variant images if available -->
                           <span style="font-size:10px;">{{ value }}</span>
                        </label>
                      {%- endfor -%}
                    </fieldset>
                  {%- endfor -%}
                {%- endunless -%}
              </div>

            {%- when 'description' -%}
              <div class="product__description rte" {{ block.shopify_attributes }}>
                {{ product.description }}
              </div>

            {%- when 'collapsible_tab' -%}
              <details class="gucci-accordion" {{ block.shopify_attributes }}>
                <summary>
                  <span class="accordion-title">{{ block.settings.heading }}</span>
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 9l6 6 6-6"/></svg>
                </summary>
                <div class="accordion__content rte">{{ block.settings.content }}</div>
              </details>

            {%- when 'text' -%}
               <p class="product__text" style="margin-bottom:15px; font-size: 0.85rem;" {{ block.shopify_attributes }}>{{ block.settings.text }}</p>

          {%- endcase -%}
        {%- endfor -%}
      </div>

      <!-- RIGHT COL: THE ACTION -->
      <div class="gucci-action-col">
        {%- for block in section.blocks -%}
           {%- if block.type == 'buy_buttons' -%}
             <div {{ block.shopify_attributes }}>
               {%- render 'buy-buttons', block: block, product: product, product_form_id: product_form_id, section_id: section.id -%}
               
               <!-- Manual Gucci-style Override Button (Visual only, forms usually handled by snippet above) -->
               <!-- Note: The snippet above renders the real form. We style the classes .product-form__submit in global CSS or below -->
             </div>
             
             <!-- Hardcoded Service Text/Links for the "Gucci Look" -->
             <div style="margin-top: 20px; border-top: 1px solid #eee; padding-top: 20px;">
                <div class="shipping-text">
                   <span>▪</span>
                   <span>Estimated complimentary Express delivery or Collect in Store: Thu, Dec 4 - Fri, Dec 5</span>
                </div>
                
                <div class="service-link">
                   <span>▪</span> <span>Contact Us</span>
                </div>
                <div class="service-link">
                   <span>▪</span> <span>Find in store</span>
                </div>
             </div>
           {%- endif -%}
        {%- endfor -%}
      </div>

    </product-info>
  </div>

</div>

<!-- CSS Overrides for the standard Shopify components to force the look -->
<style>
  /* Force the Buy Button in the included snippet to look like Gucci */
  .product-form__submit {
    background-color: #000 !important;
    color: #fff !important;
    border-radius: 0 !important;
    text-transform: uppercase !important;
    letter-spacing: 1px !important;
    font-size: 13px !important;
    padding: 15px !important;
    width: 100%;
  }
  .product-form__submit:hover {
    opacity: 0.8;
  }
  
  /* Hide standard Shopify variant pickers inside the snippet if we built custom ones, 
     but here we are relying on standard forms hooked to the ID. 
     This styling fixes standard pills. 
  */
  .product-form__input input[type=radio] + label {
    border-radius: 0 !important;
  }
</style>

<script>
  // --- CAROUSEL LOGIC ---
  let currentIndex = 0;
  const track = document.getElementById('gsTrack');
  const slides = document.querySelectorAll('.gucci-slide');
  const thumbs = document.querySelectorAll('.gs-thumb');
  const totalSlides = slides.length;

  function updateSlide() {
    if(totalSlides === 0) return;
    
    // Move Track
    track.style.transform = `translateX(-${currentIndex * 100}%)`;

    // Update Thumbs
    thumbs.forEach((t, i) => {
      if(i === currentIndex) t.classList.add('active');
      else t.classList.remove('active');
    });
  }

  window.nextSlide = function() {
    currentIndex = (currentIndex + 1) % totalSlides;
    updateSlide();
  }

  window.prevSlide = function() {
    currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
    updateSlide();
  }

  window.goToSlide = function(index) {
    currentIndex = index;
    updateSlide();
  }

  // Swipe Support
  let touchStartX = 0;
  const stage = document.querySelector('.gucci-visuals-stage');
  
  if(stage) {
    stage.addEventListener('touchstart', e => touchStartX = e.changedTouches[0].screenX, {passive: true});
    stage.addEventListener('touchend', e => {
      let touchEndX = e.changedTouches[0].screenX;
      if (touchStartX - touchEndX > 50) nextSlide();
      if (touchEndX - touchStartX > 50) prevSlide();
    });
  }
</script>

