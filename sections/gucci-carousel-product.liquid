{% style %}
  .gucci-slider-section {
    width: 100%;
    overflow: hidden;
    background-color: {{ section.settings.bg_color }};
    position: relative;
    padding: 0;
    margin: 0;
  }

  /* --- THE TRACK --- */
  .gucci-slider-track {
    display: flex;
    transition: transform 0.6s cubic-bezier(0.25, 1, 0.5, 1);
    width: 100%;
    height: 85vh;
    max-height: 1000px;
  }

  /* --- SLIDES --- */
  .gucci-slide {
    min-width: 100vw; 
    height: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  @media (min-width: 990px) {
    .gucci-slide {
      min-width: 50vw; 
    }
  }

  .gucci-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  /* --- NAVIGATION ARROWS --- */
  .gs-nav-btn {
    position: absolute;
    top: 50%; /* Center relative to image area */
    transform: translateY(-50%);
    z-index: 10;
    background: rgba(255, 255, 255, 0.0); 
    border: none;
    width: 60px;
    height: 60px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  .gs-nav-btn:hover { background: rgba(255,255,255,0.2); backdrop-filter: blur(4px); }
  .gs-nav-btn.prev { left: 0; }
  .gs-nav-btn.next { right: 0; }
  .gs-nav-btn svg { width: 24px; height: 24px; stroke: #000; }

  /* --- MINI PREVIEW --- */
  .gs-mini-preview {
    position: absolute;
    bottom: 30px;
    right: 30px;
    z-index: 20;
    display: flex;
    align-items: center;
    gap: 8px;
    background: rgba(255,255,255,0.85);
    backdrop-filter: blur(8px);
    padding: 8px;
    border-radius: 2px;
    max-width: 40vw;
    overflow-x: auto;
    scrollbar-width: none; 
    -ms-overflow-style: none;
  }
  .gs-mini-preview::-webkit-scrollbar { display: none; }

  .gs-mini-thumb {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    cursor: pointer;
    border: 1px solid transparent;
    opacity: 0.6;
    transition: all 0.2s;
  }
  .gs-mini-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .gs-mini-thumb:hover, .gs-mini-thumb.active {
    opacity: 1;
    border-color: #000;
  }

  /* --- BLOCKS CONTAINER (UNDERNEATH) --- */
  .gs-blocks-container {
    position: relative; /* No longer absolute overlay */
    width: 100%;
    text-align: center;
    padding: 60px 20px; /* Spacious padding */
    background-color: {{ section.settings.bg_color }};
  }
  
  .gs-block { 
    margin-bottom: 20px; 
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Typography Styles for "Underneath" Look */
  .gs-heading {
    color: #000;
    font-size: 2.5rem;
    font-family: var(--font-heading-family);
    font-weight: 400;
    letter-spacing: 0.05em;
    line-height: 1.2;
    margin: 0;
  }

  .gs-text { 
    color: #333; 
    font-size: 1rem;
    line-height: 1.6;
  }

  .gs-button { 
    display: inline-block; 
    padding: 15px 40px; 
    background: #000; 
    color: #fff; 
    text-decoration: none; 
    text-transform: uppercase; 
    font-weight: bold; 
    letter-spacing: 1px; 
    transition: background 0.3s;
    margin-top: 10px;
  }
  .gs-button:hover { background: #333; color: #fff; }

{% endstyle %}

<div class="gucci-slider-section" id="GucciSlider-{{ section.id }}">
  
  <!-- 1. VISUALS: SLIDER & PREVIEW -->
  <div style="position: relative; width: 100%; overflow: hidden;">
    
    <!-- Side Navigation -->
    <button class="gs-nav-btn prev" aria-label="Previous" onclick="moveGucciSlide(-1)">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M15 18l-6-6 6-6"/></svg>
    </button>
    <button class="gs-nav-btn next" aria-label="Next" onclick="moveGucciSlide(1)">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9 18l6-6-6-6"/></svg>
    </button>

    <!-- The Moving Track -->
    <div class="gucci-slider-track" id="gsTrack">
      {% if product.media.size > 0 %}
        {% for media in product.media %}
          <div class="gucci-slide">
            <img 
              src="{{ media | image_url: width: 2000 }}" 
              alt="{{ media.alt | escape }}"
              width="2000"
              height="{{ 2000 | divided_by: media.aspect_ratio | ceil }}"
              loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
            >
          </div>
        {% endfor %}
      {% else %}
        <div class="gucci-slide">{{ 'product-1' | placeholder_svg_tag }}</div>
        <div class="gucci-slide">{{ 'product-2' | placeholder_svg_tag }}</div>
      {% endif %}
    </div>

    <!-- Mini Preview (Bottom Right of Image Area) -->
    <div class="gs-mini-preview">
      {% for media in product.media %}
        <div class="gs-mini-thumb {% if forloop.first %}active{% endif %}" onclick="jumpToSlide({{ forloop.index0 }})">
          <img src="{{ media | image_url: width: 100 }}" alt="Preview" width="100" height="100">
        </div>
      {% endfor %}
    </div>
  
  </div>

  <!-- 2. CONTENT: BLOCKS UNDERNEATH -->
  <div class="gs-blocks-container">
    {% for block in section.blocks %}
      <div class="gs-block" {{ block.shopify_attributes }}>
        {% case block.type %}
          {% when 'heading' %}
            <h2 class="gs-heading">{{ block.settings.heading }}</h2>
          {% when 'text' %}
            <div class="gs-text">{{ block.settings.text }}</div>
          {% when 'button' %}
            <a href="{{ block.settings.link }}" class="gs-button">{{ block.settings.label }}</a>
        {% endcase %}
      </div>
    {% endfor %}
  </div>

</div>

<script>
  (function() {
    const track = document.getElementById('gsTrack');
    const thumbs = document.querySelectorAll('.gs-mini-thumb');
    const slides = document.querySelectorAll('.gucci-slide');
    const totalSlides = slides.length;
    
    let currentIndex = 0;

    window.moveGucciSlide = function(direction) {
      currentIndex += direction;
      if (currentIndex < 0) currentIndex = totalSlides - 1; // Loop
      if (currentIndex >= totalSlides) currentIndex = 0; // Loop
      updateSliderPosition();
    }

    window.jumpToSlide = function(index) {
      currentIndex = index;
      updateSliderPosition();
    }

    function updateSliderPosition() {
      const slideWidth = slides[0].clientWidth;
      const translate = currentIndex * -slideWidth;
      track.style.transform = `translateX(${translate}px)`;
      
      // Update Thumbnails
      thumbs.forEach(t => t.classList.remove('active'));
      if(thumbs[currentIndex]) {
        thumbs[currentIndex].classList.add('active');
        thumbs[currentIndex].scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
      }
    }

    // Swipe Support
    let touchStartX = 0;
    track.addEventListener('touchstart', e => touchStartX = e.changedTouches[0].screenX);
    track.addEventListener('touchend', e => {
      let touchEndX = e.changedTouches[0].screenX;
      if (touchEndX < touchStartX - 50) moveGucciSlide(1);
      if (touchEndX > touchStartX + 50) moveGucciSlide(-1);
    });

    window.addEventListener('resize', updateSliderPosition);
  })();
</script>

{% schema %}
{
  "name": "Gucci Full Spread",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#F5F5F5"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading Text", "default": "Luxury Collection" }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        { "type": "richtext", "id": "text", "label": "Content" }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        { "type": "text", "id": "label", "label": "Button Label", "default": "Shop Now" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gucci Full Spread",
      "blocks": [
        { "type": "heading" },
        { "type": "button" }
      ]
    }
  ]
}
{% endschema %}


