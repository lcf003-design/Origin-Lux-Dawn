{% schema %}
{
  "name": "Origin Shop The Look",
  "class": "origin-shop-look-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Image (Desktop)",
      "info": "High Res Editorial Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image (Mobile)",
      "info": "Portrait Mode"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "SHOP THE LOOK"
    },
    {
      "type": "color",
      "id": "hotspot_color",
      "label": "Hotspot Color",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "mobile_cta_text",
      "label": "Mobile Drawer Pop-up Text",
      "default": "TAP TO SHOP",
      "info": "This text appears above the product title on mobile."
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Product Hotspot",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
        {
          "type": "range",
          "id": "pos_x",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Horizontal Position (Left %)",
          "default": 50
        },
        {
          "type": "range",
          "id": "pos_y",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Vertical Position (Top %)",
          "default": 50
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Origin Shop The Look",
      "blocks": [
        { "type": "hotspot", "settings": { "pos_x": 40, "pos_y": 40 } },
        { "type": "hotspot", "settings": { "pos_x": 60, "pos_y": 60 } }
      ]
    }
  ]
}
{% endschema %}

<style>
  /* --- BASE CONTAINER --- */
  .origin-shop-look {
    position: relative;
    width: 100%;
    background: #000;
    overflow: hidden; /* Prevents horizontal scrollbars */
  }

  .origin-shop-look img {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .origin-shop-look__image-wrapper {
    position: relative;
    width: 100%;
  }

  /* --- HOTSPOT DOTS --- */
  .origin-hotspot {
    position: absolute;
    width: 44px; /* Increased touch target */
    height: 44px;
    margin-left: -22px; 
    margin-top: -22px;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    -webkit-tap-highlight-color: transparent;
  }

  .origin-hotspot__inner {
    width: 12px;
    height: 12px;
    background-color: {{ section.settings.hotspot_color }};
    border-radius: 50%;
    position: relative;
    z-index: 2;
    transition: transform 0.3s ease;
    box-shadow: 0 2px 8px rgba(0,0,0,0.3);
  }

  /* Pulsing Animation */
  .origin-hotspot::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.hotspot_color }};
    border-radius: 50%;
    opacity: 0.4;
    animation: pulse 2s infinite;
    z-index: 1;
  }

  @keyframes pulse {
    0% { transform: scale(0.3); opacity: 0.8; }
    100% { transform: scale(1.5); opacity: 0; }
  }

  /* --- POPUP CARD (DESKTOP DEFAULT) --- */
  .origin-hotspot-card {
    position: absolute;
    bottom: 50px;
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    width: 260px;
    background: #FFFFFF;
    padding: 16px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, transform 0.3s ease;
    pointer-events: none;
    z-index: 20;
    text-align: left;
  }

  .origin-hotspot.is-active .origin-hotspot-card {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
    pointer-events: auto;
  }

  /* Desktop Arrow */
  .origin-hotspot-card::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 50%;
    transform: translateX(-50%) rotate(45deg);
    width: 12px;
    height: 12px;
    background: #FFFFFF;
  }

  /* Card Contents */
  .origin-hotspot-card__link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .origin-hotspot-card__img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    margin-bottom: 12px;
    display: block;
    background: #f4f4f4;
  }

  .origin-hotspot-card__title {
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 4px;
    font-weight: 600;
    line-height: 1.4;
    color: #000;
  }

  .origin-hotspot-card__price {
    font-size: 13px;
    color: #555;
    margin-bottom: 12px;
    display: block;
  }

  .origin-hotspot-card__btn {
    display: block;
    width: 100%;
    padding: 10px 0;
    text-align: center;
    background: #000;
    color: #fff;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: background 0.2s;
  }

  /* Hide CTA on desktop */
  .mobile-drawer-cta { display: none; }

  /* --- GLOBAL BACKDROP (MOBILE ONLY) --- */
  .origin-global-backdrop {
    display: none; /* Hidden on desktop */
  }

  /* --- HEADER TITLE --- */
  .origin-shop-look__header {
    position: absolute;
    top: 40px;
    left: 0;
    width: 100%;
    text-align: center;
    z-index: 5;
    pointer-events: none;
  }

  .origin-shop-look__title {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-weight: 600;
    color: #fff;
    background: rgba(0,0,0,0.3);
    padding: 8px 16px;
    display: inline-block;
    backdrop-filter: blur(4px);
  }

  /* =========================================
     MOBILE STYLES
     ========================================= */
  @media (max-width: 768px) {
    .desktop-img { display: none !important; }
    .mobile-img { display: block !important; }

    /* 1. THE BACKDROP */
    .origin-global-backdrop {
      display: block;
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: rgba(0, 0, 0, 0.4) !important; /* 40% Black opacity */
      backdrop-filter: blur(6px) !important; /* The Blur Effect */
      -webkit-backdrop-filter: blur(6px) !important;
      z-index: 1000; /* High z-index */
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.4s ease;
      pointer-events: none;
    }

    /* When JS adds class 'has-active-modal' to the main container */
    .origin-shop-look.has-active-modal .origin-global-backdrop {
      opacity: 1;
      visibility: visible;
      pointer-events: auto; /* Allow clicking to close */
    }

    /* 2. THE DRAWER (CARD) */
    .origin-hotspot-card {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      max-width: 100%;
      transform: translateY(110%); /* Start hidden below screen */
      margin: 0;
      border-radius: 16px 16px 0 0; /* Rounded top corners */
      padding: 24px;
      box-sizing: border-box;
      z-index: 1001; /* Above backdrop */
      box-shadow: 0 -5px 20px rgba(0,0,0,0.2);
    }

    .origin-hotspot-card::after { display: none; } /* Remove arrow */

    .origin-hotspot.is-active .origin-hotspot-card {
      transform: translateY(0);
    }

    /* 3. CARD LAYOUT (Horizontal on Mobile) */
    .origin-hotspot-card__img {
      width: 100px;
      height: 120px;
      float: left;
      margin-right: 20px;
      margin-bottom: 0;
      border-radius: 4px;
    }

    .origin-hotspot-card__details {
      display: flex;
      flex-direction: column;
      justify-content: center;
      min-height: 120px;
      /* removed overflow hidden to ensure pop up text is seen */
    }

    /* 4. THE POP-UP TEXT ("CLICK ME") */
    .mobile-drawer-cta {
      display: block;
      font-size: 10px;
      font-weight: 800;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: #333; /* Dark Grey */
      margin-bottom: 8px;
      
      /* Animation */
      opacity: 0;
      transform: translateY(15px);
      transition: all 0.5s ease 0.2s; /* 0.2s delay */
    }

    /* Animate text in when active */
    .origin-hotspot.is-active .mobile-drawer-cta {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (min-width: 769px) {
    .mobile-img { display: none !important; }
    .desktop-img { display: block !important; }
  }
</style>

<div class="origin-shop-look" id="OriginShopLook-{{ section.id }}">
  <div class="origin-shop-look__image-wrapper">
    
    {% if section.settings.heading != blank %}
      <div class="origin-shop-look__header">
        <h2 class="origin-shop-look__title">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    {% if section.settings.image_desktop %}
      <img src="{{ section.settings.image_desktop | image_url: width: 2400 }}" class="desktop-img" loading="lazy" width="{{ section.settings.image_desktop.width }}" height="{{ section.settings.image_desktop.height }}">
    {% else %}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'desktop-img' }}
    {% endif %}

    {% if section.settings.image_mobile %}
      <img src="{{ section.settings.image_mobile | image_url: width: 1200 }}" class="mobile-img" loading="lazy" width="{{ section.settings.image_mobile.width }}" height="{{ section.settings.image_mobile.height }}">
    {% else %}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'mobile-img' }}
    {% endif %}

    {% for block in section.blocks %}
      {% assign product = block.settings.product %}
      
      <div class="origin-hotspot" 
           style="top: {{ block.settings.pos_y }}%; left: {{ block.settings.pos_x }}%;"
           data-hotspot-id="{{ block.id }}">
        
        <div class="origin-hotspot__inner"></div>

        <div class="origin-hotspot-card">
          {% if product != blank %}
            <a href="{{ product.url }}" class="origin-hotspot-card__link">
              <img src="{{ product.featured_image | image_url: width: 400 }}" class="origin-hotspot-card__img" width="400" height="400">
              <div class="origin-hotspot-card__details">
                <span class="mobile-drawer-cta">{{ section.settings.mobile_cta_text }}</span>
                
                <h3 class="origin-hotspot-card__title">{{ product.title }}</h3>
                <span class="origin-hotspot-card__price">{{ product.price | money }}</span>
                <span class="origin-hotspot-card__btn">View Product</span>
              </div>
            </a>
          {% else %}
            <div class="origin-hotspot-card__img" style="background: #eee;"></div>
            <div class="origin-hotspot-card__details">
              <span class="mobile-drawer-cta">TAP TO SHOP</span>
              <h3 class="origin-hotspot-card__title">Product Title</h3>
              <span class="origin-hotspot-card__price">$100.00</span>
              <span class="origin-hotspot-card__btn">View Product</span>
            </div>
          {% endif %}
        </div>
      </div>
    {% endfor %}

    <div class="origin-global-backdrop"></div>

  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Select the main container
    const sectionContainer = document.getElementById('OriginShopLook-{{ section.id }}');
    const hotspots = sectionContainer.querySelectorAll('.origin-hotspot');
    const backdrop = sectionContainer.querySelector('.origin-global-backdrop');

    // Function to close everything
    function closeAll() {
      // Remove class from container (hides backdrop)
      sectionContainer.classList.remove('has-active-modal');
      // Remove class from all hotspots (hides cards)
      hotspots.forEach(h => h.classList.remove('is-active'));
    }

    // Loop through hotspots
    hotspots.forEach(hotspot => {
      hotspot.addEventListener('click', function(e) {
        // If clicking the link inside the card, let it go through
        if (e.target.closest('.origin-hotspot-card')) return;

        e.stopPropagation(); 
        
        const wasActive = this.classList.contains('is-active');
        
        // Reset everything first
        closeAll();
        
        // If it wasn't already open, open it
        if (!wasActive) {
          this.classList.add('is-active');
          // Activate the global backdrop via the parent container
          sectionContainer.classList.add('has-active-modal');
        }
      });
    });

    // Close when clicking the backdrop
    if(backdrop) {
      backdrop.addEventListener('click', function(e) {
        e.stopPropagation();
        closeAll();
      });
    }

    // Close when clicking strictly outside of the section
    document.addEventListener('click', function(e) {
      if (!sectionContainer.contains(e.target)) {
        closeAll();
      }
    });
  });
</script>
