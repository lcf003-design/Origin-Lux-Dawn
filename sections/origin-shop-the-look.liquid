{% schema %}
{
  "name": "Origin Shop The Look",
  "class": "origin-shop-look-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Image (Desktop)",
      "info": "High Res Editorial Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image (Mobile)",
      "info": "Portrait Mode. If blank, Desktop image will be used."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "SHOP THE LOOK"
    },
    {
      "type": "color",
      "id": "hotspot_color",
      "label": "Hotspot Color",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "mobile_cta_text",
      "label": "Mobile Helper Text",
      "default": "Tap to shop",
      "info": "Small text appearing above title on mobile."
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Product Hotspot",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
        {
          "type": "range",
          "id": "pos_x",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Horizontal Position (Left %)",
          "default": 50
        },
        {
          "type": "range",
          "id": "pos_y",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Vertical Position (Top %)",
          "default": 50
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Origin Shop The Look",
      "blocks": [
        { "type": "hotspot", "settings": { "pos_x": 40, "pos_y": 40 } },
        { "type": "hotspot", "settings": { "pos_x": 60, "pos_y": 60 } }
      ]
    }
  ]
}
{% endschema %}

<style>
  /* --- BASE CONTAINER --- */
  .origin-shop-look {
    position: relative;
    width: 100%;
    overflow: visible; 
  }

  /* Universal Image/SVG Fix */
  .origin-shop-look img,
  .origin-shop-look svg,
  .origin-shop-look picture {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
    max-width: 100%;
  }
  
  .origin-shop-look svg {
    background-color: #f4f4f4;
  }

  .origin-shop-look__image-wrapper {
    position: relative;
    width: 100%;
  }

  /* --- HOTSPOT DOTS --- */
  .origin-hotspot {
    position: absolute;
    width: 44px; /* Touch target */
    height: 44px;
    margin-left: -22px; 
    margin-top: -22px;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    -webkit-tap-highlight-color: transparent;
    border: none;
    background: transparent;
    padding: 0;
  }
  
  .origin-hotspot:focus-visible {
    outline: 2px solid {{ section.settings.hotspot_color }};
    outline-offset: 2px;
  }

  .origin-hotspot__inner {
    width: 12px;
    height: 12px;
    background-color: {{ section.settings.hotspot_color }};
    border-radius: 50%;
    position: relative;
    z-index: 2;
    transition: transform 0.3s ease;
    box-shadow: 0 2px 8px rgba(0,0,0,0.3);
  }

  /* Pulsing Animation */
  .origin-hotspot::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.hotspot_color }};
    border-radius: 50%;
    opacity: 0.4;
    animation: pulse 2s infinite;
    z-index: 1;
    pointer-events: none;
  }

  @keyframes pulse {
    0% { transform: scale(0.3); opacity: 0.8; }
    100% { transform: scale(1.5); opacity: 0; }
  }

  /* --- POPUP CARD (Default Styles) --- */
  .origin-hotspot-card {
    position: absolute; /* Default for Desktop */
    width: 260px;
    background: #FFFFFF;
    padding: 16px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease, transform 0.3s ease;
    pointer-events: none;
    z-index: 20;
    text-align: left;
    border-radius: 4px;
    /* Desktop Placement Logic handled inline below */
  }

  .origin-hotspot-card.is-visible {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  /* Desktop Arrow */
  .origin-hotspot-card::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 50%;
    transform: translateX(-50%) rotate(45deg);
    width: 12px;
    height: 12px;
    background: #FFFFFF;
  }

  /* Card Contents */
  .origin-hotspot-card__link {
    text-decoration: none;
    color: inherit;
    display: block; 
  }

  .origin-hotspot-card__img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    margin-bottom: 12px;
    display: block;
    background: #f4f4f4;
  }

  .origin-hotspot-card__title {
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 4px;
    font-weight: 600;
    line-height: 1.4;
    color: #000;
  }

  .origin-hotspot-card__price {
    font-size: 13px;
    color: #555;
    margin-bottom: 12px;
    display: block;
  }

  .origin-hotspot-card__btn {
    display: block;
    width: 100%;
    padding: 10px 0;
    text-align: center;
    background: #000;
    color: #fff;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: background 0.2s;
  }
  
  .origin-hotspot-card__btn:hover {
    background: #333;
  }

  /* Elements hidden on Desktop by default */
  .mobile-chevron { display: none; }
  .mobile-drawer-cta { display: none; }
  .origin-global-backdrop { display: none; }

  /* --- HEADER TITLE --- */
  .origin-shop-look__header {
    position: absolute;
    top: 40px;
    left: 0;
    width: 100%;
    text-align: center;
    z-index: 5;
    pointer-events: none;
  }

  .origin-shop-look__title {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-weight: 600;
    color: #fff;
    background: rgba(0,0,0,0.3);
    padding: 8px 16px;
    display: inline-block;
    backdrop-filter: blur(4px);
  }

  /* =========================================
     MOBILE STYLES (CRITICAL FIXES)
     ========================================= */
  @media (max-width: 768px) {
    /* Swap Images handled by picture tag */
    /* .desktop-img, .mobile-img removed */

    /* 1. Backdrop (Added Blur) */
    .origin-global-backdrop {
      display: block;
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      /* Semi-transparent black */
      background-color: rgba(0, 0, 0, 0.4) !important; 
      /* Blur Effect - including webkit for iOS */
      -webkit-backdrop-filter: blur(8px);
      backdrop-filter: blur(8px);
      z-index: 1000;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease;
      pointer-events: none;
    }
    
    .origin-shop-look.has-active-modal .origin-global-backdrop {
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
    }

    /* 2. Drawer Positioning (Reset to Bottom) */
    .origin-hotspot-card {
      position: fixed !important;
      bottom: 0 !important;
      left: 0 !important;
      top: auto !important;
      right: 0 !important;
      width: 100% !important;
      transform: translateY(110%) !important; /* Start hidden below */
      margin: 0 !important;
      border-radius: 16px 16px 0 0;
      padding: 20px;
      box-sizing: border-box;
      z-index: 1001;
      box-shadow: 0 -5px 25px rgba(0,0,0,0.2);
    }

    .origin-hotspot-card.is-visible {
      transform: translateY(0) !important;
    }

    /* Hide the tooltip arrow on mobile */
    .origin-hotspot-card::after { display: none; } 

    /* 3. New Layout: Text on Top, Compact Image below */
    .origin-hotspot-card__link {
      display: flex;
      flex-direction: column; /* Stack elements vertically */
      gap: 15px;
    }

    /* Text Section - Moves to Top */
    .origin-hotspot-card__details {
      width: 100%;
      text-align: left;
    }

    /* Mobile CTA Text */
    .mobile-drawer-cta {
      display: block;
      font-size: 10px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: #888;
      margin-bottom: 6px;
    }

    .origin-hotspot-card__title {
      font-size: 16px; /* Slightly larger for readability */
      margin-bottom: 4px;
    }

    .origin-hotspot-card__price {
      font-size: 14px;
      color: #333;
      margin-bottom: 0; /* Remove margin as it's now above image */
    }

    /* Bottom Row Wrapper (Image + Button) */
    .mobile-card-bottom-row {
      display: flex;
      align-items: center;
      gap: 15px;
      width: 100%;
    }

    /* Small Thumbnail Image */
    .origin-hotspot-card__img {
      width: 70px !important;
      height: 70px !important;
      object-fit: cover;
      border-radius: 6px;
      margin-bottom: 0 !important;
      flex-shrink: 0;
    }

    /* Button takes remaining space */
    .origin-hotspot-card__btn {
      flex-grow: 1;
      height: 40px; /* Consistent height */
      line-height: 40px;
      padding: 0;
      border-radius: 4px;
      font-size: 12px;
      letter-spacing: 1px;
    }
  }

  @media (min-width: 769px) {
    /* Images handled by picture tag */
    /* .desktop-img, .mobile-img removed */
    
    /* Hide the mobile wrapper div on desktop to avoid layout issues */
    .mobile-card-bottom-row {
      display: contents; /* Allows children to behave as if this wrapper didn't exist */
    }
  }
</style>

<div class="origin-shop-look" id="OriginShopLook-{{ section.id }}">
  <div class="origin-shop-look__image-wrapper">
    
    {% if section.settings.heading != blank %}
      <div class="origin-shop-look__header">
        <h2 class="origin-shop-look__title">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    <!-- IMAGE LOGIC: Responsive Picture Tag -->
    {% assign mobile_image = section.settings.image_mobile | default: section.settings.image_desktop %}
    {% if section.settings.image_desktop %}
      <picture class="origin-shop-look__picture">
        {% if section.settings.image_mobile %}
          <source media="(max-width: 768px)" srcset="{{ section.settings.image_mobile | image_url: width: 1200 }}">
        {% endif %}
        <source media="(min-width: 769px)" srcset="{{ section.settings.image_desktop | image_url: width: 2400 }}">
        {{ section.settings.image_desktop | image_url: width: 2400 | image_tag: class: 'origin-shop-look__img', loading: 'lazy' }}
      </picture>
    {% else %}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'origin-shop-look__img' }}
    {% endif %}

    <!-- 1. HOTSPOT DOTS -->
    {% for block in section.blocks %}
      <button class="origin-hotspot" 
           type="button"
           style="top: {{ block.settings.pos_y }}%; left: {{ block.settings.pos_x }}%;"
           data-target-id="hotspot-card-{{ block.id }}"
           aria-label="View product"
           aria-expanded="false">
        <div class="origin-hotspot__inner"></div>
      </button>
    {% endfor %}

    <!-- 2. POPUP CARDS (Outside of dots to prevent squashing) -->
    {% for block in section.blocks %}
      {% assign product = block.settings.product %}
      
      <!-- Inline style positions card on desktop. On mobile, CSS overrides this to fixed bottom. -->
      <div id="hotspot-card-{{ block.id }}" 
           class="origin-hotspot-card"
           role="dialog" 
           aria-modal="true"
           style="left: {{ block.settings.pos_x }}%; top: {{ block.settings.pos_y }}%; transform: translate(-50%, -120%);">
        
          {% if product != blank %}
            <a href="{{ product.url }}" class="origin-hotspot-card__link">
              
              <!-- Text Details (Will be at TOP on mobile) -->
              <div class="origin-hotspot-card__details">
                <span class="mobile-drawer-cta">{{ section.settings.mobile_cta_text }}</span>
                <h3 class="origin-hotspot-card__title">{{ product.title }}</h3>
                <span class="origin-hotspot-card__price">{{ product.price | money }}</span>
              </div>

              <!-- Image & Button Wrapper (For Mobile Side-by-Side layout at bottom) -->
              <div class="mobile-card-bottom-row">
                {% if product.featured_image %}
                  {{ product.featured_image | image_url: width: 400 | image_tag: class: 'origin-hotspot-card__img', loading: 'lazy' }}
                {% else %}
                  <div class="origin-hotspot-card__img" style="background: #eee;"></div>
                {% endif %}

                <span class="origin-hotspot-card__btn">VIEW PRODUCT</span>
              </div>

            </a>
          {% else %}
            <!-- Placeholder -->
            <div class="origin-hotspot-card__link">
              <div class="origin-hotspot-card__details">
                <span class="mobile-drawer-cta">TAP TO SHOP</span>
                <h3 class="origin-hotspot-card__title">Product Title</h3>
                <span class="origin-hotspot-card__price">$100.00</span>
              </div>
              <div class="mobile-card-bottom-row">
                <div class="origin-hotspot-card__img" style="background: #eee;"></div>
                <span class="origin-hotspot-card__btn">VIEW PRODUCT</span>
              </div>
            </div>
          {% endif %}
      </div>
    {% endfor %}

    <div class="origin-global-backdrop"></div>

  </div>
</div>

<script>
  (function() {
    const initSection = () => {
      const sectionContainer = document.getElementById('OriginShopLook-{{ section.id }}');
      if (!sectionContainer) return;

      const hotspots = sectionContainer.querySelectorAll('.origin-hotspot');
      const cards = sectionContainer.querySelectorAll('.origin-hotspot-card');
      const backdrop = sectionContainer.querySelector('.origin-global-backdrop');

      function closeAll() {
        sectionContainer.classList.remove('has-active-modal');
        hotspots.forEach(h => h.setAttribute('aria-expanded', 'false'));
        cards.forEach(c => c.classList.remove('is-visible'));
      }

      hotspots.forEach(hotspot => {
        hotspot.addEventListener('click', function(e) {
          e.stopPropagation();
          
          const targetId = this.getAttribute('data-target-id');
          const targetCard = document.getElementById(targetId);
          
          if(!targetCard) return;

          const wasVisible = targetCard.classList.contains('is-visible');
          
          // Close others first
          closeAll();
          
          if (!wasVisible) {
            targetCard.classList.add('is-visible');
            this.setAttribute('aria-expanded', 'true');
            sectionContainer.classList.add('has-active-modal');
          }
        });
      });

      if(backdrop) {
        backdrop.addEventListener('click', function(e) {
          e.stopPropagation();
          closeAll();
        });
      }

      const outsideClickListener = function(e) {
        if(sectionContainer.classList.contains('has-active-modal')) {
           // If click is NOT inside a card and NOT on a hotspot
           if (!e.target.closest('.origin-hotspot-card') && !e.target.closest('.origin-hotspot')) {
             closeAll();
           }
        }
      };
      
      document.addEventListener('click', outsideClickListener);
      
      return () => {
        document.removeEventListener('click', outsideClickListener);
      };
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initSection);
    } else {
      initSection();
    }
    
    document.addEventListener('shopify:section:load', initSection);
  })();
</script>


