{% comment %}
  Origin – Luxury Hero Banner (Tier 7)
{% endcomment %}

{%- liquid
  assign alignment = section.settings.content_alignment
  assign vertical_alignment = section.settings.vertical_alignment
  assign height_class = section.settings.section_height
  assign overlay_value = section.settings.overlay_opacity | default: 30
-%}

<section
  class="
    origin-hero
    origin-hero--align-{{ alignment }}
    origin-hero--v-{{ vertical_alignment }}
    origin-hero--height-{{ height_class }}
  "
  data-origin-hero
>
  <div class="origin-hero__media">
    <picture>
      {%- if section.settings.image_mobile != blank -%}
        <source
          media="(max-width: 749px)"
          srcset="{{ section.settings.image_mobile | image_url: width: 1400 }}"
        >
      {%- endif -%}
      {%- if section.settings.image_desktop != blank -%}
        <img
          class="origin-hero__image origin-hero__image--desktop"
          src="{{ section.settings.image_desktop | image_url: width: 2400 }}"
          alt="{{ section.settings.heading | default: shop.name }}"
          loading="lazy"
        >
      {%- endif -%}
    </picture>
    <span class="origin-hero__overlay" style="--origin-hero-overlay: {{ overlay_value }};"></span>
  </div>

  <div class="origin-hero__inner">
    <div class="origin-hero__content">
      <div class="origin-hero__content-inner">
        {% if section.settings.eyebrow != blank %}
          <p class="origin-hero__kicker">{{ section.settings.eyebrow }}</p>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h1 class="origin-hero__heading">{{ section.settings.heading }}</h1>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <div class="origin-hero__subheading">{{ section.settings.subheading }}</div>
        {% endif %}

        {% if section.settings.meta != blank %}
          <p class="origin-hero__meta">{{ section.settings.meta }}</p>
        {% endif %}

        {% if section.settings.primary_button_label != blank or section.settings.secondary_button_label != blank %}
          <div class="origin-hero__buttons">
            {% if section.settings.primary_button_label != blank and section.settings.primary_button_link != blank %}
              <a href="{{ section.settings.primary_button_link }}" class="origin-hero__button origin-hero__button--primary">
                {{ section.settings.primary_button_label }}
              </a>
            {% endif %}
            {% if section.settings.secondary_button_label != blank and section.settings.secondary_button_link != blank %}
              <a href="{{ section.settings.secondary_button_link }}" class="origin-hero__button origin-hero__button--secondary">
                {{ section.settings.secondary_button_label }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <button class="origin-hero__scroll-cue" type="button" aria-label="Scroll" data-origin-hero-scroll>
    <span class="origin-hero__scroll-icon"></span>
  </button>
</section>

{% schema %}
{
  "name": "Origin Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image (optional)",
      "info": "Shown on small screens if set. Otherwise, desktop image is used."
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow / kicker",
      "default": "New Season"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Main heading",
      "default": "Origin International Boutique"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Timeless silhouettes, crafted with intention."
    },
    {
      "type": "text",
      "id": "meta",
      "label": "Secondary text (optional)",
      "default": ""
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Vertical alignment",
      "default": "middle",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "middle",
          "label": "Middle"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ]
    },
    {
      "type": "select",
      "id": "section_height",
      "label": "Hero height",
      "default": "large",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "full",
          "label": "Full viewport"
        }
      ]
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Overlay strength",
      "default": 30
    },
    {
      "type": "text",
      "id": "primary_button_label",
      "label": "Primary button label",
      "default": "Shop handbags"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary button label",
      "default": "Explore collection"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    }
  ],
  "presets": [
    {
      "name": "Origin – Luxury Hero Banner"
    }
  ]
}
{% endschema %}
