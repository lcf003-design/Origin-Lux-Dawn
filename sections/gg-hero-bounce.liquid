{% comment %}
  GG Bouncing Hero - Ping-Pong Animation
  A massive bouncing logo experiment.
{% endcomment %}

{% style %}
  #shopify-section-{{ section.id }} {
    position: relative;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    z-index: 10;
    overflow: hidden;
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  }

  .ping-pong-container {
    position: relative;
    width: 100%;
    height: {% if section.settings.hero_height == 'adapt' %}auto{% else %}{{ section.settings.hero_height }}{% endif %};
    min-height: {{ section.settings.min_height_desktop }}vh;
    overflow: hidden;
    background: {{ section.settings.bg_color }};
    {% if section.settings.bg_image != blank %}
      background-image: url('{{ section.settings.bg_image | image_url: width: 2400 }}');
      background-size: cover;
      background-position: center;
    {% endif %}
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media screen and (max-width: 749px) {
    .ping-pong-container {
      min-height: {{ section.settings.min_height_mobile }}vh;
    }
  }

  /* The Bouncing Element */
  #bouncing-logo-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: {{ section.settings.logo_width_desktop }}%;
    max-width: 1200px;
    z-index: 20;
    will-change: transform;
    pointer-events: none;
    transition: opacity 0.5s ease;
  }

  @media screen and (max-width: 749px) {
    #bouncing-logo-{{ section.id }} {
      width: {{ section.settings.logo_width_mobile }}%;
    }
  }

  .bouncing-logo-img {
    width: 100%;
    height: auto;
    display: block;
    {% if section.settings.enable_glass %}
      filter: drop-shadow(0 20px 50px rgba(0,0,0,0.3));
    {% endif %}
  }

  /* Button Styles */
  .gg-hero-button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    min-width: {{ section.settings.button_min_width }}px; /* Enforces equal width */
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    font-size: {{ section.settings.button_font_size }}px;
    background: #fff;
    color: #000;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    text-align: center;
    transition: all 0.3s ease;
    text-decoration: none;
    line-height: 1.2;
    cursor: pointer;
  }
  .gg-hero-button:hover {
    background: #000;
    color: #fff;
    transform: translateY(-2px);
  }

  /* Button Styles */
  .gg-hero-button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    min-width: {{ section.settings.button_min_width }}px; /* Enforces equal width */
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    font-size: {{ section.settings.button_font_size }}px;
    background: #fff;
    color: #000;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    text-align: center;
    transition: all 0.3s ease;
    text-decoration: none;
    line-height: 1.2;
    cursor: pointer;
  }
  .gg-hero-button:hover {
    background: #000;
    color: #fff;
    transform: translateY(-2px);
  }

  /* Overlay content */
  .hero-v2-content {
    position: relative;
    z-index: 50;
    color: {{ section.settings.text_color }};
    pointer-events: auto;
    text-align: center;
    max-width: 800px;
    padding: 20px;
  }
{% endstyle %}

<div class="ping-pong-container" id="ping-pong-wrapper-{{ section.id }}">
  <div id="bouncing-logo-{{ section.id }}">
    {% if section.settings.logo != blank %}
      <img
        src="{{ section.settings.logo | image_url: width: 1400 }}"
        alt="Bouncing Logo"
        class="bouncing-logo-img"
        width="{{ section.settings.logo.width }}"
        height="{{ section.settings.logo.height }}"
      >
    {% else %}
      <div style="font-size: 5rem; font-weight: 900; opacity: 0.5;">ORIGIN</div>
    {% endif %}
  </div>

  <div class="hero-v2-content">
    {% if section.settings.headline != blank %}
      <h2 style="font-size: clamp(2rem, 5vw, 4rem); font-weight: 900; text-transform: uppercase;">
        {{ section.settings.headline }}
      </h2>
    {% endif %}

    <div class="flex gap-4 mt-8 justify-center flex-wrap">
      {% for block in section.blocks %}
        <a
          href="{{ block.settings.link }}"
          class="gg-hero-button"
        >
          {{ block.settings.label }}
        </a>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  (function() {
    const sectionId = '{{ section.id }}';
    const wrapper = document.getElementById(`ping-pong-wrapper-${sectionId}`);
    const logo = document.getElementById(`bouncing-logo-${sectionId}`);
    
    if (!wrapper || !logo) return;

    let x = Math.random() * 50;
    let y = Math.random() * 50;
    let vx = {{ section.settings.speed }} * (Math.random() > 0.5 ? 1 : -1);
    let vy = {{ section.settings.speed }} * (Math.random() > 0.5 ? 1 : -1);
    
    let wrapperWidth, wrapperHeight, logoWidth, logoHeight;

    // Squash & Stretch Variables
    let scaleX = 1;
    let scaleY = 1;
    const elasticity = 0.15;    // How fast it returns to normal
    const squishFactor = 0.15;  // Impact distortion amount

    function updateMetrics() {
      wrapperWidth = wrapper.offsetWidth;
      wrapperHeight = wrapper.offsetHeight;
      logoWidth = logo.offsetWidth;
      logoHeight = logo.offsetHeight;

      if (x + logoWidth > wrapperWidth) {
        x = Math.max(0, wrapperWidth - logoWidth);
      }
      if (y + logoHeight > wrapperHeight) {
        y = Math.max(0, wrapperHeight - logoHeight);
      }
    }

    function animate() {
      x += vx;
      y += vy;

      // Restore shape (elasticity)
      scaleX += (1 - scaleX) * elasticity;
      scaleY += (1 - scaleY) * elasticity;

      // Bounce horizontal
      if (x <= 0) {
        x = 0;
        vx *= -1;
        // Hit Left: Squish Width, Stretch Height
        scaleX = 1 - squishFactor;
        scaleY = 1 + squishFactor;
      } else if (x + logoWidth >= wrapperWidth) {
        x = wrapperWidth - logoWidth;
        vx *= -1;
        // Hit Right: Squish Width, Stretch Height
        scaleX = 1 - squishFactor;
        scaleY = 1 + squishFactor;
      }

      // Bounce vertical
      if (y <= 0) {
        y = 0;
        vy *= -1;
        // Hit Top: Squish Height, Stretch Width
        scaleX = 1 + squishFactor;
        scaleY = 1 - squishFactor;
      } else if (y + logoHeight >= wrapperHeight) {
        y = wrapperHeight - logoHeight;
        vy *= -1;
        // Hit Bottom: Squish Height, Stretch Width
        scaleX = 1 + squishFactor;
        scaleY = 1 - squishFactor;
      }

      // Apply transform with Squash & Stretch
      logo.style.transform = `translate(${x}px, ${y}px) scale(${scaleX.toFixed(3)}, ${scaleY.toFixed(3)})`;
      requestAnimationFrame(animate);
    }

    window.addEventListener('resize', updateMetrics);
    updateMetrics();
    
    setTimeout(() => {
      updateMetrics();
      animate();
    }, 100);

  })();
</script>

