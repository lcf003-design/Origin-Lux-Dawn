  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Bouncing Logo"
    },
    {
      "type": "range",
      "id": "logo_width_desktop",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Logo Width (Desktop)",
      "default": 30
