{% schema %}
{
  "name": "Origin Footer V5 (Pure)",
  "settings": [
    {
      "type": "header",
      "content": "BRANDING"
    },
    {
      "type": "text",
      "id": "brand_name",
      "label": "Big Logo Text",
      "default": "ORIGIN",
      "info": "Keep it short for max impact."
    },
    {
      "type": "range",
      "id": "logo_size",
      "min": 10,
      "max": 30,
      "step": 1,
      "unit": "vw",
      "label": "Logo Size",
      "default": 20
    },
    {
      "type": "header",
      "content": "NAVIGATION"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Footer Menu",
      "default": "footer"
    },
    {
      "type": "header",
      "content": "SOCIAL MEDIA"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show Social Icons",
      "default": true
    },
    {
      "type": "paragraph",
      "content": "To add social links, go to Theme Settings (Gear Icon) > Social Media."
    },
    {
      "type": "header",
      "content": "DESIGN"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top Spacing",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Origin Footer V5 (Pure)"
    }
  ]
}
{% endschema %}

<footer class="origin-footer" style="--origin-footer-bg: {{ section.settings.bg_color }}; --origin-footer-text: {{ section.settings.text_color }}; --origin-footer-padding-top: {{ section.settings.padding_top }}px; --origin-footer-logo-size: {{ section.settings.logo_size }}vw;">
  
  <div class="footer-top">
    <div class="footer-grid">
      
      <div class="footer-links-area">
        {% if section.settings.menu != blank %}
          {% for link in linklists[section.settings.menu].links %}
            <div class="footer-col">
              {% if link.links != blank %}
                <h4 class="footer-heading">{{ link.title }}</h4>
                <ul class="footer-sublinks">
                  {% for sublink in link.links %}
                    <li><a href="{{ sublink.url }}">{{ sublink.title }}</a></li>
                  {% endfor %}
                </ul>
              {% else %}
                <a href="{{ link.url }}" class="footer-stand-alone-link">{{ link.title }}</a>
              {% endif %}
            </div>
          {% endfor %}
        {% endif %}
      </div>

      <div class="footer-col newsletter-col">
        <h4 class="footer-heading">NEWSLETTER</h4>
        <p class="newsletter-text">Subscribe for exclusive access.</p>
        {% form 'customer', class: 'newsletter-form-wrap' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="newsletter-input-group">
            <input type="email" name="contact[email]" class="newsletter-input" placeholder="EMAIL ADDRESS" required>
            <button type="submit" class="newsletter-btn">JOIN</button>
          </div>
        {% endform %}
      </div>
    </div>
  </div>

  <div class="footer-utility-bar">
    
    <div class="utility-left">
      {% if section.settings.show_social %}
        <div class="social-icons">
           <span class="social-label">FOLLOW US: &nbsp;</span>
           {%- if settings.social_instagram_link != blank -%}
            <a href="{{ settings.social_instagram_link }}" class="social-link">INSTAGRAM</a>
           {%- endif -%}
           {%- if settings.social_tiktok_link != blank -%}
            <a href="{{ settings.social_tiktok_link }}" class="social-link">TIKTOK</a>
           {%- endif -%}
           {%- if settings.social_facebook_link != blank -%}
            <a href="{{ settings.social_facebook_link }}" class="social-link">FACEBOOK</a>
           {%- endif -%}
           {%- if settings.social_youtube_link != blank -%}
            <a href="{{ settings.social_youtube_link }}" class="social-link">YOUTUBE</a>
           {%- endif -%}
           {%- if settings.social_twitter_link != blank -%}
            <a href="{{ settings.social_twitter_link }}" class="social-link">X</a>
           {%- endif -%}
        </div>
      {% endif %}
    </div>

    <div class="utility-right">
      <span class="copyright-text">&copy; {{ 'now' | date: "%Y" }} {{ shop.name | upcase }}. ALL RIGHTS RESERVED.</span>
    </div>

  </div>

  <div class="footer-branding">
    <h1 class="huge-logo-text">
      {{ section.settings.brand_name }}
    </h1>
  </div>

</footer>
