{%- comment -%}
  Origin – Luxury Carousel (Tier 10)
  Scroll-snap carousel with editorial slides.
{%- endcomment -%}

{%- liquid
  assign height_class = section.settings.height
  assign align_class = section.settings.alignment
-%}

<section class="origin-carousel origin-carousel--{{ height_class }} origin-carousel--align-{{ align_class }}">
  <div class="origin-carousel__track" role="list">
    {%- for block in section.blocks -%}
      <article class="origin-carousel__slide" role="listitem" {{ block.shopify_attributes }}>
        <div class="origin-carousel__media">
          {%- if block.settings.mobile_image != blank -%}
            <picture>
              <source media="(max-width: 749px)" srcset="{{ block.settings.mobile_image | image_url: width: 1400 }}">
              <img
                src="{{ block.settings.image | image_url: width: 2400 }}"
                alt="{{ block.settings.heading | default: 'Carousel slide' }}"
                loading="lazy"
              >
            </picture>
          {%- elsif block.settings.image != blank -%}
            <img
              src="{{ block.settings.image | image_url: width: 2400 }}"
              alt="{{ block.settings.heading | default: 'Carousel slide' }}"
              loading="lazy"
            >
          {%- endif -%}
        </div>
        <div class="origin-carousel__content">
          {% if block.settings.eyebrow != blank %}
            <p class="origin-carousel__eyebrow origin-eyebrow">{{ block.settings.eyebrow }}</p>
          {% endif %}
          {% if block.settings.heading != blank %}
            <h2 class="origin-carousel__heading origin-heading-lg">{{ block.settings.heading }}</h2>
          {% endif %}
          {% if block.settings.body != blank %}
            <p class="origin-carousel__body origin-body">{{ block.settings.body }}</p>
          {% endif %}
          {% if block.settings.primary_label != blank and block.settings.primary_link != blank %}
            <a href="{{ block.settings.primary_link }}" class="origin-carousel__button">
              {{ block.settings.primary_label }}
            </a>
          {% endif %}
        </div>
      </article>
    {%- endfor -%}
  </div>
</section>

{% schema %}
{
  "name": "Origin – Luxury Carousel",
  "settings": [
    {
      "type": "select",
      "id": "height",
      "label": "Height",
      "default": "large",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ]
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Content alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Desktop image" },
        { "type": "image_picker", "id": "mobile_image", "label": "Mobile image (optional)" },
        { "type": "text", "id": "eyebrow", "label": "Eyebrow" },
        { "type": "textarea", "id": "heading", "label": "Heading", "default": "Editorial moment" },
        { "type": "textarea", "id": "body", "label": "Body", "default": "Layered textures, sculptural silhouettes." },
        { "type": "text", "id": "primary_label", "label": "Button label", "default": "Discover" },
        { "type": "url", "id": "primary_link", "label": "Button link" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Origin – Luxury Carousel",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
