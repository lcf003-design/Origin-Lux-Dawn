{% schema %}
{
  "name": "Fresh Start GG Header",
  "class": "fresh-start-header-section",
  "settings": [
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image",
      "info": "Upload your main logo here (transparent PNG/SVG recommended)"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text (fallback)",
      "default": "GUCCI"
    },
    {
      "type": "color",
      "id": "huge_logo_color",
      "label": "Huge Logo Text Color",
      "default": "#FFFFFF",
      "info": "Specific color for the large fallback text."
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "font_picker",
      "id": "font_huge_logo",
      "label": "Huge Logo Font",
      "default": "serif"
    },
    {
      "type": "font_picker",
      "id": "font_menu",
      "label": "Menu & UI Font",
      "default": "sans-serif"
    },
    {
      "type": "header",
      "content": "Logo Layout & Sizing"
    },
    {
      "type": "range",
      "id": "hero_logo_width_desktop",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Container Width (Desktop)",
      "default": 60
    },
    {
      "type": "range",
      "id": "logo_vertical_position",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Vertical Position (Y)",
      "default": 40
    },
    {
      "type": "header",
      "content": "Sticky Header Logo"
    },
    {
      "type": "range",
      "id": "sticky_logo_height",
      "min": 20,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Sticky Logo Height",
      "default": 32,
      "info": "Adjust to make the logo fill the bar height."
    },
    {
      "type": "header",
      "content": "Sticky Bar Colors (Scrolled / Standard)"
    },
    {
      "type": "color",
      "id": "header_bg_color_shrunk",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "header_text_color_shrunk",
      "label": "Text & Icons Color",
      "default": "#111111"
    },
    {
      "type": "color",
      "id": "header_text_color_initial",
      "label": "Initial Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Menu & Search Overlay"
    },
    {
      "type": "color",
      "id": "menu_text_color",
      "label": "Menu & Search Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ],
  "presets": [
    {
      "name": "Fresh Start GG Header"
    }
  ]
}
{% endschema %}

{% style %}
  /* Load the selected fonts */
  {{ section.settings.font_huge_logo | font_face: font_display: 'swap' }}
  {{ section.settings.font_menu | font_face: font_display: 'swap' }}

  /* --- VARS --- */
  .fresh-start-header-section {
    position: relative;
    z-index: 100;
    height: 0; /* occupy no flow space initially */
    --header-transition: all 0.4s ease-out;
    --font-huge-logo: {{ section.settings.font_huge_logo.family }}, {{ section.settings.font_huge_logo.fallback_families }};
    --font-menu: {{ section.settings.font_menu.family }}, {{ section.settings.font_menu.fallback_families }};
    --menu-text-color: {{ section.settings.menu_text_color }};
  }

  /* 1. THE STICKY BAR (Interactive Layer) */
  .fresh-start-bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 16px 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 100; /* Top UI Layer */
    transition: background-color 0.4s ease, color 0.4s ease, box-shadow 0.4s ease;
    pointer-events: none; /* Let clicks pass through empty space */
    font-family: var(--font-menu);
    opacity: 1; /* Always visible trigger area */
  }

  /* Enable clicks on actual interactive children */
  .fresh-start-bar > * {
    pointer-events: auto;
  }

  /* Scrolled State */
  .fresh-start-header-section.is-scrolled .fresh-start-bar {
    background-color: {{ section.settings.header_bg_color_shrunk }};
    color: {{ section.settings.header_text_color_shrunk }};
    box-shadow: 0 4px 30px rgba(0,0,0,0.08);
    pointer-events: auto; /* Bar becomes solid */
  }

  /* Initial State Colors */
  .fresh-start-bar {
    color: {{ section.settings.header_text_color_initial }};
  }

  /* 2. THE HUGE OVERLAY (Passive Layer) */
  .fresh-start-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 40; /* Below Hero Buttons (Z-70) */
    display: flex;
    justify-content: center;
    align-items: flex-start; /* Align based on top % */
    pointer-events: none !important; /* CRITICAL: NEVER BLOCK CLICKS */
    transition: opacity 0.5s ease, visibility 0.5s ease;
  }

  .fresh-start-logo-wrapper {
    position: relative;
    width: {{ section.settings.hero_logo_width_desktop }}%;
    top: {{ section.settings.logo_vertical_position }}vh;
    transform: translateY(-50%); /* Center on the top % point */
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1), opacity 0.4s ease;
    will-change: transform, opacity;
    text-align: center;
  }

  .fresh-start-logo-img {
    width: 100%;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  .fresh-start-logo-text {
    font-family: var(--font-huge-logo);
    font-size: 13.5vw;
    line-height: 1;
    color: {{ section.settings.huge_logo_color }};
    text-transform: uppercase;
    margin: 0;
  }

  /* Scrolled Transform: Shrink and Fade Huge Logo */
  .fresh-start-header-section.is-scrolled .fresh-start-overlay {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  }

  .fresh-start-header-section.is-scrolled .fresh-start-logo-wrapper {
    transform: translateY(-50%) scale(0.8);
  }

  /* 3. STICKY LOGO (Appears on scroll) */
  .fresh-start-sticky-logo {
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.4s ease;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-family: var(--font-huge-logo);
    font-size: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fresh-start-sticky-logo img {
    height: {{ section.settings.sticky_logo_height }}px;
    width: auto;
  }

  .fresh-start-header-section.is-scrolled .fresh-start-sticky-logo {
    opacity: 1;
    transform: translateY(0);
  }

  /* Utils */
  .fresh-start-icon-btn {
    background: transparent;
    border: none;
    padding: 8px;
    cursor: pointer;
    color: inherit;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fresh-start-icon-btn svg {
    width: 24px;
    height: 24px;
    stroke-width: 2px;
  }

  /* --- MENU DRAWER --- */
  .fresh-start-drawer-base {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.4);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.4s ease, visibility 0.4s ease;
    z-index: 2147483646 !important;
    backdrop-filter: blur(5px);
    pointer-events: none; /* Default none */
  }

  .fresh-start-drawer-base.is-open {
    opacity: 1;
    visibility: visible;
    pointer-events: auto; /* Active when open */
  }

  .fresh-start-drawer-content {
    background: linear-gradient(145deg, rgba(15,15,15,0.95) 0%, rgba(30,30,30,0.98) 100%);
    box-shadow: 10px 0 30px rgba(0,0,0,0.5);
    width: 360px;
    max-width: 90vw;
    height: 100%;
    padding: 40px 30px;
    transform: translateX(-102%);
    transition: transform 0.5s cubic-bezier(0.19, 1, 0.22, 1);
    display: flex;
    flex-direction: column;
    color: var(--menu-text-color);
    overflow-y: auto;
    font-family: var(--font-menu);
  }

  .fresh-start-drawer-base.is-open .fresh-start-drawer-content {
    transform: translateX(0);
  }

  /* Menu Items */
  .fresh-start-menu-list {
    list-style: none;
    padding: 0;
    margin: 40px 0;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .fresh-start-menu-link {
    text-decoration: none;
    color: inherit;
    font-size: 22px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: block;
    transition: opacity 0.3s;
  }

  .fresh-start-menu-link:hover {
    opacity: 0.7;
  }

  /* --- HAMBURGER ANIMATION --- */
  .origin-hamburger-box {
    width: 24px;
    height: 24px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .origin-hamburger-line {
    width: 24px;
    height: 2px;
    background-color: currentColor;
    border-radius: 2px;
    position: absolute;
    transition: transform 0.4s ease, opacity 0.4s ease;
  }

  .origin-hamburger-line:nth-child(1) { transform: translateY(-7px); }
  .origin-hamburger-line:nth-child(2) { transform: translateY(0); }
  .origin-hamburger-line:nth-child(3) { transform: translateY(7px); }

  .fresh-start-icon-btn.is-active .origin-hamburger-line:nth-child(1) { transform: rotate(45deg); }
  .fresh-start-icon-btn.is-active .origin-hamburger-line:nth-child(2) { opacity: 0; transform: translateX(10px); }
  .fresh-start-icon-btn.is-active .origin-hamburger-line:nth-child(3) { transform: rotate(-45deg); }
{% endstyle %}

<div
  id="fresh-start-trigger"
  style="position: absolute; top: 100px; left: 0; width: 1px; height: 1px; visibility: hidden; pointer-events: none;"
></div>

<!-- 1. Huge Passive Overlay (Pointer Events None) -->
<div class="fresh-start-overlay">
  <div class="fresh-start-logo-wrapper">
    {% if section.settings.logo_image != blank %}
      <img
        src="{{ section.settings.logo_image | image_url: width: 1400 }}"
        class="fresh-start-logo-img"
        alt="{{ section.settings.logo_image.alt }}"
        width="{{ section.settings.logo_image.width }}"
        height="{{ section.settings.logo_image.height }}"
      >
    {% else %}
      <h1 class="fresh-start-logo-text">{{ section.settings.logo_text }}</h1>
    {% endif %}
  </div>
</div>

<!-- 2. Sticky Bar -->
<header class="fresh-start-bar">
  <!-- LEFT: Menu Trigger -->
  <div class="fresh-start-nav-left">
    <button class="fresh-start-icon-btn" id="fs-menu-trigger" aria-label="Menu">
      <div class="origin-hamburger-box">
        <span class="origin-hamburger-line"></span>
        <span class="origin-hamburger-line"></span>
        <span class="origin-hamburger-line"></span>
      </div>
    </button>
  </div>

  <!-- CENTER: Sticky Logo -->
  <div class="fresh-start-sticky-logo">
    {% if section.settings.logo_image != blank %}
      <img
        src="{{ section.settings.logo_image | image_url: width: 400 }}"
        alt="{{ section.settings.logo_image.alt }}"
        width="{{ section.settings.logo_image.width }}"
        height="{{ section.settings.logo_image.height }}"
      >
    {% else %}
      <span>{{ section.settings.logo_text }}</span>
    {% endif %}
  </div>

  <!-- RIGHT: Search & Cart -->
  <div class="fresh-start-nav-right" style="display: flex; gap: 16px;">
    <!-- Search Trigger -->
    <button class="fresh-start-icon-btn" id="fs-search-trigger" aria-label="Search">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <circle cx="11" cy="11" r="8"/><path d="M21 21l-4.35-4.35"/>
      </svg>
    </button>

    <!-- Account (Optional) -->
    {% if shop.customer_accounts_enabled %}
      <a href="{{ routes.account_url }}" class="fresh-start-icon-btn">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/>
        </svg>
      </a>
    {% endif %}

    <!-- Cart -->
    <a href="{{ routes.cart_url }}" class="fresh-start-icon-btn" aria-label="Cart">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path d="M9 20a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-7-2h7a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-7a2 2 0 0 0-2 2v7a2 2 0 0 0 2 2zM6 5H4V3h2l.6 3h13.8l.6-3H23v2h-2"/><path d="M6 5l1.5 10h11L20 5"/>
      </svg>
    </a>
  </div>
</header>

<!-- 3. DRAWER OVERLAYS -->
<!-- Menu Drawer -->
<div class="fresh-start-drawer-base" id="fs-menu-overlay">
  <div class="fresh-start-drawer-content">
    <nav>
      <ul class="fresh-start-menu-list">
        {% for link in linklists[section.settings.menu].links %}
          <li>
            <a href="{{ link.url }}" class="fresh-start-menu-link">{{ link.title }}</a>
            <!-- Submenu logic can be expanded here if needed -->
          </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</div>

<!-- Search Overlay -->
<div class="fresh-start-drawer-base" id="fs-search-overlay" style="z-index: 2147483647 !important;">
  <div
    class="origin-search-container"
    style="background: rgba(10,10,10,0.95); width: 100vw; height: 100vh; position: fixed; top: 0; left: 0;"
  >
    <button
      class="origin-search-close"
      id="fs-search-close"
      style="position: absolute; top: 30px; right: 30px; background: none; border: none; color: white; cursor: pointer;"
    >
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path d="M18 6L6 18M6 6l12 12"/>
      </svg>
    </button>

    <form
      action="{{ routes.search_url }}"
      method="get"
      role="search"
      class="origin-search-form"
      style="width: 80%; max-width: 600px;"
    >
      <input
        type="search"
        name="q"
        class="origin-search-input"
        placeholder="Search..."
        style="width: 100%; font-size: 32px; background: transparent; border: none; border-bottom: 2px solid white; color: white; padding: 10px;"
      >
    </form>
  </div>
</div>

<script>
  (function () {
    // --- SCROLL LOGIC ---
    const section = document.querySelector('.fresh-start-header-section');
    const trigger = document.getElementById('fresh-start-trigger');

    if ('IntersectionObserver' in window && trigger && section) {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (!entry.isIntersecting && entry.boundingClientRect.top < 0) {
              section.classList.add('is-scrolled');
            } else {
              section.classList.remove('is-scrolled');
            }
          });
        },
        { threshold: 0 }
      );
      observer.observe(trigger);
    } else {
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) section.classList.add('is-scrolled');
        else section.classList.remove('is-scrolled');
      });
    }

    // --- DRAWER LOGIC ---
    const menuBtn = document.getElementById('fs-menu-trigger');
    const menuOverlay = document.getElementById('fs-menu-overlay');
    const searchBtn = document.getElementById('fs-search-trigger');
    const searchOverlay = document.getElementById('fs-search-overlay');
    const searchClose = document.getElementById('fs-search-close');

    function toggleDrawer(overlay, isOpen) {
      if (isOpen) {
        overlay.classList.add('is-open');
        document.body.style.overflow = 'hidden';
      } else {
        overlay.classList.remove('is-open');
        document.body.style.overflow = '';
      }
    }

    if (menuBtn && menuOverlay) {
      menuBtn.addEventListener('click', (e) => {
        e.preventDefault();
        const isOpen = menuOverlay.classList.contains('is-open');
        toggleDrawer(menuOverlay, !isOpen);
        if (!isOpen) menuBtn.classList.add('is-active');
        else menuBtn.classList.remove('is-active');
      });

      menuOverlay.addEventListener('click', (e) => {
        if (e.target === menuOverlay) {
          toggleDrawer(menuOverlay, false);
          menuBtn.classList.remove('is-active');
        }
      });
    }

    if (searchBtn && searchOverlay) {
      searchBtn.addEventListener('click', (e) => {
        e.preventDefault();
        toggleDrawer(searchOverlay, true);
      });

      if (searchClose) {
        searchClose.addEventListener('click', (e) => {
          e.preventDefault();
          toggleDrawer(searchOverlay, false);
        });
      }
    }
  })();
</script>
