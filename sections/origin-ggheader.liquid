{% schema %}
{
  "name": "Origin GG Header",
  "class": "origin-gucci-header-section",
  "settings": [
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image",
      "info": "Upload your main logo here (transparent PNG/SVG recommended)"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text (fallback)",
      "default": "GUCCI"
    },
    {
      "type": "color",
      "id": "huge_logo_color",
      "label": "Huge Logo Text Color",
      "default": "#FFFFFF",
      "info": "Specific color for the large fallback text."
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "font_picker",
      "id": "font_huge_logo",
      "label": "Huge Logo Font",
      "default": "serif"
    },
    {
      "type": "font_picker",
      "id": "font_menu",
      "label": "Menu & UI Font",
      "default": "sans-serif"
    },
    {
      "type": "header",
      "content": "Huge Logo Sizing"
    },
    {
      "type": "checkbox",
      "id": "full_width_logo",
      "label": "Stretch Logo to Screen Edges",
      "default": true,
      "info": "Allows the text/image to go full width."
    },
    {
      "type": "range",
      "id": "huge_logo_size_desktop",
      "min": 5,
      "max": 30,
      "step": 0.5,
      "unit": "vw",
      "label": "Font Size (Desktop)",
      "default": 13.5,
      "info": "Adjust to fit text on one line."
    },
    {
      "type": "range",
      "id": "huge_logo_size_mobile",
      "min": 5,
      "max": 30,
      "step": 0.5,
      "unit": "vw",
      "label": "Font Size (Mobile)",
      "default": 18
    },
    {
      "type": "range",
      "id": "hero_logo_width_desktop",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Image Width (Desktop)",
      "default": 60,
      "info": "Only applies if using an Image Logo."
    },
    {
      "type": "range",
      "id": "hero_logo_width_mobile",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Image Width (Mobile)",
      "default": 80
    },
    {
      "type": "range",
      "id": "logo_vertical_position",
      "min": 10,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Huge Logo Vertical Position",
      "default": 40,
      "info": "Distance from top of screen."
    },
    {
      "type": "header",
      "content": "Sticky Bar Colors (Scrolled / Standard)"
    },
    {
      "type": "color",
      "id": "header_bg_color_shrunk",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "header_text_color_shrunk",
      "label": "Text & Icons Color",
      "default": "#111111"
    },
    {
      "type": "header",
      "content": "Initial Colors (Homepage Overlay)"
    },
    {
      "type": "color",
      "id": "header_text_color_initial",
      "label": "Icons & Small Logo Color",
      "default": "#FFFFFF",
      "info": "Color for the sticky bar icons before scrolling on Homepage."
    },
    {
      "type": "header",
      "content": "Menu & Search Overlay"
    },
    {
      "type": "color",
      "id": "menu_text_color",
      "label": "Menu & Search Text Color",
      "default": "#FFFFFF",
      "info": "Color of text inside the hamburger menu and search screen."
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ],
  "presets": [
    {
      "name": "Origin GG Header"
    }
  ]
}
{% endschema %}
{% style %}
  /* Load the selected fonts */
  {{ section.settings.font_huge_logo | font_face: font_display: 'swap' }}
  {{ section.settings.font_menu | font_face: font_display: 'swap' }}

  /* --- VARS --- */
  .origin-gucci-header-section {
    --header-transition: all 0.4s ease-out;
    --logo-width-desktop: {{ section.settings.hero_logo_width_desktop }}%;
    --logo-width-mobile: {{ section.settings.hero_logo_width_mobile }}%;
    --logo-vertical-pos: {{ section.settings.logo_vertical_position }}vh;

    --header-bg-shrunk: {{ section.settings.header_bg_color_shrunk }};
    --header-text-shrunk: {{ section.settings.header_text_color_shrunk }};
    --header-text-initial: {{ section.settings.header_text_color_initial }};
    --menu-text-color: {{ section.settings.menu_text_color }};
    --huge-logo-text-color: {{ section.settings.huge_logo_color }};

    --huge-logo-size-desktop: {{ section.settings.huge_logo_size_desktop }}vw;
    --huge-logo-size-mobile: {{ section.settings.huge_logo_size_mobile }}vw;

    /* FONTS */
    --font-huge-logo: {{ section.settings.font_huge_logo.family }}, {{ section.settings.font_huge_logo.fallback_families }};
    --font-menu: {{ section.settings.font_menu.family }}, {{ section.settings.font_menu.fallback_families }};
  }

  /* --- WRAPPER (HOMEPAGE DEFAULT) --- */
  .origin-gucci-header {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 0;
    z-index: 20000; /* Increased to 20000 to beat Hero Noise(9998) & Preloader(10000) */
    pointer-events: none;
  }

  /* --- STICKY TOP BAR --- */
  .origin-sticky-bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 16px 24px;
    box-sizing: border-box;
    transition: var(--header-transition);
    background-color: transparent;
    color: var(--header-text-initial);
    pointer-events: none;
    font-family: var(--font-menu);
  }

  /* Shrunk State (Scroll) */
  .origin-gucci-header.is-shrunk .origin-sticky-bar {
    background-color: var(--header-bg-shrunk);
    color: var(--header-text-shrunk);
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    /* padding-top: 12px; REMOVED TO PREVENT LAYOUT SHIFT DURING MORPH */
    /* padding-bottom: 12px; REMOVED TO PREVENT LAYOUT SHIFT DURING MORPH */
  }

  /* --- STICKY BAR LOGO --- */
  .origin-sticky-bar__logo {
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    /* transition: var(--header-transition); Conflict with JS scroll logic */
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: none;
  }

  .origin-sticky-bar__logo a {
    display: block;
    line-height: 0;
    text-decoration: none;
    color: inherit;
    pointer-events: auto;
  }

  .origin-sticky-bar__logo img {
    height: 32px;
    width: auto;
    display: block;
  }

  .origin-sticky-bar__logo span {
    font-size: 20px;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    font-family: var(--font-huge-logo);
  }

  .origin-gucci-header.is-shrunk .origin-sticky-bar__logo {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: auto;
  }

  /* --- HUGE LOGO OVERLAY --- */
  .origin-huge-logo-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 40;
    pointer-events: none;
    display: flex;
    justify-content: center;
    /* transition: opacity 0.4s ease, transform 0.4s ease, visibility 0.4s; REPLACED BY JS SCROLL */
    transform-origin: center top;
    will-change: transform, opacity;
  }

  .origin-huge-logo-inner {
    margin-top: var(--logo-vertical-pos);
    transform: translateY(-50%);
    width: var(--logo-width-desktop);
    max-width: 1200px;
    text-align: center;
    padding: 0 20px;
    backface-visibility: hidden; /* Fix for Safari flicker */
    will-change: transform, opacity; /* Hint for browser optimization */
  }

  .origin-huge-logo-inner.is-full-width {
    width: 100vw;
    max-width: none;
    padding: 0;
  }

  .origin-huge-logo-img {
    width: 100%;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  .origin-huge-logo-text {
    font-size: var(--huge-logo-size-desktop);
    line-height: 1;
    font-family: var(--font-huge-logo);
    text-transform: uppercase;
    margin: 0;
    white-space: nowrap;
    color: var(--huge-logo-text-color) !important;
  }

  .origin-gucci-header.is-shrunk .origin-huge-logo-wrapper {
    /* Handled by JS now */
    /* opacity: 0;
    visibility: hidden;
    transform: scale(0.8) translateY(-100px); */
  }

  /* --- SMART HEADER: STANDARD PAGE OVERRIDES --- */
  .origin-gucci-header.is-standard-page {
    position: sticky;
    top: 0;
    height: auto;
    background-color: var(--header-bg-shrunk);
    border-bottom: 1px solid rgba(0,0,0,0.05);
  }

  .origin-gucci-header.is-standard-page .origin-sticky-bar {
    position: relative;
    background-color: transparent;
    color: var(--header-text-shrunk);
    padding-top: 12px;
    padding-bottom: 12px;
  }

  .origin-gucci-header.is-standard-page .origin-sticky-bar__logo {
    opacity: 1;
    visibility: visible;
    transform: none;
    pointer-events: auto;
  }

  .origin-gucci-header.is-standard-page .origin-huge-logo-wrapper {
    display: none !important;
  }

  /* --- ICONS & MENU ACTIONS --- */
  .origin-sticky-bar__menu,
  .origin-sticky-bar__actions {
    display: flex;
    align-items: center;
    gap: 16px;
    z-index: 2147483647;
    pointer-events: auto !important;
    position: relative;
  }

  .origin-sticky-bar__actions {
    justify-content: flex-end;
  }

  .origin-sticky-button,
  .origin-icon-button {
    background: transparent;
    border: none;
    padding: 8px;
    cursor: pointer !important;
    color: inherit;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: var(--header-transition);
    pointer-events: auto !important;
    text-decoration: none;
    position: relative;
    overflow: hidden;
  }

  /* --- ANIMATED HAMBURGER ICON --- */
  .origin-hamburger-box {
    width: 24px;
    height: 24px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .origin-hamburger-line {
    width: 24px;
    height: 2px;
    background-color: currentColor;
    border-radius: 2px;
    position: absolute;
    transition: transform 0.4s ease, opacity 0.4s ease;
  }

  .origin-hamburger-line:nth-child(1) { transform: translateY(-7px); }
  .origin-hamburger-line:nth-child(2) { transform: translateY(0); }
  .origin-hamburger-line:nth-child(3) { transform: translateY(7px); }

  /* Active State (The X) */
  .origin-sticky-button.is-active .origin-hamburger-line:nth-child(1) {
    transform: rotate(45deg);
  }
  .origin-sticky-button.is-active .origin-hamburger-line:nth-child(2) {
    opacity: 0;
    transform: translateX(10px);
  }
  .origin-sticky-button.is-active .origin-hamburger-line:nth-child(3) {
    transform: rotate(-45deg);
  }

  /* --- MOBILE STYLES --- */
  @media (max-width: 749px) {
    .origin-huge-logo-inner { width: var(--logo-width-mobile); }
    .origin-huge-logo-inner.is-full-width { width: 100vw; }
    .origin-huge-logo-text { font-size: var(--huge-logo-size-mobile); }
    .origin-sticky-bar { padding: 12px 16px; }
    .origin-sticky-bar__actions { gap: 8px; }
    .origin-icon-button, .origin-sticky-button { padding: 6px; }
  }

  /* --- DRAWER COMMONS --- */
  /* --- DRAWER COMMONS --- */
  .origin-overlay-base {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.4);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.4s ease, visibility 0.4s ease;
    z-index: 2147483647 !important; /* Force MAX z-index to overlay everything */
    backdrop-filter: blur(5px);
  }

  .origin-overlay-base.is-open {
    opacity: 1;
    visibility: visible;
  }

  /* --- MENU DRAWER --- */
  .origin-menu-drawer {
    /* Premium dark gradient */
    background: linear-gradient(145deg, rgba(15,15,15,0.95) 0%, rgba(30,30,30,0.98) 100%);
    box-shadow: 10px 0 30px rgba(0,0,0,0.5);
    width: 360px;
    max-width: 90vw;
    height: 100%;
    padding: 40px 30px;
    transform: translateX(-102%);
    transition: transform 0.5s cubic-bezier(0.19, 1, 0.22, 1);
    display: flex;
    flex-direction: column;
    color: var(--menu-text-color);
    overflow-y: auto;
    font-family: var(--font-menu);
  }

  .origin-overlay-base.is-open .origin-menu-drawer {
    transform: translateX(0);
  }

  .origin-menu-close {
    display: none;
  }

  .origin-menu-list {
    list-style: none;
    padding: 0;
    margin: 40px 0 0 0;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .origin-menu-item {
    border-bottom: 1px solid rgba(255,255,255,0.08);
    opacity: 0;
    transform: translateY(15px);
  }

  /* Staggered Animation Trigger */
  .origin-overlay-base.is-open .origin-menu-item {
    animation: originFadeSlideUp 0.6s forwards cubic-bezier(0.2, 0.8, 0.2, 1);
  }

  @keyframes originFadeSlideUp {
    to { opacity: 1; transform: translateY(0); }
  }

  .origin-overlay-base.is-open .origin-menu-item:nth-child(1) { animation-delay: 0.1s; }
  .origin-overlay-base.is-open .origin-menu-item:nth-child(2) { animation-delay: 0.15s; }
  .origin-overlay-base.is-open .origin-menu-item:nth-child(3) { animation-delay: 0.2s; }
  .origin-overlay-base.is-open .origin-menu-item:nth-child(4) { animation-delay: 0.25s; }
  .origin-overlay-base.is-open .origin-menu-item:nth-child(5) { animation-delay: 0.3s; }
  .origin-overlay-base.is-open .origin-menu-item:nth-child(6) { animation-delay: 0.35s; }

  .origin-menu-link-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 0;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .origin-menu-link-wrapper:hover {
    transform: translateX(10px);
  }

  .origin-menu-list a {
    text-decoration: none;
    color: var(--menu-text-color);
    font-size: 22px;
    font-weight: 400;
    text-transform: uppercase;
    flex-grow: 1;
    letter-spacing: 0.05em;
    transition: opacity 0.3s;
  }

  .origin-menu-link-wrapper:hover a {
    opacity: 0.7;
  }

  .origin-menu-accordion-icon {
    width: 14px;
    height: 14px;
    transition: transform 0.3s ease;
    opacity: 0.7;
  }

  /* --- SUBMENU STYLES (Level 2) --- */
  .origin-submenu {
    display: none;
    list-style: none;
    padding: 0;
    margin: 0;
    background: rgba(255,255,255,0.03);
    border-radius: 4px;
  }

  .origin-submenu.is-open {
    display: block;
    animation: originFadeIn 0.3s ease;
  }
  @keyframes originFadeIn { from { opacity: 0; } to { opacity: 1; } }

  .origin-submenu li {
    padding-left: 20px;
    border-bottom: 1px solid rgba(255,255,255,0.05);
  }

  .origin-submenu li a {
    font-size: 16px;
    opacity: 0.8;
    text-transform: none;
    font-weight: 300;
  }

  /* --- LEVEL 3 STYLING (The new Sub-subcategory pop) --- */
  .origin-submenu .origin-submenu {
    background: transparent; /* Remove heavy background */
    margin: 10px 0 10px 10px;
    border-left: 1px solid rgba(255,255,255,0.15); /* Tree guide line */
    padding-left: 0;
    border-radius: 0;
  }

  .origin-submenu .origin-submenu li {
    padding: 0;
    border-bottom: none; /* Clean look */
  }

  .origin-submenu .origin-submenu li a {
    font-size: 15px;
    opacity: 0.6;
    padding: 8px 0 8px 15px; /* Spacing */
    display: block;
    position: relative;
    transition: all 0.3s ease;
  }

  /* The Pop: Slide, brighten, and custom dot */
  .origin-submenu .origin-submenu li a::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 4px;
    height: 4px;
    background-color: currentColor;
    border-radius: 50%;
    transform: translateY(-50%);
    opacity: 0.4;
    transition: opacity 0.3s ease;
  }

  .origin-submenu .origin-submenu li a:hover {
    opacity: 1;
    color: #fff;
    transform: translateX(5px); /* Slide right */
  }

  .origin-submenu .origin-submenu li a:hover::before {
    opacity: 1;
  }

  /* --- SEARCH MODAL SPECIFIC --- */
  .origin-search-container {
    background: rgba(10, 10, 10, 0.85);
    backdrop-filter: blur(25px);
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    color: var(--menu-text-color);
    font-family: var(--font-menu);
  }

  .origin-search-close {
    position: absolute;
    top: 24px;
    right: 24px;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--menu-text-color);
    z-index: 10;
  }

  .origin-search-form {
    width: 90%;
    max-width: 600px;
    position: relative;
  }

  .origin-search-input {
    width: 100%;
    border: none;
    border-bottom: 2px solid var(--menu-text-color);
    font-size: 32px;
    padding: 10px 0;
    background: transparent;
    border-radius: 0;
    outline: none;
    font-family: inherit;
    color: var(--menu-text-color);
  }

  .origin-search-input::placeholder {
    color: var(--menu-text-color);
    opacity: 0.6;
  }

  .origin-search-submit {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
    color: var(--menu-text-color);
  }
{% endstyle %}
<div
  id="origin-gucci-header-{{ section.id }}"
  class="origin-gucci-header {% unless request.page_type == 'index' %}is-standard-page{% endunless %}"
  data-section-id="{{ section.id }}"
>
  <header class="origin-sticky-bar">
    <div class="origin-sticky-bar__menu">
      <button
        class="origin-sticky-button"
        type="button"
        aria-label="Menu"
        id="origin-menu-trigger-{{ section.id }}"
        style="z-index: 2147483650;"
      >
        <div class="origin-hamburger-box">
          <span class="origin-hamburger-line"></span>
          <span class="origin-hamburger-line"></span>
          <span class="origin-hamburger-line"></span>
        </div>
      </button>
    </div>

    <div class="origin-sticky-bar__logo">
      <a href="{{ routes.root_url }}">
        {% if section.settings.logo_image %}
          <img
            src="{{ section.settings.logo_image | image_url: width: 300 }}"
            alt="{{ shop.name }}"
            width="{{ section.settings.logo_image.width }}"
            height="{{ section.settings.logo_image.height }}"
          >
        {% else %}
          <span>{{ section.settings.logo_text }}</span>
        {% endif %}
      </a>
    </div>

    <div class="origin-sticky-bar__actions">
      <button type="button" class="origin-icon-button" aria-label="Search" id="origin-search-trigger-{{ section.id }}">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="24" height="24">
          <circle cx="11" cy="11" r="8"/><path d="M21 21l-4.35-4.35"/>
        </svg>
      </button>

      {% if shop.customer_accounts_enabled %}
        <a
          href="{% if customer %}{{ routes.account_url }}{% else %}{{ routes.account_login_url }}{% endif %}"
          class="origin-icon-button"
          aria-label="Account"
          onclick="window.location.href = this.href; return false;"
          style="pointer-events: auto !important; z-index: 2147483647;"
        >
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="24" height="24">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/>
          </svg>
        </a>
      {% endif %}

      <a href="{{ routes.cart_url }}" class="origin-icon-button" aria-label="Cart" style="pointer-events: auto;">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="24" height="24">
          <path d="M9 20a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-7-2h7a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-7a2 2 0 0 0-2 2v7a2 2 0 0 0 2 2zM6 5H4V3h2l.6 3h13.8l.6-3H23v2h-2"/><path d="M6 5l1.5 10h11L20 5"/>
        </svg>
      </a>
    </div>
  </header>

  <div class="origin-huge-logo-wrapper">
    <div class="origin-huge-logo-inner {% if section.settings.full_width_logo %}is-full-width{% endif %}">
      {% if section.settings.logo_image %}
        <img
          src="{{ section.settings.logo_image | image_url: width: 1600 }}"
          alt="{{ section.settings.logo_text | escape }}"
          class="origin-huge-logo-img"
          loading="eager"
          width="{{ section.settings.logo_image.width }}"
          height="{{ section.settings.logo_image.height }}"
        >
      {% else %}
        <h1 class="origin-huge-logo-text">{{ section.settings.logo_text }}</h1>
      {% endif %}
    </div>
  </div>

  <div class="origin-menu-overlay origin-overlay-base" id="origin-menu-overlay-{{ section.id }}">
    <div class="origin-menu-drawer">
      <nav>
        <ul class="origin-menu-list">
          {% for link in linklists[section.settings.menu].links %}
            <li class="origin-menu-item">
              {% if link.links != blank %}
                <div class="origin-menu-link-wrapper accordion-trigger">
                  <a href="{{ link.url }}">{{ link.title }}</a>
                  <svg
                    class="origin-menu-accordion-icon"
                    viewBox="0 0 14 14"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M7 1v12M1 7h12"/>
                  </svg>
                </div>
                <ul class="origin-submenu">
                  {% for child_link in link.links %}
                    <li>
                      {% if child_link.links != blank %}
                        <div class="origin-menu-link-wrapper accordion-trigger">
                          <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                          <svg
                            class="origin-menu-accordion-icon"
                            viewBox="0 0 14 14"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                          >
                            <path d="M7 1v12M1 7h12"/>
                          </svg>
                        </div>
                        <ul class="origin-submenu">
                          {% for grandchild_link in child_link.links %}
                            <li>
                              <a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                            </li>
                          {% endfor %}
                        </ul>
                      {% else %}
                        <div class="origin-menu-link-wrapper">
                          <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                        </div>
                      {% endif %}
                    </li>
                  {% endfor %}
                </ul>
              {% else %}
                <div class="origin-menu-link-wrapper">
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </div>
              {% endif %}
            </li>
          {% endfor %}
          {% if shop.customer_accounts_enabled %}
            <li class="origin-menu-item" style="margin-top: 20px; border-top: 1px solid rgba(255,255,255,0.2);">
              <div class="origin-menu-link-wrapper">
                <a href="{{ routes.account_url }}">Account</a>
              </div>
            </li>
          {% endif %}
        </ul>
      </nav>
    </div>
  </div>

  <div class="origin-search-overlay origin-overlay-base" id="origin-search-overlay-{{ section.id }}">
    <div class="origin-search-container">
      <button class="origin-search-close" id="origin-search-close-{{ section.id }}" aria-label="Close search">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M18 6L6 18M6 6l12 12"/>
        </svg>
      </button>
      {%- if settings.predictive_search_enabled -%}
        <predictive-search class="origin-search-form" data-loading-text="{{ 'accessibility.loading' | t }}">
      {%- else -%}
        <div class="origin-search-form">
      {%- endif -%}
      <form action="{{ routes.search_url }}" method="get" role="search" style="width: 100%;">
        <input
          type="search"
          name="q"
          id="origin-search-input-{{ section.id }}"
          value="{{ search.terms | escape }}"
          placeholder="Search..."
          class="origin-search-input"
          {% if settings.predictive_search_enabled %}
            role="combobox"
            aria-expanded="false"
            aria-owns="predictive-search-results"
            aria-controls="predictive-search-results"
            aria-haspopup="listbox"
            aria-autocomplete="list"
            autocorrect="off"
            autocomplete="off"
            autocapitalize="off"
            spellcheck="false"
          {% endif %}
        >
        <input type="hidden" name="type" value="product">
        <button type="submit" class="origin-search-submit">{{ 'general.search.search' | t }}</button>

        {%- if settings.predictive_search_enabled -%}
          <div class="predictive-search predictive-search--header" tabindex="-1" data-predictive-search>
            {%- render 'loading-spinner', class: 'predictive-search__loading-state' -%}
          </div>
          <span class="predictive-search-status visually-hidden" role="status" aria-hidden="true"></span>
        {%- endif -%}
      </form>
      {%- if settings.predictive_search_enabled -%}
        </predictive-search>
      {%- else -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>
<script>
  (function () {
    const sectionId = '{{ section.id }}';
    const headerContainer = document.getElementById(`origin-gucci-header-${sectionId}`);

    if (!headerContainer) return;

    // --- 1. Scroll Logic ---
    // --- 1. Scroll & Morph Logic ---
    const handleScroll = () => {
      // We will define this function but won't run it immediately until we have metrics.
    };

    let metrics = null;

    function calculateMetrics() {
      // GUARD: Do not run on standard pages or if header is static
      if (headerContainer.classList.contains('is-standard-page')) return null;

      const hugeWrapper = headerContainer.querySelector('.origin-huge-logo-wrapper');
      // We want the inner content to morph
      const hugeInner = headerContainer.querySelector('.origin-huge-logo-inner');
      // The target
      const stickyLogo = headerContainer.querySelector('.origin-sticky-bar__logo');

      if (!hugeInner || !stickyLogo) return null;

      // Ensure both are visible for measurement (temporarily remove hidden/opacity styles if needed)
      // Since stickyLogo is visibility:hidden, getBoundingClientRect still works for layout dimensions in most browsers,
      // but if display is none it won't. It is display:flex in CSS.

      const hugeRect = hugeInner.getBoundingClientRect();
      const stickyRect = stickyLogo.getBoundingClientRect();

      // Calculate Scaling Factor (Height relative)
      // Use height mostly as text/logos are usually height-constrained in headers
      const scale = stickyRect.height / hugeRect.height;

      // Calculate Translation Deltas
      // We need the center of the huge logo to move to the center of the sticky logo
      const hugeCenterY = hugeRect.top + hugeRect.height / 2;
      const stickyCenterY = stickyRect.top + stickyRect.height / 2;
      const deltaY = stickyCenterY - hugeCenterY;

      // Note: X alignment might be needed perfectly centered?
      // Both are likely centered horizontally in CSS.

      return {
        scale: scale,
        deltaY: deltaY,
        refHeight: hugeRect.height,
      };
    }

    function updateMorph() {
      // GUARD: Do not run on standard pages
      if (headerContainer.classList.contains('is-standard-page')) return;

      const hugeWrapper = headerContainer.querySelector('.origin-huge-logo-wrapper');
      const hugeInner = headerContainer.querySelector('.origin-huge-logo-inner');
      const stickyLogo = headerContainer.querySelector('.origin-sticky-bar__logo');
      const stickyBar = headerContainer.querySelector('.origin-sticky-bar');

      if (!metrics || !hugeWrapper) return;

      const scrollY = window.scrollY || document.documentElement.scrollTop;

      // Define the scroll distance over which the morph happens
      // Short range for "fast" reaction? user said "disappears so quickly",
      // but also "slow and glitchy" might refer to the previous implementation?
      // User says: "look like the big text on scroll turns into the little text"
      // Let's use 200px as a reasonable morph distance.
      const range = 300;
      const progress = Math.min(1, Math.max(0, scrollY / range));

      // Ease the progress?
      // const eased = progress === 1 ? 1 : 1 - Math.pow(2, -10 * progress); // Exponential ease out?
      // Linear is often more predictable for scroll-linked connection.
      const p = progress;

      // 1. Apply Morph to Big Logo
      // We transform the Wrapper or Inner? Inner is better if Wrapper is full screen.
      // But Wrapper was the one fixed. Inner has margin-top for vertical pos.
      // Let's anim the INNER.

      const currentScale = 1 + (metrics.scale - 1) * p;
      const currentY = metrics.deltaY * p;

      // We use the Inner for the transform.
      // Note: hugeInner has `transform: translateY(-50%)` in CSS for centering.
      // We must preserve that or account for it.
      // BoundingBox calculation accounts for current transforms usually.
      // Actually `transform` replaces previous transform.
      // So we need to include `translateY(-50%)` if it was there?
      // Let's just set properties explicitly.
      // Wait, if we use the computed rects from Scroll 0, we are good.
      // But we need to know the base transform.

      // Simplified approach: Wrapper is the "Subject".
      // But wrapper is 100vh.

      // Let's stick to modifying `hugeWrapper` but we calculated deltas based on `hugeInner`.
      // If `hugeWrapper` is 100% width/height fixed, and `hugeInner` is the child.
      // If we scale `hugeWrapper`, we scale the whole screen. Bad.
      // We MUST animate `hugeInner`.

      // CSS base: transform: translateY(-50%);
      // We append our morph: translate(0, currentY) scale(currentScale)
      // Order matters.
      // Correct composition: `translateY(calc(-50% + ${currentY}px)) scale(${currentScale})`

      if (hugeInner) {
        hugeInner.style.transform = `translateY(calc(-50% + ${currentY}px)) scale(${currentScale})`;

        // Fix for "glitchy": if we are fully morphed (p=1), we hide it?
        // User said "turns into the little text at the top of the header... and vice versa".
        // So at p=1, Big is hidden, Little is shown.
        // At p<1, Big is shown, Little is hidden.

        if (p >= 0.99) {
          hugeInner.style.opacity = 0;
          hugeInner.style.pointerEvents = 'none';
          if (stickyLogo) stickyLogo.style.opacity = 1;
          if (stickyLogo) stickyLogo.style.visibility = 'visible';
        } else {
          hugeInner.style.opacity = 1;
          hugeInner.style.pointerEvents = 'auto';
          if (stickyLogo) stickyLogo.style.opacity = 0;
          if (stickyLogo) stickyLogo.style.visibility = 'hidden';
        }
      }

      // 2. Background Logic (Sticky Bar)
      // Turns solid when morph completes or starts?
      // User: "turns into the little text at the top of the header"
      // Usually background comes in as it hits the top.
      if (p > 0.8) {
        headerContainer.classList.add('is-shrunk');
        if (stickyBar) {
          stickyBar.style.backgroundColor = 'rgba(255, 255, 255, 0.95)';
          stickyBar.style.backdropFilter = 'blur(10px)';
          stickyBar.style.color = 'var(--header-text-shrunk)';
        }
      } else {
        headerContainer.classList.remove('is-shrunk');
        if (stickyBar) {
          stickyBar.style.backgroundColor = 'transparent';
          stickyBar.style.backdropFilter = 'none';
          stickyBar.style.color = 'var(--header-text-initial)';
        }
      }
    }

    // Init
    window.addEventListener('scroll', () => requestAnimationFrame(updateMorph), { passive: true });

    // Recalc on resize
    window.addEventListener('resize', () => {
      // Reset transforms to get clean read?
      // This is complex. For now, just Recalc might act on currently transformed elements...
      // Ideally we reset, read, then re-apply.
      const hugeInner = headerContainer.querySelector('.origin-huge-logo-inner');
      if (hugeInner) hugeInner.style.transform = ''; // revert to CSS default
      metrics = calculateMetrics();
      updateMorph();
    });

    // Initial Calc (Wait for layout)
    setTimeout(() => {
      metrics = calculateMetrics();
      updateMorph();
    }, 100);

    // Also run on load just in case
    window.addEventListener('load', () => {
      metrics = calculateMetrics();
      updateMorph();
    });

    // --- 2. Overlay Manager ---
    const toggleOverlay = (overlayId, isOpen) => {
      const overlay = document.getElementById(overlayId);
      if (!overlay) return;
      if (isOpen) {
        overlay.classList.add('is-open');
        document.body.style.overflow = 'hidden';
      } else {
        overlay.classList.remove('is-open');
        document.body.style.overflow = '';
      }
    };

    // --- 3. Menu Listeners & Burger Animation ---
    const menuTrigger = document.getElementById(`origin-menu-trigger-${sectionId}`);
    const menuOverlayId = `origin-menu-overlay-${sectionId}`;
    let isMenuOpen = false;

    if (menuTrigger) {
      menuTrigger.addEventListener('click', (e) => {
        e.preventDefault();
        isMenuOpen = !isMenuOpen;

        toggleOverlay(menuOverlayId, isMenuOpen);

        if (isMenuOpen) {
          menuTrigger.classList.add('is-active');
          menuTrigger.style.color = 'var(--menu-text-color)';
        } else {
          menuTrigger.classList.remove('is-active');
          menuTrigger.style.color = '';
        }
      });
    }

    const menuOverlay = document.getElementById(menuOverlayId);
    if (menuOverlay) {
      menuOverlay.addEventListener('click', (e) => {
        if (e.target === menuOverlay) {
          toggleOverlay(menuOverlayId, false);
          isMenuOpen = false;
          if (menuTrigger) {
            menuTrigger.classList.remove('is-active');
            menuTrigger.style.color = '';
          }
        }
      });
    }

    // --- NESTED ACCORDION LOGIC ---
    if (menuOverlay) {
      const accordionTriggers = menuOverlay.querySelectorAll('.accordion-trigger');
      accordionTriggers.forEach((trigger) => {
        trigger.addEventListener('click', (e) => {
          e.preventDefault();

          const submenu = trigger.nextElementSibling;
          const icon = trigger.querySelector('.origin-menu-accordion-icon');

          if (submenu) {
            const isOpen = submenu.classList.contains('is-open');
            if (isOpen) {
              submenu.classList.remove('is-open');
              if (icon) icon.style.transform = 'rotate(0deg)';
            } else {
              submenu.classList.add('is-open');
              if (icon) icon.style.transform = 'rotate(45deg)';
            }
          }
        });
      });
    }

    // --- 4. Search Listeners ---
    const searchTrigger = document.getElementById(`origin-search-trigger-${sectionId}`);
    const searchClose = document.getElementById(`origin-search-close-${sectionId}`);
    const searchOverlayId = `origin-search-overlay-${sectionId}`;
    const searchInput = document.getElementById(`origin-search-input-${sectionId}`);

    if (searchTrigger) {
      searchTrigger.addEventListener('click', (e) => {
        e.preventDefault();
        toggleOverlay(searchOverlayId, true);
        setTimeout(() => {
          if (searchInput) searchInput.focus();
        }, 100);
      });
    }

    if (searchClose) {
      searchClose.addEventListener('click', (e) => {
        e.preventDefault();
        toggleOverlay(searchOverlayId, false);
      });
    }

    // Close on Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        toggleOverlay(menuOverlayId, false);
        isMenuOpen = false;
        if (menuTrigger) {
          menuTrigger.classList.remove('is-active');
          menuTrigger.style.color = '';
        }
        toggleOverlay(searchOverlayId, false);
      }
    });
  })();
</script>
