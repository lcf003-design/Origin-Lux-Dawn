{% schema %}
{
  "name": "Origin GG Header",
  "class": "origin-gucci-header-section",
  "settings": [
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image",
      "info": "Use a white logo with transparent background"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text (fallback)",
      "default": "GUCCI"
    },
    {
      "type": "range",
      "id": "hero_logo_width_desktop",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Huge Logo Width (Desktop)",
      "default": 60,
      "info": "Percentage of screen width"
    },
    {
      "type": "range",
      "id": "hero_logo_width_mobile",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Huge Logo Width (Mobile)",
      "default": 80
    },
    {
      "type": "header",
      "content": "Hero Settings"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero background image"
    },
    {
      "type": "select",
      "id": "hero_height",
      "label": "Hero height",
      "default": "full",
      "options": [
        { "value": "full", "label": "Full screen (100vh)" },
        { "value": "large", "label": "Large (85vh)" },
        { "value": "medium", "label": "Medium (65vh)" }
      ]
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "The Gift Edit"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "HOLIDAY 2025"
    },
    {
      "type": "richtext",
      "id": "body_text",
      "label": "Body text"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "default": "center",
      "options": [
        { "value": "flex-start", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Bottom" }
      ]
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "header_bg_color_shrunk",
      "label": "Sticky Header Background",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "header_text_color_shrunk",
      "label": "Sticky Header Text/Icons",
      "default": "#111111"
    },
    {
      "type": "color",
      "id": "header_text_color_initial",
      "label": "Initial Header Text/Icons",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Hero overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Hero overlay opacity",
      "default": 20
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    },
    {
      "type": "checkbox",
      "id": "show_desktop_menu",
      "label": "Show desktop menu",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Origin GG Header"
    }
  ]
}
{% endschema %}

<style>
  /* --- VARS --- */
  .origin-gucci-header-section {
    --header-transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    --logo-width-desktop: {{ section.settings.hero_logo_width_desktop }}vw;
    --logo-width-mobile: {{ section.settings.hero_logo_width_mobile }}vw;
    --header-bg-shrunk: {{ section.settings.header_bg_color_shrunk }};
    --header-text-shrunk: {{ section.settings.header_text_color_shrunk }};
    --header-text-initial: {{ section.settings.header_text_color_initial }};
  }

  /* --- WRAPPER --- */
  .origin-gucci-header {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  /* --- STICKY TOP BAR --- */
  .origin-sticky-bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 16px 24px;
    box-sizing: border-box;
    transition: var(--header-transition);
    background-color: transparent; /* Start transparent */
    color: var(--header-text-initial);
  }

  /* Scrolled State for Bar */
  .origin-gucci-header--shrink .origin-sticky-bar {
    background-color: var(--header-bg-shrunk);
    color: var(--header-text-shrunk);
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    padding-top: 12px;
    padding-bottom: 12px;
  }

  /* --- STICKY BAR LOGO (HIDDEN INITIALLY) --- */
  .origin-sticky-bar__logo {
    opacity: 0;
    transform: translateY(10px);
    transition: var(--header-transition);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .origin-sticky-bar__logo img {
    height: 32px; /* Small standard logo size */
    width: auto;
    display: block;
  }
  
  .origin-sticky-bar__logo span {
    font-size: 20px;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  /* Scrolled State for Sticky Logo */
  .origin-gucci-header--shrink .origin-sticky-bar__logo {
    opacity: 1;
    transform: translateY(0);
  }

  /* --- ICONS & MENU --- */
  .origin-sticky-bar__menu, 
  .origin-sticky-bar__actions {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .origin-sticky-bar__actions {
    justify-content: flex-end;
  }

  .origin-sticky-button,
  .origin-icon-button {
    background: transparent;
    border: none;
    padding: 8px;
    cursor: pointer;
    color: inherit; /* Inherits from sticky bar color var */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: var(--header-transition);
  }

  .origin-icon-button svg,
  .origin-sticky-button svg {
    width: 24px;
    height: 24px;
  }

  .origin-desktop-menu {
    display: none;
    gap: 20px;
  }

  .origin-desktop-menu__link {
    text-decoration: none;
    color: inherit;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  /* --- HERO SECTION --- */
  .origin-gucci-hero {
    position: relative;
    width: 100%;
    min-height: 100vh; /* Default Full */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center; /* Centers the huge logo vertically */
    text-align: center;
    background: {% if section.settings.hero_image %}url('{{ section.settings.hero_image | image_url: width: 2400 }}') center/cover no-repeat{% else %}#111{% endif %};
  }

  .origin-gucci-hero--large { min-height: 85vh; }
  .origin-gucci-hero--medium { min-height: 65vh; }

  /* Overlay */
  .origin-gucci-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
  }

  /* --- HUGE LOGO (THE HERO) --- */
  .origin-gucci-hero__logo-wrapper {
    position: relative;
    z-index: 10;
    margin-bottom: 24px;
    transition: transform 0.8s cubic-bezier(0.25, 1, 0.5, 1), opacity 0.5s ease;
    /* This origin point ensures it shrinks upwards towards the navbar */
    transform-origin: center top; 
  }

  .origin-gucci-hero__logo-img {
    width: var(--logo-width-desktop);
    max-width: 1000px;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  .origin-gucci-hero__logo-text-large {
    font-size: 12vw; /* Massive fallback text */
    line-height: 1;
    color: #fff;
    font-weight: 400;
    font-family: serif; /* Classic Gucci vibes */
    letter-spacing: -0.02em;
    text-transform: uppercase;
  }

  /* Scrolled State for Huge Logo: Shrink and Fade Out */
  .origin-gucci-header--shrink .origin-gucci-hero__logo-wrapper {
    opacity: 0;
    transform: scale(0.6) translateY(-40px);
    pointer-events: none; 
  }

  /* --- HERO TEXT CONTENT --- */
  .origin-gucci-hero__content {
    position: relative;
    z-index: 5;
    color: #fff;
    max-width: 600px;
    padding: 0 20px;
    transition: opacity 0.5s ease;
  }

  .origin-gucci-hero__subheading {
    font-size: 14px;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin-bottom: 12px;
  }

  .origin-gucci-hero__heading {
    font-size: 42px;
    font-weight: 300;
    letter-spacing: 0.05em;
    margin-bottom: 16px;
    line-height: 1.2;
  }

  .origin-gucci-hero__body p {
    font-size: 16px;
    line-height: 1.6;
    margin: 0;
  }

  /* --- MOBILE STYLES --- */
  @media (min-width: 990px) {
    .origin-desktop-menu {
      display: {% if section.settings.show_desktop_menu %}flex{% else %}none{% endif %};
    }
  }

  @media (max-width: 749px) {
    .origin-gucci-hero__logo-img {
      width: var(--logo-width-mobile);
    }
    .origin-gucci-hero__heading {
      font-size: 32px;
    }
    .origin-sticky-bar {
      padding: 12px 16px;
    }
  }

  /* --- MENU OVERLAY (MOBILE) --- */
  .origin-menu-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.4);
    backdrop-filter: blur(4px);
    z-index: 150;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    display: flex;
    justify-content: flex-start;
  }

  .origin-menu-overlay.is-open {
    opacity: 1;
    pointer-events: all;
  }

  .origin-menu-drawer {
    background: #fff;
    width: 320px;
    max-width: 90vw;
    height: 100%;
    padding: 30px;
    transform: translateX(-100%);
    transition: transform 0.4s cubic-bezier(0.25, 1, 0.5, 1);
    display: flex;
    flex-direction: column;
  }

  .origin-menu-overlay.is-open .origin-menu-drawer {
    transform: translateX(0);
  }

  .origin-menu-close {
    align-self: flex-end;
    background: none;
    border: none;
    cursor: pointer;
    margin-bottom: 30px;
  }
  
  .origin-menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .origin-menu-list a {
    text-decoration: none;
    color: #000;
    font-size: 18px;
    font-weight: 500;
    text-transform: uppercase;
  }
</style>

<div class="origin-gucci-header" data-section-id="{{ section.id }}">
  
  <!-- STICKY BAR (Fixed Top) -->
  <header class="origin-sticky-bar">
    <div class="origin-sticky-bar__menu">
      <button class="origin-sticky-button" type="button" aria-label="Menu" id="origin-menu-trigger">
        <svg viewBox="0 0 24 24" fill="currentColor"><path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/></svg>
      </button>
      {% if section.settings.show_desktop_menu and section.settings.menu != blank %}
        <nav class="origin-desktop-menu">
          {% for link in linklists[section.settings.menu].links %}
            <a href="{{ link.url }}" class="origin-desktop-menu__link">{{ link.title }}</a>
          {% endfor %}
        </nav>
      {% endif %}
    </div>

    <!-- Small Logo (Appears on Scroll) -->
    <div class="origin-sticky-bar__logo">
      <a href="{{ routes.root_url }}" style="text-decoration: none; color: inherit;">
        {% if section.settings.logo_image %}
          <img src="{{ section.settings.logo_image | image_url: width: 300 }}" alt="{{ shop.name }}" width="150" height="32">
        {% else %}
          <span>{{ section.settings.logo_text }}</span>
        {% endif %}
      </a>
    </div>

    <div class="origin-sticky-bar__actions">
      <button class="origin-icon-button" aria-label="Search">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><path d="M21 21l-4.35-4.35"/></svg>
      </button>
      <a href="{{ routes.cart_url }}" class="origin-icon-button" aria-label="Cart">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 20a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-7-2h7a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-7a2 2 0 0 0-2 2v7a2 2 0 0 0 2 2zM6 5H4V3h2l.6 3h13.8l.6-3H23v2h-2"/><path d="M6 5l1.5 10h11L20 5"/></svg>
      </a>
    </div>
  </header>

  <!-- MOBILE MENU DRAWER -->
  <div class="origin-menu-overlay" id="origin-menu-overlay">
    <div class="origin-menu-drawer">
      <button class="origin-menu-close" id="origin-menu-close" aria-label="Close">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 6L6 18M6 6l12 12"/></svg>
      </button>
      <nav>
        <ul class="origin-menu-list">
          {% for link in linklists[section.settings.menu].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </nav>
    </div>
  </div>

  <!-- HERO AREA (Contains Huge Logo) -->
  <div class="origin-gucci-hero {% if section.settings.hero_height == 'large' %}origin-gucci-hero--large{% elsif section.settings.hero_height == 'medium' %}origin-gucci-hero--medium{% endif %}">
    
    <!-- HUGE LOGO -->
    <div class="origin-gucci-hero__logo-wrapper">
      {% if section.settings.logo_image %}
        <img src="{{ section.settings.logo_image | image_url: width: 1600 }}" 
             alt="{{ section.settings.logo_text | escape }}" 
             class="origin-gucci-hero__logo-img"
             loading="eager"
             width="{{ section.settings.logo_image.width }}"
             height="{{ section.settings.logo_image.height }}">
      {% else %}
        <h1 class="origin-gucci-hero__logo-text-large">{{ section.settings.logo_text }}</h1>
      {% endif %}
    </div>

    <!-- OPTIONAL HERO CONTENT -->
    <div class="origin-gucci-hero__content" style="{% if section.settings.content_alignment == 'flex-end' %}margin-top: auto; padding-bottom: 60px;{% elsif section.settings.content_alignment == 'flex-start' %}margin-bottom: auto; padding-top: 140px;{% endif %}">
      {% if section.settings.subheading != blank %}
        <div class="origin-gucci-hero__subheading">{{ section.settings.subheading }}</div>
      {% endif %}
      
      {% if section.settings.heading != blank %}
        <div class="origin-gucci-hero__heading">{{ section.settings.heading }}</div>
      {% endif %}
      
      {% if section.settings.body_text != blank %}
        <div class="origin-gucci-hero__body rte">{{ section.settings.body_text }}</div>
      {% endif %}
    </div>

  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('.origin-gucci-header');
    if(!section) return;

    // Scroll Effect
    const handleScroll = () => {
      const scrollY = window.scrollY;
      // Trigger effect after 50px of scroll
      if (scrollY > 50) {
        section.classList.add('origin-gucci-header--shrink');
      } else {
        section.classList.remove('origin-gucci-header--shrink');
      }
    };

    window.addEventListener('scroll', handleScroll, { passive: true });
    // Initial check in case of reload
    handleScroll();

    // Menu Logic
    const menuTrigger = document.getElementById('origin-menu-trigger');
    const menuClose = document.getElementById('origin-menu-close');
    const menuOverlay = document.getElementById('origin-menu-overlay');

    const toggleMenu = (open) => {
      if(open) {
        menuOverlay.classList.add('is-open');
        document.body.style.overflow = 'hidden'; // Lock scroll
      } else {
        menuOverlay.classList.remove('is-open');
        document.body.style.overflow = ''; // Unlock scroll
      }
    };

    if(menuTrigger) menuTrigger.addEventListener('click', () => toggleMenu(true));
    if(menuClose) menuClose.addEventListener('click', () => toggleMenu(false));
    if(menuOverlay) menuOverlay.addEventListener('click', (e) => {
      if(e.target === menuOverlay) toggleMenu(false);
    });
  });
</script>


