{% schema %}
{
  "name": "Origin GG Header",
  "class": "origin-gucci-header-section",
  "settings": [
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image",
      "info": "Upload your main logo here (transparent PNG/SVG recommended)"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text (fallback)",
      "default": "GUCCI"
    },
    {
      "type": "color",
      "id": "huge_logo_color",
      "label": "Huge Logo Text Color",
      "default": "#FFFFFF",
      "info": "Specific color for the large fallback text."
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "font_picker",
      "id": "font_huge_logo",
      "label": "Huge Logo Font",
      "default": "serif"
    },
    {
      "type": "font_picker",
      "id": "font_menu",
      "label": "Menu & UI Font",
      "default": "sans-serif"
    },
    {
      "type": "header",
      "content": "Huge Logo Sizing"
    },
    {
      "type": "checkbox",
      "id": "full_width_logo",
      "label": "Stretch Logo to Screen Edges",
      "default": true,
      "info": "Allows the text/image to go full width."
    },
    {
      "type": "range",
      "id": "huge_logo_size_desktop",
      "min": 5,
      "max": 30,
      "step": 0.5,
      "unit": "vw",
      "label": "Font Size (Desktop)",
      "default": 13.5,
      "info": "Adjust to fit text on one line."
    },
    {
      "type": "range",
      "id": "huge_logo_size_mobile",
      "min": 5,
      "max": 30,
      "step": 0.5,
      "unit": "vw",
      "label": "Font Size (Mobile)",
      "default": 18
    },
    {
      "type": "range",
      "id": "hero_logo_width_desktop",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Image Width (Desktop)",
      "default": 60,
      "info": "Only applies if using an Image Logo."
    },
    {
      "type": "range",
      "id": "hero_logo_width_mobile",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Image Width (Mobile)",
      "default": 80
    },
    {
      "type": "range",
      "id": "logo_vertical_position",
      "min": 10,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Huge Logo Vertical Position",
      "default": 40,
      "info": "Distance from top of screen."
    },
    {
      "type": "header",
      "content": "Sticky Bar Colors"
    },
    {
      "type": "color",
      "id": "header_bg_color_shrunk",
      "label": "Background Color (Scrolled)",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "header_text_color_shrunk",
      "label": "Text & Icons Color (Scrolled)",
      "default": "#111111"
    },
    {
      "type": "header",
      "content": "Initial Colors"
    },
    {
      "type": "color",
      "id": "header_text_color_initial",
      "label": "Icons & Small Logo Color",
      "default": "#FFFFFF",
      "info": "Color for the sticky bar icons before scrolling on Homepage."
    },
    {
      "type": "header",
      "content": "Menu Design"
    },
    {
      "type": "color",
      "id": "menu_bg_color",
      "label": "Menu Drawer Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "menu_text_color",
      "label": "Menu Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu Selection"
    }
  ],
  "presets": [
    {
      "name": "Origin GG Header"
    }
  ]
}
{% endschema %}

{% style %}
  /* Load Fonts */
  {{ section.settings.font_huge_logo | font_face: font_display: 'swap' }}
  {{ section.settings.font_menu | font_face: font_display: 'swap' }}

  /* --- VARIABLES --- */
  .origin-gucci-header-section {
    --header-transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    
    /* Logo Props */
    --logo-width-desktop: {{ section.settings.hero_logo_width_desktop }}%;
    --logo-width-mobile: {{ section.settings.hero_logo_width_mobile }}%;
    --logo-vertical-pos: {{ section.settings.logo_vertical_position }}vh;
    --huge-logo-size-desktop: {{ section.settings.huge_logo_size_desktop }}vw;
    --huge-logo-size-mobile: {{ section.settings.huge_logo_size_mobile }}vw;
    --huge-logo-text-color: {{ section.settings.huge_logo_color }};

    /* Colors */
    --header-bg-shrunk: {{ section.settings.header_bg_color_shrunk }};
    --header-text-shrunk: {{ section.settings.header_text_color_shrunk }};
    --header-text-initial: {{ section.settings.header_text_color_initial }};
    --menu-bg-color: {{ section.settings.menu_bg_color }};
    --menu-text-color: {{ section.settings.menu_text_color }};
    
    /* Fonts */
    --font-huge-logo: {{ section.settings.font_huge_logo.family }}, {{ section.settings.font_huge_logo.fallback_families }};
    --font-menu: {{ section.settings.font_menu.family }}, {{ section.settings.font_menu.fallback_families }};
  }

  /* --- STRUCTURE --- */
  .origin-gucci-header {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 0; 
    z-index: 50;
    pointer-events: none; 
  }

  /* --- STICKY BAR --- */
  .origin-sticky-bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 20px 30px;
    box-sizing: border-box;
    transition: var(--header-transition);
    background-color: transparent; 
    color: var(--header-text-initial);
    pointer-events: none; 
    font-family: var(--font-menu);
  }

  /* Scroll State */
  .origin-gucci-header.is-shrunk .origin-sticky-bar {
    background-color: var(--header-bg-shrunk);
    color: var(--header-text-shrunk);
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    padding-top: 14px;
    padding-bottom: 14px;
  }

  /* --- ANIMATED HAMBURGER --- */
  .origin-hamburger-btn {
    width: 30px;
    height: 24px;
    position: relative;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 2147483650; /* Above overlay */
    pointer-events: auto !important;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .origin-hamburger-line {
    display: block;
    height: 2px;
    width: 100%;
    background-color: currentColor;
    transition: transform 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55), opacity 0.3s;
    transform-origin: center;
  }

  /* Active State (X shape) */
  .origin-gucci-header.menu-open .origin-hamburger-line:nth-child(1) {
    transform: translateY(11px) rotate(45deg);
  }
  .origin-gucci-header.menu-open .origin-hamburger-line:nth-child(2) {
    opacity: 0;
    transform: translateX(-10px);
  }
  .origin-gucci-header.menu-open .origin-hamburger-line:nth-child(3) {
    transform: translateY(-11px) rotate(-45deg);
  }
  
  /* Ensure hamburger is visible against menu bg when open */
  .origin-gucci-header.menu-open .origin-sticky-bar {
    color: var(--menu-text-color);
  }

  /* --- SMALL LOGO (Sticky) --- */
  .origin-sticky-bar__logo {
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: var(--header-transition);
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: none;
  }

  .origin-sticky-bar__logo a {
    display: block;
    line-height: 0;
    text-decoration: none;
    color: inherit;
    pointer-events: auto;
  }

  .origin-sticky-bar__logo img { height: 32px; width: auto; display: block; }
  .origin-sticky-bar__logo span {
    font-size: 20px; font-weight: 700; letter-spacing: 0.1em;
    text-transform: uppercase; font-family: var(--font-huge-logo);
  }

  .origin-gucci-header.is-shrunk .origin-sticky-bar__logo {
    opacity: 1; visibility: visible; transform: translateY(0); pointer-events: auto;
  }

  /* --- HUGE LOGO OVERLAY --- */
  .origin-huge-logo-wrapper {
    position: fixed; top: 0; left: 0; width: 100%; height: 100vh;
    z-index: 40; pointer-events: none; display: flex; justify-content: center;
    transition: opacity 0.4s ease, transform 0.4s ease, visibility 0.4s;
    transform-origin: center top;
  }

  .origin-huge-logo-inner {
    margin-top: var(--logo-vertical-pos); transform: translateY(-50%);
    width: var(--logo-width-desktop); max-width: 1200px; text-align: center;
  }
  
  .origin-huge-logo-inner.is-full-width { width: 100vw; max-width: none; }
  .origin-huge-logo-img { width: 100%; height: auto; display: block; margin: 0 auto; }
  .origin-huge-logo-text {
    font-size: var(--huge-logo-size-desktop); line-height: 1;
    font-family: var(--font-huge-logo); text-transform: uppercase; margin: 0;
    white-space: nowrap; color: var(--huge-logo-text-color) !important;
  }

  .origin-gucci-header.is-shrunk .origin-huge-logo-wrapper {
    opacity: 0; visibility: hidden; transform: scale(0.9) translateY(-50px);
  }

  /* --- STANDARD PAGE OVERRIDES --- */
  .origin-gucci-header.is-standard-page {
    position: sticky; top: 0; height: auto;
    background-color: var(--header-bg-shrunk);
    border-bottom: 1px solid rgba(0,0,0,0.05);
  }
  .origin-gucci-header.is-standard-page .origin-sticky-bar {
    position: relative; background-color: transparent;
    color: var(--header-text-shrunk); padding: 14px 30px;
  }
  .origin-gucci-header.is-standard-page .origin-sticky-bar__logo {
    opacity: 1; visibility: visible; transform: none; pointer-events: auto;
  }
  .origin-gucci-header.is-standard-page .origin-huge-logo-wrapper { display: none !important; }

  /* --- ACTIONS (Right Side) --- */
  .origin-sticky-bar__actions {
    display: flex; align-items: center; justify-content: flex-end; gap: 16px;
    z-index: 2147483647; pointer-events: auto !important;
  }
  .origin-icon-button {
    background: transparent; border: none; padding: 8px; cursor: pointer;
    color: inherit; display: inline-flex; transition: var(--header-transition);
    text-decoration: none;
  }
  .origin-icon-button svg { width: 24px; height: 24px; }

  /* --- UPGRADED MENU DRAWER --- */
  .origin-menu-overlay {
    position: fixed; inset: 0; 
    background: transparent;
    z-index: 2147483648;
    visibility: hidden; transition: visibility 0s 0.5s; /* Delay hide */
  }
  
  .origin-menu-drawer {
    position: absolute; top: 0; left: 0; bottom: 0;
    width: 100vw; /* Full width mobile */
    max-width: 500px; /* Limit on desktop */
    background: var(--menu-bg-color);
    transform: translateX(-100%);
    transition: transform 0.6s cubic-bezier(0.19, 1, 0.22, 1);
    display: flex; flex-direction: column;
    padding: 100px 40px 40px 40px; /* Top padding for hamburger clearance */
    box-shadow: 10px 0 30px rgba(0,0,0,0.1);
    overflow-y: auto;
  }

  @media(min-width: 900px) {
    .origin-menu-drawer { max-width: 50vw; }
  }

  /* Menu Open State */
  .origin-gucci-header.menu-open .origin-menu-overlay {
    visibility: visible; transition: none;
  }
  .origin-gucci-header.menu-open .origin-menu-drawer {
    transform: translateX(0);
  }
  
  /* Backdrop Blur */
  .origin-menu-backdrop {
    position: absolute; inset: 0; background: rgba(0,0,0,0.3);
    backdrop-filter: blur(5px); opacity: 0; transition: opacity 0.5s ease;
    z-index: -1;
  }
  .origin-gucci-header.menu-open .origin-menu-backdrop { opacity: 1; }

  /* Navigation List */
  .origin-menu-list {
    list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 15px;
  }

  /* Hover Focus Effect Container */
  .origin-menu-list:hover .origin-menu-item > .origin-menu-link-wrapper a {
    opacity: 0.3; /* Dim others */
  }

  .origin-menu-item {
    opacity: 0; transform: translateY(20px); /* Initial animation state */
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  /* Link Styling */
  .origin-menu-link-wrapper a {
    display: block;
    font-family: var(--font-menu);
    font-size: 32px; /* Bigger Font */
    font-weight: 500;
    text-transform: uppercase;
    text-decoration: none;
    color: var(--menu-text-color);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  @media(max-width: 768px) {
    .origin-menu-link-wrapper a { font-size: 24px; }
  }

  /* Hover Active Item */
  .origin-menu-list .origin-menu-item:hover > .origin-menu-link-wrapper a {
    opacity: 1; transform: translateX(10px);
  }

  /* Staggered Animation Classes (Added via JS) */
  .origin-gucci-header.menu-open .origin-menu-item {
    opacity: 1; transform: translateY(0);
  }
  
  /* Accordion Submenu */
  .origin-menu-accordion-icon {
    width: 14px; height: 14px; margin-left: 10px; transition: transform 0.3s;
    color: var(--menu-text-color); opacity: 0.7;
  }
  .origin-submenu {
    display: grid; grid-template-rows: 0fr; transition: grid-template-rows 0.4s ease-out;
    padding-left: 5px; margin-top: 0; overflow: hidden;
  }
  .origin-submenu.is-open { grid-template-rows: 1fr; margin-top: 10px; }
  .origin-submenu-inner { min-height: 0; display: flex; flex-direction: column; gap: 8px; border-left: 1px solid rgba(255,255,255,0.1); padding-left: 20px; }
  
  .origin-submenu a {
    font-size: 16px !important; opacity: 0.7; text-transform: none; font-weight: 400;
  }
  .origin-submenu a:hover { opacity: 1; color: var(--menu-text-color); }

  /* --- SEARCH OVERLAY --- */
  .origin-search-overlay {
    position: fixed; inset: 0; background: rgba(0,0,0,0.9);
    z-index: 2147483649; opacity: 0; visibility: hidden;
    transition: opacity 0.3s; display: flex; align-items: center; justify-content: center;
  }
  .origin-search-overlay.is-open { opacity: 1; visibility: visible; }
  
  .origin-search-close {
    position: absolute; top: 30px; right: 30px; background: none; border: none;
    color: #fff; cursor: pointer;
  }
  .origin-search-input {
    background: transparent; border: none; border-bottom: 2px solid #fff;
    font-size: 32px; color: #fff; padding: 10px 0; width: 80vw; max-width: 600px;
    outline: none; text-align: center;
  }
  .origin-search-input::placeholder { color: rgba(255,255,255,0.5); }

  /* Mobile Tweaks */
  @media (max-width: 749px) {
    .origin-sticky-bar { padding: 15px 20px; }
    .origin-huge-logo-text { font-size: var(--huge-logo-size-mobile); }
    .origin-huge-logo-inner { width: var(--logo-width-mobile); }
    .origin-menu-drawer { padding-top: 80px; width: 100vw; max-width: none; }
  }
{% endstyle %}

<!-- Main Container -->
<div id="origin-gucci-header-{{ section.id }}" 
     class="origin-gucci-header {% unless request.page_type == 'index' %}is-standard-page{% endunless %}" 
     data-section-id="{{ section.id }}">
  
  <!-- 1. STICKY BAR -->
  <header class="origin-sticky-bar">
    <div class="origin-sticky-bar__menu">
      <!-- UPGRADED: Animated Hamburger -->
      <button class="origin-hamburger-btn" type="button" aria-label="Menu" id="origin-menu-trigger-{{ section.id }}">
        <span class="origin-hamburger-line"></span>
        <span class="origin-hamburger-line"></span>
        <span class="origin-hamburger-line"></span>
      </button>
    </div>

    <!-- Small Logo -->
    <div class="origin-sticky-bar__logo">
      <a href="{{ routes.root_url }}">
        {% if section.settings.logo_image %}
          <img src="{{ section.settings.logo_image | image_url: width: 300 }}" 
               alt="{{ shop.name }}" 
               width="{{ section.settings.logo_image.width }}" 
               height="{{ section.settings.logo_image.height }}">
        {% else %}
          <span>{{ section.settings.logo_text }}</span>
        {% endif %}
      </a>
    </div>

    <!-- Right Actions -->
    <div class="origin-sticky-bar__actions">
      <button type="button" class="origin-icon-button" aria-label="Search" id="origin-search-trigger-{{ section.id }}">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><path d="M21 21l-4.35-4.35"/></svg>
      </button>
      
      {% if shop.customer_accounts_enabled %}
        <a href="{% if customer %}{{ routes.account_url }}{% else %}{{ routes.account_login_url }}{% endif %}" class="origin-icon-button" aria-label="Account">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
        </a>
      {% endif %}

      <a href="{{ routes.cart_url }}" class="origin-icon-button" aria-label="Cart">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 20a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-7-2h7a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-7a2 2 0 0 0-2 2v7a2 2 0 0 0 2 2zM6 5H4V3h2l.6 3h13.8l.6-3H23v2h-2"/><path d="M6 5l1.5 10h11L20 5"/></svg>
      </a>
    </div>
  </header>

  <!-- 2. HUGE LOGO OVERLAY -->
  <div class="origin-huge-logo-wrapper">
    <div class="origin-huge-logo-inner {% if section.settings.full_width_logo %}is-full-width{% endif %}">
      {% if section.settings.logo_image %}
        <img src="{{ section.settings.logo_image | image_url: width: 1600 }}" 
             alt="{{ section.settings.logo_text | escape }}" 
             class="origin-huge-logo-img" loading="eager"
             width="{{ section.settings.logo_image.width }}" height="{{ section.settings.logo_image.height }}">
      {% else %}
        <h1 class="origin-huge-logo-text">{{ section.settings.logo_text }}</h1>
      {% endif %}
    </div>
  </div>

  <!-- 3. UPGRADED MENU DRAWER -->
  <div class="origin-menu-overlay" id="origin-menu-overlay-{{ section.id }}">
    <div class="origin-menu-backdrop" id="origin-menu-backdrop-{{ section.id }}"></div>
    <div class="origin-menu-drawer">
      <nav>
        <ul class="origin-menu-list" id="origin-menu-list-{{ section.id }}">
          {% for link in linklists[section.settings.menu].links %}
            <li class="origin-menu-item" style="transition-delay: {{ forloop.index | times: 0.05 }}s;">
              <div class="origin-menu-link-wrapper {% if link.links != blank %}accordion-trigger{% endif %}">
                <a href="{{ link.url }}">{{ link.title }}</a>
                {% if link.links != blank %}
                  <svg class="origin-menu-accordion-icon" viewBox="0 0 14 14" fill="none" stroke="currentColor" stroke-width="2"><path d="M7 1v12M1 7h12"/></svg>
                {% endif %}
              </div>
              
              {% if link.links != blank %}
                <div class="origin-submenu">
                  <div class="origin-submenu-inner">
                    {% for child_link in link.links %}
                      <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                    {% endfor %}
                  </div>
                </div>
              {% endif %}
            </li>
          {% endfor %}
          
          {% if shop.customer_accounts_enabled %}
            <li class="origin-menu-item" style="margin-top: 20px; transition-delay: 0.4s;">
              <div class="origin-menu-link-wrapper">
                <a href="{{ routes.account_url }}" style="font-size: 18px;">Account</a>
              </div>
            </li>
          {% endif %}
        </ul>
      </nav>
    </div>
  </div>

  <!-- 4. SEARCH OVERLAY -->
  <div class="origin-search-overlay" id="origin-search-overlay-{{ section.id }}">
    <button class="origin-search-close" id="origin-search-close-{{ section.id }}">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 6L6 18M6 6l12 12"/></svg>
    </button>
    <form action="{{ routes.search_url }}" method="get" class="origin-search-form">
      <input type="search" name="q" id="origin-search-input-{{ section.id }}" placeholder="Search Store..." class="origin-search-input" autocomplete="off">
      <input type="hidden" name="type" value="product">
    </form>
  </div>
</div>

<script>
  (function() {
    const sectionId = "{{ section.id }}";
    const headerContainer = document.getElementById(`origin-gucci-header-${sectionId}`);
    
    if (!headerContainer) return;

    // --- 1. Scroll Logic ---
    const handleScroll = () => {
      const scrollY = window.scrollY || document.documentElement.scrollTop;
      if (scrollY > 20) {
        headerContainer.classList.add('is-shrunk');
      } else {
        headerContainer.classList.remove('is-shrunk');
      }
    };
    window.addEventListener('scroll', handleScroll, { passive: true });
    handleScroll();

    // --- 2. Menu Logic ---
    const menuTrigger = document.getElementById(`origin-menu-trigger-${sectionId}`);
    const menuOverlay = document.getElementById(`origin-menu-overlay-${sectionId}`);
    const menuBackdrop = document.getElementById(`origin-menu-backdrop-${sectionId}`);
    
    // Toggle Menu Function
    const toggleMenu = () => {
      const isOpen = headerContainer.classList.contains('menu-open');
      
      if (isOpen) {
        headerContainer.classList.remove('menu-open');
        document.body.style.overflow = '';
      } else {
        headerContainer.classList.add('menu-open');
        document.body.style.overflow = 'hidden';
      }
    };

    if (menuTrigger) menuTrigger.addEventListener('click', toggleMenu);
    if (menuBackdrop) menuBackdrop.addEventListener('click', toggleMenu);

    // Accordion Logic
    const accordionTriggers = document.querySelectorAll('.accordion-trigger');
    accordionTriggers.forEach(trigger => {
      trigger.addEventListener('click', (e) => {
        e.preventDefault();
        const icon = trigger.querySelector('.origin-menu-accordion-icon');
        const submenu = trigger.parentElement.querySelector('.origin-submenu');
        
        if (submenu) {
          if (submenu.classList.contains('is-open')) {
            submenu.classList.remove('is-open');
            if(icon) icon.style.transform = 'rotate(0deg)';
          } else {
            submenu.classList.add('is-open');
            if(icon) icon.style.transform = 'rotate(45deg)';
          }
        }
      });
    });

    // --- 3. Search Logic ---
    const searchTrigger = document.getElementById(`origin-search-trigger-${sectionId}`);
    const searchOverlay = document.getElementById(`origin-search-overlay-${sectionId}`);
    const searchClose = document.getElementById(`origin-search-close-${sectionId}`);
    const searchInput = document.getElementById(`origin-search-input-${sectionId}`);

    if (searchTrigger) {
      searchTrigger.addEventListener('click', () => {
        searchOverlay.classList.add('is-open');
        setTimeout(() => searchInput.focus(), 100);
      });
    }
    if (searchClose) {
      searchClose.addEventListener('click', () => {
        searchOverlay.classList.remove('is-open');
      });
    }

    // Escape Key Handler
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        if(headerContainer.classList.contains('menu-open')) toggleMenu();
        if(searchOverlay.classList.contains('is-open')) searchOverlay.classList.remove('is-open');
      }
    });

  })();
</script>

