{% schema %}
{
  "name": "Origin GG Header",
  "class": "origin-gucci-header-section",
  "settings": [
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image",
      "info": "Upload your main logo here (transparent PNG/SVG recommended)"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text (fallback)",
      "default": "GUCCI"
    },
    {
      "type": "range",
      "id": "hero_logo_width_desktop",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Huge Logo Width (Desktop)",
      "default": 60,
      "info": "Percentage of screen width"
    },
    {
      "type": "range",
      "id": "hero_logo_width_mobile",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Huge Logo Width (Mobile)",
      "default": 80
    },
    {
      "type": "range",
      "id": "logo_vertical_position",
      "min": 10,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Huge Logo Vertical Position",
      "default": 40,
      "info": "Distance from top of screen."
    },
    {
      "type": "header",
      "content": "Sticky Bar Colors (Scrolled)"
    },
    {
      "type": "color",
      "id": "header_bg_color_shrunk",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "header_text_color_shrunk",
      "label": "Text & Icons Color",
      "default": "#111111"
    },
    {
      "type": "header",
      "content": "Initial Colors (Overlay)"
    },
    {
      "type": "color",
      "id": "header_text_color_initial",
      "label": "Text, Icons & Huge Logo Color",
      "default": "#FFFFFF",
      "info": "This controls the color before you scroll."
    },
    {
      "type": "header",
      "content": "Menu & Search Overlay"
    },
    {
      "type": "color",
      "id": "menu_text_color",
      "label": "Menu & Search Text Color",
      "default": "#FFFFFF",
      "info": "Color of text inside the hamburger menu and search screen."
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    },
    {
      "type": "checkbox",
      "id": "show_desktop_menu",
      "label": "Show desktop menu",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Origin GG Header"
    }
  ]
}
{% endschema %}

<style>
  /* --- VARS --- */
  .origin-gucci-header-section {
    --header-transition: all 0.4s ease-out;
    --logo-width-desktop: {{ section.settings.hero_logo_width_desktop }}vw;
    --logo-width-mobile: {{ section.settings.hero_logo_width_mobile }}vw;
    --logo-vertical-pos: {{ section.settings.logo_vertical_position }}vh;
    
    --header-bg-shrunk: {{ section.settings.header_bg_color_shrunk }};
    --header-text-shrunk: {{ section.settings.header_text_color_shrunk }};
    --header-text-initial: {{ section.settings.header_text_color_initial }};
    --menu-text-color: {{ section.settings.menu_text_color }};
  }

  /* --- WRAPPER --- */
  .origin-gucci-header {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 0; 
    z-index: 50;
    pointer-events: none; 
  }

  /* --- STICKY TOP BAR --- */
  .origin-sticky-bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 16px 24px;
    box-sizing: border-box;
    transition: var(--header-transition);
    background-color: transparent; 
    color: var(--header-text-initial);
    pointer-events: none; /* Container passes clicks */
  }

  .origin-gucci-header.is-shrunk .origin-sticky-bar {
    background-color: var(--header-bg-shrunk);
    color: var(--header-text-shrunk);
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    padding-top: 12px;
    padding-bottom: 12px;
  }

  /* --- STICKY BAR LOGO --- */
  .origin-sticky-bar__logo {
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: var(--header-transition);
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: none;
  }

  .origin-sticky-bar__logo a {
    display: block;
    line-height: 0;
    text-decoration: none;
    color: inherit;
    pointer-events: auto;
  }

  .origin-sticky-bar__logo img {
    height: 32px; 
    width: auto;
    display: block;
  }
  
  .origin-sticky-bar__logo span {
    font-size: 20px;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .origin-gucci-header.is-shrunk .origin-sticky-bar__logo {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: auto;
  }

  /* --- HUGE LOGO OVERLAY --- */
  .origin-huge-logo-wrapper {
    position: fixed; 
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 40; 
    pointer-events: none; 
    display: flex;
    justify-content: center;
    transition: opacity 0.4s ease, transform 0.4s ease, visibility 0.4s;
    transform-origin: center top;
  }

  .origin-huge-logo-inner {
    margin-top: var(--logo-vertical-pos); 
    transform: translateY(-50%);
    width: var(--logo-width-desktop);
    max-width: 1200px;
    text-align: center;
    color: var(--header-text-initial);
  }

  .origin-huge-logo-img {
    width: 100%;
    height: auto;
    display: block;
  }

  .origin-huge-logo-text {
    font-size: 10vw;
    line-height: 1;
    font-family: serif;
    text-transform: uppercase;
    margin: 0;
  }

  .origin-gucci-header.is-shrunk .origin-huge-logo-wrapper {
    opacity: 0;
    visibility: hidden;
    transform: scale(0.8) translateY(-100px); 
  }

  /* --- ICONS & MENU --- */
  .origin-sticky-bar__menu, 
  .origin-sticky-bar__actions {
    display: flex;
    align-items: center;
    gap: 16px;
    z-index: 2147483647; /* MAX Z-INDEX */
    pointer-events: auto !important; 
    position: relative;
  }

  .origin-sticky-bar__actions {
    justify-content: flex-end;
  }

  .origin-sticky-button,
  .origin-icon-button {
    background: transparent;
    border: none;
    padding: 8px;
    cursor: pointer !important;
    color: inherit; 
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: var(--header-transition);
    pointer-events: auto !important;
    text-decoration: none;
    position: relative;
  }

  .origin-icon-button svg,
  .origin-sticky-button svg {
    width: 24px;
    height: 24px;
    pointer-events: none;
  }

  .origin-desktop-menu {
    display: none;
    gap: 20px;
    pointer-events: auto;
  }

  .origin-desktop-menu__link {
    text-decoration: none;
    color: inherit;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  /* --- MOBILE STYLES --- */
  @media (min-width: 990px) {
    .origin-desktop-menu {
      display: {% if section.settings.show_desktop_menu %}flex{% else %}none{% endif %};
    }
  }

  @media (max-width: 749px) {
    .origin-huge-logo-inner {
      width: var(--logo-width-mobile);
    }
    .origin-sticky-bar {
      padding: 12px 16px;
    }
    .origin-sticky-bar__actions {
      gap: 8px;
    }
    .origin-icon-button, .origin-sticky-button {
      padding: 6px;
    }
  }

  /* --- DRAWER COMMONS --- */
  .origin-overlay-base {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.5); 
    backdrop-filter: blur(4px);
    z-index: 2147483647; 
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s;
    pointer-events: auto;
  }
  
  .origin-overlay-base.is-open {
    opacity: 1;
    visibility: visible;
  }

  /* --- MENU DRAWER SPECIFIC --- */
  .origin-menu-drawer {
    /* Transparent Black Background */
    background: rgba(0, 0, 0, 0.5); 
    backdrop-filter: blur(20px);
    width: 320px;
    max-width: 85vw;
    height: 100%;
    padding: 30px;
    transform: translateX(-100%);
    transition: transform 0.4s cubic-bezier(0.25, 1, 0.5, 1);
    display: flex;
    flex-direction: column;
    color: var(--menu-text-color); /* Controlled by setting */
  }

  .origin-overlay-base.is-open .origin-menu-drawer {
    transform: translateX(0);
  }

  .origin-menu-close {
    align-self: flex-end;
    background: none;
    border: none;
    cursor: pointer;
    margin-bottom: 30px;
    color: var(--menu-text-color); /* Controlled by setting */
  }
  
  .origin-menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 20px;
    overflow-y: auto;
  }

  .origin-menu-list a {
    text-decoration: none;
    color: var(--menu-text-color); /* Controlled by setting */
    font-size: 18px;
    font-weight: 500;
    text-transform: uppercase;
  }

  /* --- SEARCH MODAL SPECIFIC --- */
  .origin-search-container {
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(20px);
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    color: var(--menu-text-color); /* Controlled by setting */
  }

  .origin-search-close {
    position: absolute;
    top: 24px;
    right: 24px;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--menu-text-color); /* Controlled by setting */
    z-index: 10;
  }

  .origin-search-form {
    width: 90%;
    max-width: 600px;
    position: relative;
  }

  .origin-search-input {
    width: 100%;
    border: none;
    border-bottom: 2px solid var(--menu-text-color); 
    font-size: 32px;
    padding: 10px 0;
    background: transparent;
    border-radius: 0;
    outline: none;
    font-family: inherit;
    color: var(--menu-text-color); /* Controlled by setting */
  }

  .origin-search-input::placeholder {
    color: var(--menu-text-color); 
    opacity: 0.6;
  }

  .origin-search-submit {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
    color: var(--menu-text-color); /* Controlled by setting */
  }

</style>

<!-- Main Container -->
<div id="origin-gucci-header-{{ section.id }}" class="origin-gucci-header" data-section-id="{{ section.id }}">
  
  <!-- 1. STICKY BAR (Nav) -->
  <header class="origin-sticky-bar">
    <div class="origin-sticky-bar__menu">
      <button class="origin-sticky-button" type="button" aria-label="Menu" id="origin-menu-trigger-{{ section.id }}">
        <svg viewBox="0 0 24 24" fill="currentColor"><path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/></svg>
      </button>
      {% if section.settings.show_desktop_menu and section.settings.menu != blank %}
        <nav class="origin-desktop-menu">
          {% for link in linklists[section.settings.menu].links %}
            <a href="{{ link.url }}" class="origin-desktop-menu__link">{{ link.title }}</a>
          {% endfor %}
        </nav>
      {% endif %}
    </div>

    <!-- Small Logo -->
    <div class="origin-sticky-bar__logo">
      <a href="{{ routes.root_url }}">
        {% if section.settings.logo_image %}
          <img src="{{ section.settings.logo_image | image_url: width: 300 }}" 
               alt="{{ shop.name }}" 
               width="{{ section.settings.logo_image.width }}" 
               height="{{ section.settings.logo_image.height }}">
        {% else %}
          <span>{{ section.settings.logo_text }}</span>
        {% endif %}
      </a>
    </div>

    <div class="origin-sticky-bar__actions">
      <!-- Search Trigger -->
      <button type="button" class="origin-icon-button" aria-label="Search" id="origin-search-trigger-{{ section.id }}">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><path d="M21 21l-4.35-4.35"/></svg>
      </button>
      
      <!-- Account Link -->
      {% if shop.customer_accounts_enabled %}
        <a href="{% if customer %}{{ routes.account_url }}{% else %}{{ routes.account_login_url }}{% endif %}" 
           class="origin-icon-button" 
           aria-label="Account" 
           onclick="window.location.href = this.href; return false;"
           style="pointer-events: auto !important; z-index: 2147483647;">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
        </a>
      {% endif %}

      <!-- Cart -->
      <a href="{{ routes.cart_url }}" class="origin-icon-button" aria-label="Cart" style="pointer-events: auto;">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 20a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-7-2h7a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-7a2 2 0 0 0-2 2v7a2 2 0 0 0 2 2zM6 5H4V3h2l.6 3h13.8l.6-3H23v2h-2"/><path d="M6 5l1.5 10h11L20 5"/></svg>
      </a>
    </div>
  </header>

  <!-- 2. HUGE LOGO OVERLAY -->
  <div class="origin-huge-logo-wrapper">
    <div class="origin-huge-logo-inner">
      {% if section.settings.logo_image %}
        <img src="{{ section.settings.logo_image | image_url: width: 1600 }}" 
             alt="{{ section.settings.logo_text | escape }}" 
             class="origin-huge-logo-img"
             loading="eager"
             width="{{ section.settings.logo_image.width }}"
             height="{{ section.settings.logo_image.height }}">
      {% else %}
        <h1 class="origin-huge-logo-text">{{ section.settings.logo_text }}</h1>
      {% endif %}
    </div>
  </div>

  <!-- 3. MOBILE MENU DRAWER -->
  <div class="origin-menu-overlay origin-overlay-base" id="origin-menu-overlay-{{ section.id }}">
    <div class="origin-menu-drawer">
      <button class="origin-menu-close" id="origin-menu-close-{{ section.id }}" aria-label="Close">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 6L6 18M6 6l12 12"/></svg>
      </button>
      <nav>
        <ul class="origin-menu-list">
          {% for link in linklists[section.settings.menu].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
          {% if shop.customer_accounts_enabled %}
            <li style="margin-top: 20px; border-top: 1px solid rgba(255,255,255,0.2); padding-top: 20px;">
              <a href="{{ routes.account_url }}">Account</a>
            </li>
          {% endif %}
        </ul>
      </nav>
    </div>
  </div>

  <!-- 4. SEARCH MODAL OVERLAY -->
  <div class="origin-search-overlay origin-overlay-base" id="origin-search-overlay-{{ section.id }}">
    <div class="origin-search-container">
      <button class="origin-search-close" id="origin-search-close-{{ section.id }}" aria-label="Close search">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M18 6L6 18M6 6l12 12"/></svg>
      </button>
      <form action="{{ routes.search_url }}" method="get" role="search" class="origin-search-form">
        <input type="search" 
               name="q" 
               id="origin-search-input-{{ section.id }}" 
               value="{{ search.terms | escape }}" 
               placeholder="Search..." 
               class="origin-search-input"
               autocomplete="off">
        <input type="hidden" name="type" value="product">
        <button type="submit" class="origin-search-submit">Search</button>
      </form>
    </div>
  </div>

</div>

<script>
  (function() {
    const sectionId = "{{ section.id }}";
    const headerContainer = document.getElementById(`origin-gucci-header-${sectionId}`);
    
    if (!headerContainer) return;

    // --- 1. Scroll Logic ---
    const handleScroll = () => {
      const scrollY = window.scrollY || document.documentElement.scrollTop;
      if (scrollY > 20) {
        headerContainer.classList.add('is-shrunk');
      } else {
        headerContainer.classList.remove('is-shrunk');
      }
    };
    window.addEventListener('scroll', handleScroll, { passive: true });
    handleScroll();

    // --- 2. Overlay Manager ---
    const toggleOverlay = (overlayId, isOpen) => {
      const overlay = document.getElementById(overlayId);
      if (!overlay) return;

      if (isOpen) {
        overlay.classList.add('is-open');
        document.body.style.overflow = 'hidden'; 
      } else {
        overlay.classList.remove('is-open');
        document.body.style.overflow = ''; 
      }
    };

    // --- 3. Menu Listeners ---
    const menuTrigger = document.getElementById(`origin-menu-trigger-${sectionId}`);
    const menuClose = document.getElementById(`origin-menu-close-${sectionId}`);
    const menuOverlayId = `origin-menu-overlay-${sectionId}`;

    if (menuTrigger) {
      menuTrigger.addEventListener('click', (e) => {
        e.preventDefault();
        toggleOverlay(menuOverlayId, true);
      });
    }
    if (menuClose) {
      menuClose.addEventListener('click', (e) => {
        e.preventDefault();
        toggleOverlay(menuOverlayId, false);
      });
    }

    const menuOverlay = document.getElementById(menuOverlayId);
    if (menuOverlay) {
      menuOverlay.addEventListener('click', (e) => {
        if (e.target === menuOverlay) toggleOverlay(menuOverlayId, false);
      });
    }

    // --- 4. Search Listeners ---
    const searchTrigger = document.getElementById(`origin-search-trigger-${sectionId}`);
    const searchClose = document.getElementById(`origin-search-close-${sectionId}`);
    const searchOverlayId = `origin-search-overlay-${sectionId}`;
    const searchInput = document.getElementById(`origin-search-input-${sectionId}`);

    if (searchTrigger) {
      searchTrigger.addEventListener('click', (e) => {
        e.preventDefault();
        toggleOverlay(searchOverlayId, true);
        setTimeout(() => {
          if (searchInput) searchInput.focus();
        }, 100);
      });
    }

    if (searchClose) {
      searchClose.addEventListener('click', (e) => {
        e.preventDefault();
        toggleOverlay(searchOverlayId, false);
      });
    }

    // Close on Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        toggleOverlay(menuOverlayId, false);
        toggleOverlay(searchOverlayId, false);
      }
    });

  })();
</script>


