{% schema %}
{
  "name": "Origin Luxury Grid",
  "class": "origin-luxury-grid-section",
  "settings": [
    {
      "type": "header",
      "content": "LAYOUT & SPACING"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 0,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Grid Gap",
      "default": 20
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image Aspect Ratio",
      "default": "portrait",
      "options": [
        { "value": "portrait", "label": "Portrait (3:4)" },
        { "value": "square", "label": "Square (1:1)" },
        { "value": "landscape", "label": "Landscape (4:3)" },
        { "value": "auto", "label": "Natural (No Crop)" }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "side_padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Side Padding",
      "default": 40
    },
    {
      "type": "header",
      "content": "TYPOGRAPHY"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Font Size",
      "default": 14
    },
    {
      "type": "range",
      "id": "font_weight",
      "min": 300,
      "max": 900,
      "step": 100,
      "label": "Font Weight",
      "default": 600,
      "info": "400 is Normal, 700 is Bold"
    },
    {
      "type": "range",
      "id": "letter_spacing",
      "min": 0,
      "max": 5,
      "step": 0.5,
      "unit": "px",
      "label": "Letter Spacing",
      "default": 0.5
    },
    {
      "type": "select",
      "id": "text_transform",
      "label": "Text Style",
      "default": "uppercase",
      "options": [
        { "value": "uppercase", "label": "UPPERCASE" },
        { "value": "capitalize", "label": "Capitalize" },
        { "value": "none", "label": "Normal" }
      ]
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Collection Item",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Category Name"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Origin Luxury Grid (4-Col)",
      "blocks": [
        { "type": "item", "settings": { "title": "Her Bags" } },
        { "type": "item", "settings": { "title": "Her Shoes" } },
        { "type": "item", "settings": { "title": "His Shoes" } },
        { "type": "item", "settings": { "title": "His Bags" } }
      ]
    }
  ]
}
{% endschema %}

<style>
  .origin-grid-section {
    width: 100%;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: {{ section.settings.side_padding }}px;
    padding-right: {{ section.settings.side_padding }}px;
    box-sizing: border-box;
  }

  .origin-grid-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* Force 4 columns */
    gap: {{ section.settings.grid_gap }}px;
    width: 100%;
    max-width: 1800px;
    margin: 0 auto;
  }

  .origin-grid-item {
    display: block;
    text-decoration: none;
    color: {{ section.settings.text_color }};
    group: "item"; /* Logic for hover */
  }

  .origin-grid-img-wrapper {
    width: 100%;
    overflow: hidden;
    position: relative;
    background: #f4f4f4; /* Placeholder color */
    margin-bottom: 16px;
  }

  /* Aspect Ratio Logic */
  .ratio-portrait { aspect-ratio: 3/4; }
  .ratio-square   { aspect-ratio: 1/1; }
  .ratio-landscape{ aspect-ratio: 4/3; }
  .ratio-auto     { height: auto; }

  .origin-grid-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  /* Hover Effect: Zoom Image */
  .origin-grid-item:hover .origin-grid-img {
    transform: scale(1.05);
  }

  .origin-grid-title {
    margin: 0;
    line-height: 1.2;
    /* User Settings */
    font-size: {{ section.settings.font_size }}px;
    font-weight: {{ section.settings.font_weight }};
    letter-spacing: {{ section.settings.letter_spacing }}px;
    text-transform: {{ section.settings.text_transform }};
    text-align: {{ section.settings.text_alignment }};
    position: relative;
    display: inline-block;
    width: 100%;
  }

  /* Hover Effect: Underline Text (Only if centered or left) */
  .origin-grid-title span {
    position: relative;
    display: inline-block;
    padding-bottom: 2px;
  }

  .origin-grid-title span::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 0;
    height: 1px;
    background: {{ section.settings.text_color }};
    transition: width 0.3s ease;
  }

  .origin-grid-item:hover .origin-grid-title span::after {
    width: 100%;
  }

  /* --- MOBILE RESPONSIVE --- */
  @media (max-width: 990px) {
    .origin-grid-container {
      grid-template-columns: repeat(2, 1fr); /* 2 Columns on Tablet/Mobile */
      gap: 16px;
    }
    .origin-grid-section {
      padding-left: 16px;
      padding-right: 16px;
    }
  }
</style>

<div class="origin-grid-section">
  <div class="origin-grid-container">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link | default: '#' }}" class="origin-grid-item">
        <div class="origin-grid-img-wrapper ratio-{{ section.settings.image_ratio }}">
          {% if block.settings.image %}
            {{ block.settings.image | image_url: width: 800 | image_tag: class: 'origin-grid-img', loading: 'lazy' }}
          {% else %}
            {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'origin-grid-img placeholder' }}
          {% endif %}
        </div>
        
        <h3 class="origin-grid-title">
          <span>{{ block.settings.title }}</span>
        </h3>
      </a>
    {% endfor %}
  </div>
</div>

