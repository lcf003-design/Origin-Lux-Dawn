{% schema %}
{
  "name": "Gucci Grid V2 (Clean)",
  "settings": [
    {
      "type": "range",
      "id": "grid_gap",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Space Between Items",
      "default": 20
    },
    {
      "type": "range",
      "id": "side_padding",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Side Padding (Left/Right)",
      "default": 40
    },
    {
      "type": "range",
      "id": "top_padding",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Top/Bottom Padding",
      "default": 60
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "collection_block",
      "name": "Collection",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image (Square or Portrait)"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Handbags"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gucci Grid V2 (Clean)",
      "blocks": [
        { "type": "collection_block" },
        { "type": "collection_block" },
        { "type": "collection_block" },
        { "type": "collection_block" }
      ]
    }
  ]
}
{% endschema %}

<div class="gucci-wrapper">
  <div class="gucci-grid">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="gucci-item">
        <div class="img-box">
          {% if block.settings.image %}
            {{ block.settings.image | image_url: width: 800 | image_tag: class: 'g-img', loading: 'lazy' }}
          {% else %}
            {{ 'collection-1' | placeholder_svg_tag: 'g-img placeholder' }}
          {% endif %}
        </div>
        <div class="text-box">
          <span class="g-label">{{ block.settings.heading }}</span>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

<style>
  .gucci-wrapper {
    background-color: #ffffff;
    padding: {{ section.settings.top_padding }}px {{ section.settings.side_padding }}px;
  }

  .gucci-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* 4 Columns like photo */
    gap: {{ section.settings.grid_gap }}px; /* The Padding between items */
  }

  .gucci-item {
    display: block;
    text-decoration: none;
  }

  /* IMAGE */
  .img-box {
    width: 100%;
    aspect-ratio: 1 / 1; /* Square look like the photo, or change to 4/5 */
    overflow: hidden;
    margin-bottom: 15px; /* Space between image and text */
    background: #f4f4f4;
  }

  .g-img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* or contain if you want the whole shoe visible with white space */
    transition: transform 0.5s ease;
  }
  
  .gucci-item:hover .g-img {
    transform: scale(1.03); /* Gentle zoom */
  }

  /* TEXT BELOW */
  .text-box {
    text-align: center;
  }

  .g-label {
    color: {{ section.settings.text_color }};
    font-family: var(--font-body-family);
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    text-transform: capitalize; /* "Handbags" instead of "HANDBAGS" */
  }
  
  .placeholder { background: #eee; }

  /* MOBILE */
  @media screen and (max-width: 768px) {
    .gucci-grid {
      grid-template-columns: repeat(2, 1fr); /* 2 per row on mobile */
      gap: 10px;
    }
    .gucci-wrapper { padding: 20px 10px; }
  }
</style>