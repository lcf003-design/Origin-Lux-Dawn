{% schema %}
{
  "name": "Gucci Master Grid",
  "settings": [
    {
      "type": "header",
      "content": "Layout & Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Men's Accessories"
    },
    {
      "type": "select",
      "id": "layout_style",
      "label": "Grid Layout",
      "options": [
        { "value": "grid", "label": "Standard Equal Grid" },
        { "value": "mosaic", "label": "2 Top / 3 Bottom (Classic)" },
        { "value": "mosaic_extended", "label": "2 Top / 2 Middle / 3 Bottom (Extended)" }
      ],
      "default": "mosaic_extended"
    },
    {
      "type": "header",
      "content": "Image Dimensions & Scaling"
    },
    {
      "type": "select",
      "id": "image_fit",
      "label": "Image Scaling",
      "options": [
        { "value": "cover", "label": "Fill Card (Crop to Fit)" },
        { "value": "contain", "label": "Fit Entire Image (No Crop)" }
      ],
      "default": "cover",
      "info": "'Fill' ensures the grid looks uniform but may crop edges. 'Fit' ensures the whole photo is seen but may leave space."
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Focus Position",
      "options": [
        { "value": "top center", "label": "Top" },
        { "value": "center center", "label": "Center" },
        { "value": "bottom center", "label": "Bottom" }
      ],
      "default": "center center",
      "info": "Only applies if 'Fill Card' is selected. Helps if heads/feet are being cut off."
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 300,
      "max": 900,
      "step": 50,
      "default": 550,
      "unit": "px",
      "label": "Card Height (Desktop)"
    },
    {
      "type": "range",
      "id": "height_mobile",
      "min": 200,
      "max": 700,
      "step": 10,
      "default": 500,
      "unit": "px",
      "label": "Card Height (Mobile)"
    },
    {
      "type": "header",
      "content": "Colors & Hover Effects"
    },
    {
      "type": "color",
      "id": "card_bg",
      "label": "Default Background",
      "default": "#F2F2F2",
      "info": "The light grey color when NOT hovering."
    },
    {
      "type": "color",
      "id": "card_hover_bg",
      "label": "Hover Background",
      "default": "#FFFFFF",
      "info": "The color it turns when you hover."
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "select",
      "id": "font_family",
      "label": "Font Style",
      "options": [
        { "value": "theme", "label": "Use Theme Font" },
        { "value": "gucci", "label": "Minimal Sans (Gucci Style)" }
      ],
      "default": "gucci"
    },
    {
      "type": "range",
      "id": "font_scale",
      "min": 80,
      "max": 150,
      "step": 5,
      "default": 100,
      "unit": "%",
      "label": "Font Size Scale"
    },
    {
      "type": "range",
      "id": "letter_spacing",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 3,
      "unit": "px",
      "label": "Letter Spacing"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Sub-Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Video (Optional)",
          "info": "Overrides image. MP4 recommended. Plays automatically."
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "Category"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "Discover More"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gucci Master Grid",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ]
}
{% endschema %}

<div class="gucci-grid-wrapper" id="GucciGrid-{{ section.id }}" data-section-id="{{ section.id }}">
  {% if section.settings.heading != blank %}
    <h2 class="gucci-heading reveal-on-scroll" style="--font-scale: {{ section.settings.font_scale | divided_by: 100.0 }}; --letter-spacing: {{ section.settings.letter_spacing }}px;">
      {{ section.settings.heading }}
    </h2>
  {% endif %}

  <div class="gucci-grid-container style-{{ section.settings.layout_style }} font-{{ section.settings.font_family }}">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" 
         class="gucci-card reveal-on-scroll" 
         style="
           --bg-default: {{ section.settings.card_bg }}; 
           --bg-hover: {{ section.settings.card_hover_bg }};
           transition-delay: {{ forloop.index0 | times: 100 }}ms;
           --font-scale: {{ section.settings.font_scale | divided_by: 100.0 }};
           --letter-spacing: {{ section.settings.letter_spacing }}px;
           --image-fit: {{ section.settings.image_fit }};
           --image-pos: {{ section.settings.image_position }};
         ">
        
        <div class="gucci-image-wrapper">
          
          {% if block.settings.video != blank %}
            {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, controls: false, class: 'gucci-video-element' }}
          {% elsif block.settings.image != blank %}
            <img 
              src="{{ block.settings.image | image_url: width: 1600 }}" 
              alt="{{ block.settings.title }}"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
              loading="lazy"
            >
          {% else %}
            {% assign placeholder_index = forloop.index0 | modulo: 6 | plus: 1 %}
            {{ 'collection-' | append: placeholder_index | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
          
        </div>
        
        <div class="gucci-content">
          <div class="gucci-text-group">
            <span class="gucci-title">{{ block.settings.title }}</span>
            {% if block.settings.link_text != blank %}
              <div class="gucci-link-wrapper">
                <span class="gucci-link-text">{{ block.settings.link_text }}</span>
                <span class="gucci-underline"></span>
              </div>
            {% endif %}
          </div>
        </div>

      </a>
    {% endfor %}
  </div>
</div>

<script>
  (function() {
    function initGucciAnimations() {
      const container = document.getElementById('GucciGrid-{{ section.id }}');
      if (!container) return;

      const observerOptions = {
        root: null,
        rootMargin: '0px',
        threshold: 0.1
      };

      const observer = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);

      const elements = container.querySelectorAll('.reveal-on-scroll');
      elements.forEach(el => observer.observe(el));
    }

    document.addEventListener("DOMContentLoaded", initGucciAnimations);
    document.addEventListener("shopify:section:load", function(event) {
      if (event.detail.sectionId === "{{ section.id }}") {
        initGucciAnimations();
      }
    });
    if (window.Shopify && window.Shopify.designMode) {
       initGucciAnimations();
    }
  })();
</script>

<style>
  /* --- CONTAINER --- */
  .gucci-grid-wrapper {
    padding: 60px 20px;
    background-color: #fff;
    overflow: hidden;
  }

  /* --- TYPOGRAPHY --- */
  .font-gucci .gucci-title,
  .font-gucci .gucci-heading,
  .font-gucci .gucci-link-text {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif !important;
  }

  .gucci-heading {
    text-align: center;
    font-size: calc(2.2rem * var(--font-scale, 1));
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #1a1a1a;
    font-weight: 400;
    margin-bottom: 50px;
  }

  /* --- GRID SYSTEM --- */
  .gucci-grid-container {
    display: grid;
    gap: 2px;
    max-width: 1600px;
    margin: 0 auto;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .style-mosaic_extended { grid-template-columns: repeat(6, 1fr); }
    .style-mosaic_extended .gucci-card:nth-child(1),
    .style-mosaic_extended .gucci-card:nth-child(2),
    .style-mosaic_extended .gucci-card:nth-child(3),
    .style-mosaic_extended .gucci-card:nth-child(4) { grid-column: span 3; }
    .style-mosaic_extended .gucci-card:nth-child(n+5) { grid-column: span 2; }

    .style-mosaic { grid-template-columns: repeat(6, 1fr); }
    .style-mosaic .gucci-card:nth-child(1), .style-mosaic .gucci-card:nth-child(2) { grid-column: span 3; }
    .style-mosaic .gucci-card:nth-child(n+3) { grid-column: span 2; }

    .style-grid { grid-template-columns: repeat(3, 1fr); }
  }

  /* --- CARD STYLING --- */
  .gucci-card {
    position: relative;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    text-decoration: none;
    
    /* Dynamic Mobile Height */
    height: {{ section.settings.height_mobile }}px;
    
    background-color: var(--bg-default);
    transition: background-color 0.4s ease, opacity 0.3s ease;
  }

  .gucci-card:hover {
    background-color: var(--bg-hover) !important;
  }

  /* Dynamic Desktop Height */
  @media (min-width: 1024px) {
    .gucci-card { height: {{ section.settings.height_desktop }}px; }
  }

  /* --- IMAGE & VIDEO --- */
  .gucci-image-wrapper {
    position: relative;
    width: 100%;
    height: 75%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .gucci-image-wrapper img,
  .gucci-image-wrapper video {
    width: 100%;
    height: 100%;
    
    /* HERE IS THE FIX: Uses settings variables */
    object-fit: var(--image-fit, cover);
    object-position: var(--image-pos, center center);
    
    transition: transform 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  /* Ensure placeholder SVGs behave */
  .placeholder-svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gucci-video-element {
    min-height: 100%;
    min-width: 100%;
    display: block;
    object-fit: var(--image-fit, cover);
    object-position: var(--image-pos, center center);
  }

  .gucci-card:hover .gucci-image-wrapper img,
  .gucci-card:hover .gucci-image-wrapper video {
    transform: scale(1.05);
  }

  /* --- ANIMATIONS & CONTENT --- */
  .reveal-on-scroll {
    opacity: 0;
    transform: translateY(40px);
    transition: opacity 0.8s ease-out, transform 0.8s cubic-bezier(0.2, 0.8, 0.2, 1), background-color 0.4s ease;
    will-change: opacity, transform;
  }

  .reveal-on-scroll.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .gucci-content {
    height: 25%;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding-top: 25px;
  }

  .gucci-text-group {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: center;
  }

  .gucci-title {
    color: #000;
    font-size: calc(1.1rem * var(--font-scale, 1));
    letter-spacing: var(--letter-spacing, 1px);
    text-transform: uppercase;
    font-family: var(--font-heading-family); 
    transition: color 0.3s ease;
    font-weight: 500;
  }

  .gucci-link-wrapper {
    position: relative;
    display: inline-block;
    overflow: hidden;
    padding-bottom: 4px;
  }

  .gucci-link-text {
    color: #4a4a4a;
    font-size: calc(0.7rem * var(--font-scale, 1));
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-weight: 600;
    font-family: sans-serif;
    display: block;
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .gucci-underline {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: #1a1a1a;
    transform: scaleX(0); 
    transform-origin: right;
    transition: transform 0.4s cubic-bezier(0.7, 0, 0.3, 1);
  }

  .gucci-card:hover .gucci-underline {
    transform: scaleX(1);
    transform-origin: left;
  }

  .gucci-card:hover .gucci-link-text {
    color: #000;
    transform: translateY(-2px);
  }
</style>


