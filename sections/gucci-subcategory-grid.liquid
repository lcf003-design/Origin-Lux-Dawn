{% schema %}
{
  "name": "Gucci Mosaic Grid",
  "settings": [
    {
      "type": "header",
      "content": "Layout & Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Men's Accessories"
    },
    {
      "type": "select",
      "id": "layout_style",
      "label": "Grid Layout",
      "options": [
        { "value": "grid", "label": "Standard Equal Grid" },
        { "value": "mosaic", "label": "2 Top / 3 Bottom (Mosaic)" }
      ],
      "default": "mosaic"
    },
    {
      "type": "header",
      "content": "Design & Style"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text Position",
      "options": [
        { "value": "overlay", "label": "Overlay (Text on Image)" },
        { "value": "below", "label": "Below Image (Classic Editorial)" }
      ],
      "default": "below"
    },
    {
      "type": "color",
      "id": "card_bg",
      "label": "Card Background Color",
      "default": "#F2F2F2",
      "info": "Used when Text Position is 'Below Image'"
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 300,
      "max": 800,
      "step": 50,
      "default": 550,
      "unit": "px",
      "label": "Card Height (Desktop)"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Sub-Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "TIES"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "Discover More"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gucci Mosaic Grid",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ]
}
{% endschema %}

<div class="gucci-grid-wrapper">
  {% if section.settings.heading != blank %}
    <h2 class="gucci-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="gucci-grid-container style-{{ section.settings.layout_style }} text-pos-{{ section.settings.text_position }}">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="gucci-card" style="background-color: {{ section.settings.card_bg }};">
        
        <div class="gucci-image-wrapper">
          {% if block.settings.image != blank %}
            <img 
              src="{{ block.settings.image | image_url: width: 1600 }}" 
              alt="{{ block.settings.title }}"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
              loading="lazy"
            >
          {% else %}
            {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
          
          {% if section.settings.text_position == 'overlay' %}
            <div class="gucci-overlay"></div>
          {% endif %}
        </div>
        
        <div class="gucci-content">
          <div class="gucci-text-group">
            <span class="gucci-title">{{ block.settings.title }}</span>
            {% if block.settings.link_text != blank %}
              <span class="gucci-link-text">{{ block.settings.link_text }}</span>
            {% endif %}
          </div>
        </div>

      </a>
    {% endfor %}
  </div>
</div>

<style>
  /* --- CONTAINER --- */
  .gucci-grid-wrapper {
    padding: 60px 20px;
    background-color: #fff;
  }

  .gucci-heading {
    text-align: center;
    font-family: var(--font-heading-family);
    font-size: 2.5rem;
    margin-bottom: 50px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #1a1a1a;
    font-weight: 400;
  }

  /* --- GRID LAYOUTS --- */
  .gucci-grid-container {
    display: grid;
    gap: 2px;
    max-width: 1600px;
    margin: 0 auto;
  }

  /* Standard Grid */
  .style-grid { grid-template-columns: 1fr; }
  @media (min-width: 768px) { .style-grid { grid-template-columns: repeat(2, 1fr); } }
  @media (min-width: 1024px) { .style-grid { grid-template-columns: repeat(3, 1fr); } }

  /* Mosaic Grid (2 Top / 3 Bottom) */
  .style-mosaic { grid-template-columns: 1fr; }
  @media (min-width: 768px) {
    .style-mosaic { grid-template-columns: repeat(6, 1fr); }
    .style-mosaic .gucci-card:nth-child(1),
    .style-mosaic .gucci-card:nth-child(2) { grid-column: span 3; }
    .style-mosaic .gucci-card:nth-child(n+3) { grid-column: span 2; }
  }

  /* --- CARD BASE --- */
  .gucci-card {
    position: relative;
    display: flex;
    flex-direction: column; /* Allows stacking image then text */
    overflow: hidden;
    text-decoration: none;
    height: 500px; /* Default height */
    transition: opacity 0.3s ease;
  }

  @media (min-width: 1024px) {
    .gucci-card { height: {{ section.settings.height_desktop }}px; }
  }

  /* --- IMAGE HANDLING --- */
  .gucci-image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    transition: transform 0.8s ease;
  }

  .gucci-image-wrapper img,
  .gucci-image-wrapper svg {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Keeps images filling the space */
    transition: transform 0.8s ease;
  }

  /* Hover Zoom Effect */
  .gucci-card:hover .gucci-image-wrapper img {
    transform: scale(1.04);
  }

  /* --- TEXT STYLES: "BELOW IMAGE" (The one you asked for) --- */
  .text-pos-below .gucci-image-wrapper {
    height: 75%; /* Image takes top 75% */
  }

  .text-pos-below .gucci-content {
    height: 25%; /* Text takes bottom 25% */
    display: flex;
    justify-content: center; /* Center horizontally */
    align-items: flex-start; /* Align to top of text area */
    padding-top: 20px;
    background: transparent;
  }

  .text-pos-below .gucci-text-group {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .text-pos-below .gucci-title {
    color: #000;
    font-size: 1.2rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    font-family: var(--font-heading-family); /* Matches theme font */
  }

  .text-pos-below .gucci-link-text {
    color: #4a4a4a;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    text-decoration: underline;
    text-underline-offset: 4px; /* The gap between text and line */
    font-weight: 600;
    font-family: sans-serif;
  }

  /* --- TEXT STYLES: "OVERLAY" (The original style) --- */
  .text-pos-overlay .gucci-image-wrapper { height: 100%; }
  
  .text-pos-overlay .gucci-content {
    position: absolute;
    inset: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 2;
  }

  .text-pos-overlay .gucci-label {
    background: rgba(255, 255, 255, 0.9);
    padding: 15px 30px;
  }

  .text-pos-overlay .gucci-title {
    color: #000;
    font-size: 0.9rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    font-weight: 600;
  }
  
  .text-pos-overlay .gucci-link-text { display: none; } /* Hide link text in overlay mode */

</style>


