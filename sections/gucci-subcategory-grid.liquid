{% schema %}
{
  "name": "Gucci Sub-Category Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Men's Accessories"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Columns on Desktop"
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 300,
      "max": 800,
      "step": 50,
      "default": 500,
      "unit": "px",
      "label": "Card Height (Desktop)"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Sub-Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "Belts"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gucci Sub-Category Grid",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ]
}
{% endschema %}

<div class="gucci-grid-wrapper">
  {% if section.settings.heading != blank %}
    <h2 class="gucci-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="gucci-grid-container">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="gucci-card">
        <div class="gucci-image-wrapper">
          {% if block.settings.image != blank %}
            <img 
              src="{{ block.settings.image | image_url: width: 1200 }}" 
              alt="{{ block.settings.title }}"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
              loading="lazy"
            >
          {% else %}
            {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
          <div class="gucci-overlay"></div>
        </div>
        
        <div class="gucci-content">
          <div class="gucci-label">
            <span class="gucci-text">{{ block.settings.title }}</span>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

<style>
  /* --- CONTAINER STYLES --- */
  .gucci-grid-wrapper {
    padding: 40px 20px;
    background-color: #fff; /* Or #fcfcfc for subtle off-white */
  }

  .gucci-heading {
    text-align: center;
    font-family: var(--font-heading-family); /* Uses your theme's font */
    font-size: 2.2rem;
    margin-bottom: 40px;
    letter-spacing: 0.05em;
    font-weight: 400;
    color: #1a1a1a;
  }

  /* --- GRID LAYOUT --- */
  .gucci-grid-container {
    display: grid;
    grid-template-columns: 1fr; /* Mobile default */
    gap: 2px; /* Very tight gap like luxury sites */
    max-width: 1400px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .gucci-grid-container {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .gucci-grid-container {
      /* Dynamic columns based on settings */
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    }
  }

  /* --- CARD STYLES --- */
  .gucci-card {
    position: relative;
    display: block;
    overflow: hidden;
    height: 400px; /* Mobile height */
    text-decoration: none;
  }

  @media (min-width: 1024px) {
    .gucci-card {
      height: {{ section.settings.height_desktop }}px;
    }
  }

  /* --- IMAGE ANIMATION --- */
  .gucci-image-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .gucci-image-wrapper img,
  .gucci-image-wrapper svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s ease; /* Smooth slow zoom */
  }

  .gucci-card:hover .gucci-image-wrapper img {
    transform: scale(1.05); /* Subtle zoom on hover */
  }

  /* --- DARK OVERLAY --- */
  .gucci-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.15); /* Slight dark tint for text contrast */
    transition: background 0.3s ease;
  }
  
  .gucci-card:hover .gucci-overlay {
    background: rgba(0,0,0,0.25);
  }

  /* --- TEXT CONTENT --- */
  .gucci-content {
    position: absolute;
    inset: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 2;
  }

  .gucci-label {
    background: rgba(255, 255, 255, 0.9); /* White glass effect */
    backdrop-filter: blur(4px);
    padding: 15px 30px;
    min-width: 180px;
    text-align: center;
  }

  .gucci-text {
    color: #1a1a1a;
    font-family: sans-serif; /* Clean sans-serif like Gucci */
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-weight: 600;
  }
</style>

