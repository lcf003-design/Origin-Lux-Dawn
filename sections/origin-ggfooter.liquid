{% schema %}
{
  "name": "Origin GG Footer",
  "class": "origin-gg-footer-section",
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Title",
      "default": "SIGN UP FOR GUCCI UPDATES"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Description",
      "default": "By entering your email address below, you consent to receiving our newsletter with access to our latest collections, events and initiatives."
    },
    {
      "type": "header",
      "content": "Bottom Logo Settings"
    },
    {
      "type": "text",
      "id": "huge_logo_text",
      "label": "Huge Logo Text",
      "default": "GUCCI"
    },
    {
      "type": "checkbox",
      "id": "full_width_logo",
      "label": "Stretch Logo to Screen Edges",
      "default": true,
      "info": "Removes side padding so logo touches the edges."
    },
    {
      "type": "range",
      "id": "huge_logo_size_desktop",
      "min": 5,
      "max": 30,
      "step": 0.5,
      "unit": "vw",
      "label": "Logo Font Size (Desktop)",
      "default": 13.5,
      "info": "Adjust this until your text fits on one line."
    },
    {
      "type": "range",
      "id": "huge_logo_size_mobile",
      "min": 5,
      "max": 30,
      "step": 0.5,
      "unit": "vw",
      "label": "Logo Font Size (Mobile)",
      "default": 18
    },
    {
      "type": "range",
      "id": "huge_logo_padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Logo Padding Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "huge_logo_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Logo Padding Bottom",
      "default": 20
    },
    {
      "type": "image_picker",
      "id": "huge_logo_image",
      "label": "Huge Logo Image (Optional)",
      "info": "Overrides text if set."
    },
    {
      "type": "range",
      "id": "huge_logo_width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Image Logo Width",
      "default": 100
    },
    {
      "type": "header",
      "content": "Copyright"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Â© 2016 - 2025 Guccio Gucci S.p.A. - All rights reserved."
    }
  ],
  "blocks": [
    {
      "type": "menu_column",
      "name": "Footer Menu Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Column Heading",
          "default": "Menu Title"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Origin GG Footer",
      "blocks": [
        {
          "type": "menu_column",
          "settings": { "title": "MAY WE HELP YOU?" }
        },
        {
          "type": "menu_column",
          "settings": { "title": "THE COMPANY" }
        },
        {
          "type": "menu_column",
          "settings": { "title": "GUCCI SERVICES" }
        }
      ]
    }
  ]
}
{% endschema %}
<style>
  .origin-gg-footer {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 80px 40px 0; 
    font-family: var(--font-body-family);
    overflow: hidden;
    opacity: 1; /* Reset for JS fade-in */
  }

  /* --- ANIMATION UTILITIES --- */
  .origin-reveal-item {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s cubic-bezier(0.2, 0.8, 0.2, 1), transform 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
    will-change: opacity, transform;
  }
  
  .origin-reveal-item.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* --- GRID LAYOUT --- */
  .origin-gg-footer__top {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    max-width: 1600px;
    margin: 0 auto 80px;
    gap: 40px;
  }

  .origin-gg-footer__links-area {
    display: flex;
    flex-wrap: wrap;
    gap: 80px;
    flex: 3;
    min-width: 300px;
    align-items: flex-start;
  }

  .origin-gg-footer__column {
    min-width: 180px;
  }

  /* --- TYPOGRAPHY & LINKS --- */
  .origin-gg-footer__heading {
    font-size: 13px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    font-weight: 600;
    margin-bottom: 24px;
    display: block;
  }

  .origin-gg-footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: block; 
  }

  .origin-gg-footer__list li {
    margin-bottom: 14px;
  }

  .origin-gg-footer__list a {
    color: inherit;
    text-decoration: none;
    font-size: 14px;
    display: inline-block;
    position: relative;
    transition: opacity 0.3s ease, transform 0.3s ease;
    opacity: 0.8;
  }

  /* LUXURY HOVER: GLIDE RIGHT */
  .origin-gg-footer__list a:hover {
    opacity: 1;
    transform: translateX(6px);
  }

  /* --- MOBILE ACCORDION STYLES --- */
  .origin-gg-accordion-trigger {
    background: none;
    border: none;
    padding: 0;
    width: 100%;
    text-align: left;
    color: inherit;
    pointer-events: none; 
    cursor: default;
  }
  
  .origin-gg-accordion-icon {
    display: none; 
  }

  /* --- NEWSLETTER --- */
  .origin-gg-footer__interactions {
    flex: 1;
    min-width: 300px;
    max-width: 400px;
  }

  .origin-gg-footer__desc {
    font-size: 13px;
    line-height: 1.6;
    margin-bottom: 24px;
    opacity: 0.7;
  }

  .origin-gg-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    padding-bottom: 8px;
    margin-top: 24px;
  }

  /* Animated Border Line */
  .origin-gg-input-wrapper::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: currentColor;
    opacity: 0.3;
  }
  
  .origin-gg-input-wrapper::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0%;
    height: 1px;
    background-color: currentColor;
    opacity: 1;
    z-index: 1;
    transition: width 0.4s ease;
  }

  /* Focus State for Border */
  .origin-gg-input-wrapper:focus-within::before {
    width: 100%;
  }

  .origin-gg-input {
    width: 100%;
    background: transparent;
    border: none;
    color: {{ section.settings.text_color }};
    font-size: 15px;
    outline: none;
    padding: 0;
  }

  .origin-gg-input::placeholder {
    color: {{ section.settings.text_color }};
    opacity: 0.4;
  }

  .origin-gg-submit {
    background: transparent;
    border: none;
    color: {{ section.settings.text_color }};
    cursor: pointer;
    padding: 0 0 0 10px;
    transition: transform 0.3s ease;
  }
  
  .origin-gg-submit:hover {
    transform: translateX(3px);
  }
  
  .origin-gg-submit svg {
    width: 18px;
    height: 18px;
    display: block;
  }

  /* --- BOTTOM SECTION --- */
  .origin-gg-footer__bottom {
    border-top: 1px solid rgba(255,255,255,0.1);
    padding-top: 40px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .origin-gg-copyright {
    font-size: 11px;
    opacity: 0.5;
    margin-bottom: 40px;
    width: 100%;
    max-width: 1600px;
    margin-left: auto;
    margin-right: auto;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* --- HUGE LOGO --- */
  .origin-gg-huge-logo {
    width: 100%;
    text-align: center;
    line-height: 0.8;
    overflow: hidden;
    padding-top: {{ section.settings.huge_logo_padding_top }}px;
    padding-bottom: {{ section.settings.huge_logo_padding_bottom }}px;
  }

  .origin-gg-huge-logo.is-full-width {
    margin-left: -40px; 
    margin-right: -40px;
    width: calc(100% + 80px); 
  }

  .origin-gg-huge-logo svg,
  .origin-gg-huge-logo img {
    width: {{ section.settings.huge_logo_width }}%;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  .origin-gg-huge-logo-text {
    font-size: {{ section.settings.huge_logo_size_desktop }}vw; 
    font-family: serif;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    margin: 0;
    display: block;
    white-space: nowrap; 
    color: {{ section.settings.text_color }};
  }

  /* --- MOBILE RESPONSIVENESS --- */
  @media (max-width: 768px) {
    .origin-gg-footer { padding: 40px 20px 0; }
    .origin-gg-huge-logo-text { font-size: {{ section.settings.huge_logo_size_mobile }}vw; }

    .origin-gg-huge-logo.is-full-width {
      margin-left: -20px;
      margin-right: -20px;
      width: calc(100% + 40px);
    }

    .origin-gg-footer__top {
      flex-direction: column;
      gap: 40px;
    }
    
    .origin-gg-footer__links-area {
      flex-direction: column;
      gap: 0; 
      width: 100%;
    }

    .origin-gg-footer__column {
      max-width: 100%;
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    /* Accordion Trigger */
    .origin-gg-accordion-trigger {
      pointer-events: auto;
      cursor: pointer;
      padding: 24px 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .origin-gg-footer__heading { margin-bottom: 0; }

    .origin-gg-accordion-icon {
      display: block;
      width: 12px;
      height: 12px;
      transition: transform 0.4s ease;
    }

    /* Smooth Slide CSS Logic */
    .origin-gg-footer__list-wrapper {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.5s cubic-bezier(0.2, 1, 0.2, 1);
    }
    
    .origin-gg-footer__column.is-open .origin-gg-footer__list-wrapper {
        max-height: 500px; /* Arbitrary large number */
    }

    .origin-gg-footer__list { padding-bottom: 24px; }
    
    .origin-gg-footer__column.is-open .origin-gg-accordion-icon {
      transform: rotate(180deg);
    }

    .origin-gg-footer__interactions {
      max-width: 100%;
      margin-top: 20px;
    }
  }
</style>
<footer class="origin-gg-footer" id="origin-gg-footer-{{ section.id }}">
  
  <div class="origin-gg-footer__top">
    
    <div class="origin-gg-footer__links-area">
      {% for block in section.blocks %}
        <div class="origin-gg-footer__column origin-reveal-item" {{ block.shopify_attributes }}>
          <button type="button" class="origin-gg-accordion-trigger" aria-expanded="false">
            <span class="origin-gg-footer__heading">{{ block.settings.title }}</span>
            <svg class="origin-gg-accordion-icon" viewBox="0 0 14 8" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M1 1L7 7L13 1"/>
            </svg>
          </button>
          
          {% if block.settings.menu != blank %}
            <div class="origin-gg-footer__list-wrapper">
              <ul class="origin-gg-footer__list">
                {% for link in linklists[block.settings.menu].links %}
                  <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <div class="origin-gg-footer__interactions origin-reveal-item" style="transition-delay: 0.1s;">
      <div class="origin-gg-footer__block">
        <div class="origin-gg-footer__heading" style="margin-bottom: 24px; opacity: 1;">{{ section.settings.newsletter_title }}</div>
        {% if section.settings.newsletter_text != blank %}
          <p class="origin-gg-footer__desc">{{ section.settings.newsletter_text }}</p>
        {% endif %}
        
        {% form 'customer', class: 'origin-gg-newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="origin-gg-input-wrapper">
            <input 
              type="email" 
              name="contact[email]" 
              class="origin-gg-input" 
              value="{{ form.email }}" 
              aria-required="true" 
              autocorrect="off" 
              autocapitalize="off" 
              placeholder="Email" 
              required
            >
            <button type="submit" class="origin-gg-submit" aria-label="Subscribe">
              <svg viewBox="0 0 14 14" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 1L11 7L5 13"/></svg>
            </button>
          </div>
          {% if form.posted_successfully? %}
            <p style="margin-top: 10px; font-size: 13px; opacity: 0.7;">Thanks for subscribing.</p>
          {% endif %}
        {% endform %}
      </div>
    </div>
  </div>

  <div class="origin-gg-footer__bottom">
    <div class="origin-gg-copyright origin-reveal-item" style="transition-delay: 0.2s;">
      {{ section.settings.copyright_text }}
    </div>

    <div class="origin-gg-huge-logo origin-reveal-item {% if section.settings.full_width_logo %}is-full-width{% endif %}" style="transition-delay: 0.3s;">
      {% if section.settings.huge_logo_image %}
        <img 
          src="{{ section.settings.huge_logo_image | image_url: width: 2400 }}" 
          alt="{{ shop.name }}" 
          loading="lazy"
          width="{{ section.settings.huge_logo_image.width }}"
          height="{{ section.settings.huge_logo_image.height }}"
        >
      {% else %}
        <span class="origin-gg-huge-logo-text">{{ section.settings.huge_logo_text }}</span>
      {% endif %}
    </div>
  </div>

</footer>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    
    // --- 1. Scroll Reveal Logic (IntersectionObserver) ---
    const revealItems = document.querySelectorAll('.origin-reveal-item');
    
    const revealObserver = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target); // Trigger only once
        }
      });
    }, {
      rootMargin: '0px 0px -50px 0px', // Trigger slightly before element is fully in view
      threshold: 0.1
    });

    revealItems.forEach(item => {
      revealObserver.observe(item);
    });

    // --- 2. Mobile Accordion Logic ---
    const footer = document.getElementById('origin-gg-footer-{{ section.id }}');
    if (footer) {
      const triggers = footer.querySelectorAll('.origin-gg-accordion-trigger');

      triggers.forEach(trigger => {
        trigger.addEventListener('click', function() {
          // Breakpoint check: We check if the icon is visible (Mobile). 
          const icon = this.querySelector('.origin-gg-accordion-icon');
          if (getComputedStyle(icon).display === 'none') return;

          const parent = this.closest('.origin-gg-footer__column');
          const wasOpen = parent.classList.contains('is-open');

          // Close all others (Accordion behavior - Optional, keeps it clean)
          triggers.forEach(otherTrigger => {
            if (otherTrigger !== this) {
               otherTrigger.closest('.origin-gg-footer__column').classList.remove('is-open');
               otherTrigger.setAttribute('aria-expanded', 'false');
            }
          });

          if (!wasOpen) {
            parent.classList.add('is-open');
            this.setAttribute('aria-expanded', 'true');
          } else {
            parent.classList.remove('is-open');
            this.setAttribute('aria-expanded', 'false');
          }
        });
      });
    }
  });
</script>
