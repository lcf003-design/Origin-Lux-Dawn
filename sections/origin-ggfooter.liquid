{% schema %}
{
  "name": "Origin GG Footer",
  "class": "origin-gg-footer-section",
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Title",
      "default": "SIGN UP FOR GUCCI UPDATES"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Description",
      "default": "By entering your email address below, you consent to receiving our newsletter with access to our latest collections, events and initiatives."
    },
    {
      "type": "header",
      "content": "Bottom Logo"
    },
    {
      "type": "text",
      "id": "huge_logo_text",
      "label": "Huge Logo Text",
      "default": "GUCCI"
    },
    {
      "type": "image_picker",
      "id": "huge_logo_image",
      "label": "Huge Logo Image (Optional)",
      "info": "Overrides text if set."
    },
    {
      "type": "range",
      "id": "huge_logo_width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Logo Width",
      "default": 100
    },
    {
      "type": "header",
      "content": "Copyright"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Â© 2016 - 2025 Guccio Gucci S.p.A. - All rights reserved."
    }
  ],
  "blocks": [
    {
      "type": "menu_column",
      "name": "Footer Menu Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Column Heading",
          "default": "Menu Title"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Origin GG Footer",
      "blocks": [
        {
          "type": "menu_column",
          "settings": { "title": "MAY WE HELP YOU?" }
        },
        {
          "type": "menu_column",
          "settings": { "title": "THE COMPANY" }
        },
        {
          "type": "menu_column",
          "settings": { "title": "GUCCI SERVICES" }
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .origin-gg-footer {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 60px 40px 0;
    font-family: var(--font-body-family);
    overflow: hidden;
  }

  /* --- GRID LAYOUT --- */
  .origin-gg-footer__top {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    max-width: 1600px;
    margin: 0 auto 80px;
    gap: 40px;
  }

  /* Left Area: Holds the menu columns */
  .origin-gg-footer__links-area {
    display: flex;
    flex-wrap: wrap;
    gap: 80px; /* Space between columns on Desktop */
    flex: 3;
    min-width: 300px;
    align-items: flex-start;
  }

  .origin-gg-footer__column {
    min-width: 180px;
  }

  /* --- TYPOGRAPHY --- */
  .origin-gg-footer__heading {
    font-size: 13px;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    font-weight: 600;
    margin-bottom: 24px;
    opacity: 0.9;
    display: block;
  }

  /* Wrapper for the button (only active on mobile) */
  .origin-gg-accordion-trigger {
    background: none;
    border: none;
    padding: 0;
    width: 100%;
    text-align: left;
    color: inherit;
    /* Desktop: disable pointer events so it feels like just text */
    pointer-events: none; 
    cursor: default;
  }

  /* Desktop: Hide the chevron icon */
  .origin-gg-accordion-icon {
    display: none; 
  }

  /* Desktop: List is always visible */
  .origin-gg-footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: block; 
  }

  .origin-gg-footer__list li {
    margin-bottom: 16px;
  }

  .origin-gg-footer__list a {
    color: inherit;
    text-decoration: underline;
    text-underline-offset: 4px;
    text-decoration-thickness: 1px;
    font-size: 14px;
    transition: opacity 0.3s;
    display: inline-block;
  }

  .origin-gg-footer__list a:hover {
    opacity: 0.7;
  }

  /* --- RIGHT SIDE (NEWSLETTER) --- */
  .origin-gg-footer__interactions {
    flex: 1;
    min-width: 300px;
    max-width: 400px;
  }

  .origin-gg-footer__desc {
    font-size: 13px;
    line-height: 1.5;
    margin-bottom: 20px;
    opacity: 0.9;
  }

  .origin-gg-input-wrapper {
    position: relative;
    border-bottom: 1px solid {{ section.settings.text_color }};
    display: flex;
    align-items: center;
    padding-bottom: 8px;
    margin-top: 24px;
  }

  .origin-gg-input {
    width: 100%;
    background: transparent;
    border: none;
    color: {{ section.settings.text_color }};
    font-size: 15px;
    outline: none;
    padding: 0;
  }

  .origin-gg-input::placeholder {
    color: {{ section.settings.text_color }};
    opacity: 0.6;
  }

  .origin-gg-submit {
    background: transparent;
    border: none;
    color: {{ section.settings.text_color }};
    cursor: pointer;
    padding: 0;
  }
  
  .origin-gg-submit svg {
    width: 16px;
    height: 16px;
    display: block;
  }

  /* --- BOTTOM LOGO --- */
  .origin-gg-footer__bottom {
    border-top: 1px solid rgba(255,255,255,0.1);
    padding-top: 40px;
    padding-bottom: 40px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .origin-gg-copyright {
    font-size: 11px;
    opacity: 0.8;
    margin-bottom: 40px;
    width: 100%;
    max-width: 1600px;
    margin-left: auto;
    margin-right: auto;
  }

  .origin-gg-huge-logo {
    width: 100%;
    text-align: center;
    line-height: 0.8;
    overflow: hidden;
    padding-bottom: 20px;
  }

  .origin-gg-huge-logo svg,
  .origin-gg-huge-logo img {
    width: {{ section.settings.huge_logo_width }}%;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  .origin-gg-huge-logo-text {
    font-size: 18vw;
    font-family: serif;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    margin: 0;
    display: block;
  }

  /* --- MOBILE RESPONSIVENESS (The Magic Part) --- */
  @media (max-width: 768px) {
    .origin-gg-footer {
      padding: 40px 20px 0;
    }

    .origin-gg-footer__top {
      flex-direction: column;
      gap: 40px;
    }
    
    .origin-gg-footer__links-area {
      flex-direction: column;
      gap: 0; /* Remove horizontal gap for vertical stacking */
      width: 100%;
    }

    .origin-gg-footer__column {
      max-width: 100%;
      border-bottom: 1px solid rgba(255,255,255,0.15); /* Separator lines */
    }

    /* Enable clicking on mobile */
    .origin-gg-accordion-trigger {
      pointer-events: auto;
      cursor: pointer;
      padding: 24px 0; /* Touch target size */
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .origin-gg-footer__heading {
      margin-bottom: 0; /* Remove margin so it centers vertically */
    }

    /* Show the arrow icon on mobile */
    .origin-gg-accordion-icon {
      display: block;
      width: 12px;
      height: 12px;
      transition: transform 0.3s ease;
    }

    /* Hide list by default on mobile */
    .origin-gg-footer__list {
      display: none;
      padding-bottom: 24px;
    }
    
    /* Open State Styles */
    .origin-gg-footer__column.is-open .origin-gg-footer__list {
      display: block;
      animation: slideDown 0.3s ease;
    }

    .origin-gg-footer__column.is-open .origin-gg-accordion-icon {
      transform: rotate(180deg);
    }

    .origin-gg-footer__interactions {
      max-width: 100%;
      margin-top: 20px;
    }
  }

  @keyframes slideDown {
    from { opacity: 0; transform: translateY(-5px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

<footer class="origin-gg-footer" id="origin-gg-footer-{{ section.id }}">
  
  <div class="origin-gg-footer__top">
    
    <!-- LEFT SIDE: MENU COLUMNS -->
    <div class="origin-gg-footer__links-area">
      {% for block in section.blocks %}
        <div class="origin-gg-footer__column" {{ block.shopify_attributes }}>
          <!-- Trigger Button (Disabled on Desktop, Clickable on Mobile) -->
          <button type="button" class="origin-gg-accordion-trigger" aria-expanded="false">
            <span class="origin-gg-footer__heading">{{ block.settings.title }}</span>
            <svg class="origin-gg-accordion-icon" viewBox="0 0 14 8" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M1 1L7 7L13 1"/>
            </svg>
          </button>
          
          <!-- Menu Content -->
          {% if block.settings.menu != blank %}
            <ul class="origin-gg-footer__list">
              {% for link in linklists[block.settings.menu].links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <!-- RIGHT SIDE: NEWSLETTER ONLY -->
    <div class="origin-gg-footer__interactions">
      <div class="origin-gg-footer__block">
        <div class="origin-gg-footer__heading" style="margin-bottom: 24px; opacity: 1;">{{ section.settings.newsletter_title }}</div>
        {% if section.settings.newsletter_text != blank %}
          <p class="origin-gg-footer__desc">{{ section.settings.newsletter_text }}</p>
        {% endif %}
        
        {% form 'customer', class: 'origin-gg-newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="origin-gg-input-wrapper">
            <input 
              type="email" 
              name="contact[email]" 
              class="origin-gg-input" 
              value="{{ form.email }}" 
              aria-required="true" 
              autocorrect="off" 
              autocapitalize="off" 
              placeholder="Email" 
              required
            >
            <button type="submit" class="origin-gg-submit" aria-label="Subscribe">
              <svg viewBox="0 0 14 14" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 1L11 7L5 13"/></svg>
            </button>
          </div>
          {% if form.posted_successfully? %}
            <p style="margin-top: 10px; font-size: 13px; color: #fff; opacity: 0.7;">Thanks for subscribing.</p>
          {% endif %}
        {% endform %}
      </div>
    </div>
  </div>

  <!-- BOTTOM SECTION -->
  <div class="origin-gg-footer__bottom">
    <div class="origin-gg-copyright">
      {{ section.settings.copyright_text }}
    </div>

    <div class="origin-gg-huge-logo">
      {% if section.settings.huge_logo_image %}
        <img 
          src="{{ section.settings.huge_logo_image | image_url: width: 2400 }}" 
          alt="{{ shop.name }}" 
          loading="lazy"
          width="{{ section.settings.huge_logo_image.width }}"
          height="{{ section.settings.huge_logo_image.height }}"
        >
      {% else %}
        <span class="origin-gg-huge-logo-text">{{ section.settings.huge_logo_text }}</span>
      {% endif %}
    </div>
  </div>

</footer>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const footer = document.getElementById('origin-gg-footer-{{ section.id }}');
    if (!footer) return;

    const triggers = footer.querySelectorAll('.origin-gg-accordion-trigger');

    triggers.forEach(trigger => {
      trigger.addEventListener('click', function() {
        // Breakpoint check: We check if the icon is visible (Mobile). 
        // If hidden (Desktop), click does nothing.
        const icon = this.querySelector('.origin-gg-accordion-icon');
        if (getComputedStyle(icon).display === 'none') return;

        const parent = this.closest('.origin-gg-footer__column');
        const wasOpen = parent.classList.contains('is-open');

        // Optional: Close other accordions when one opens
        // footer.querySelectorAll('.origin-gg-footer__column').forEach(col => col.classList.remove('is-open'));

        if (!wasOpen) {
          parent.classList.add('is-open');
          this.setAttribute('aria-expanded', 'true');
        } else {
          parent.classList.remove('is-open');
          this.setAttribute('aria-expanded', 'false');
        }
      });
    });
  });
</script>


