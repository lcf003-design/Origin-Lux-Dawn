{%- style -%}
  /* --- Layout & Spacing --- */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* --- Container Safety --- */
  /* This prevents the sidebar from crushing the grid */
  .product-grid-container {
    flex: 1;
    min-width: 0; 
  }

  /* --- Search Header --- */
  .template-search__header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .template-search__search {
    margin: 2rem auto 3rem;
    max-width: 600px;
  }

  .search__input.field__input {
    border-radius: 4px; 
    border: 1px solid rgba(var(--color-foreground), 0.1);
  }
  .search__input.field__input:focus {
    box-shadow: 0 0 0 1px rgba(var(--color-foreground), 0.5);
  }

  /* --- AMAZING GRID SYSTEM (Robust) --- */
  .amazing-grid {
    display: grid;
    /* Mobile: 2 columns by default for modern look */
    grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr); 
    gap: 16px;
    list-style: none;
    padding: 0;
    margin: 0;
    width: 100%;
  }

  @media screen and (min-width: 750px) {
    .amazing-grid {
      /* Desktop: defined by settings */
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      gap: 24px;
    }
  }

  /* --- CARD COMPONENT --- */
  /* We use a custom class for the list item to avoid theme conflicts */
  .amazing-grid-item {
    position: relative;
    width: 100%; /* Force full width of the grid cell */
    display: flex;
    flex-direction: column;
  }

  .amazing-card {
    position: relative;
    background-color: rgb(var(--color-background));
    border: 1px solid rgba(var(--color-foreground), 0.08);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
  }

  .amazing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.1);
    border-color: transparent;
  }

  /* Clickable Area */
  .amazing-card__link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
    cursor: pointer;
  }

  /* --- ROBUST IMAGE RATIO --- */
  .amazing-card__media-wrapper {
    position: relative;
    width: 100%;
    display: block;
    overflow: hidden;
    background-color: #f0f0f0;
    /* Default Square aspect ratio if CSS loads late */
    aspect-ratio: 1 / 1; 
  }

  /* Force aspect ratio using padding hack for max compatibility */
  .ratio-square .amazing-card__media-wrapper { padding-top: 100%; aspect-ratio: auto; }
  .ratio-portrait .amazing-card__media-wrapper { padding-top: 125%; aspect-ratio: auto; }
  .ratio-landscape .amazing-card__media-wrapper { padding-top: 66.66%; aspect-ratio: auto; }

  .amazing-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.4s ease;
  }

  /* Hover Effects */
  .amazing-card:hover .primary-image {
    transform: scale(1.08);
  }

  .secondary-image {
    opacity: 0;
    z-index: 2;
  }

  .amazing-card:hover .secondary-image {
    opacity: 1;
    transform: scale(1.08);
  }

  /* Badges */
  .amazing-card__badge {
    position: absolute;
    top: 10px;
    left: 10px;
    z-index: 4;
    padding: 5px 10px;
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-radius: 4px;
    color: #fff;
    pointer-events: none;
    line-height: 1;
  }
  .badge-sale { background-color: #D32F2F; }
  .badge-soldout { background-color: #333; }

  /* Content */
  .amazing-card__content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    text-align: {{ section.settings.text_alignment }};
    background: #fff;
    z-index: 2; /* Ensure text sits above background */
  }

  .amazing-card__vendor {
    font-size: 1rem;
    color: rgba(var(--color-foreground), 0.6);
    margin-bottom: 6px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .amazing-card__title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 10px 0;
    color: rgb(var(--color-foreground));
    line-height: 1.3;
    word-break: break-word; /* Prevents text overflow */
  }

  .amazing-card__price {
    margin-top: auto;
    font-size: 1.4rem;
    display: flex;
    gap: 8px;
    align-items: center;
    flex-wrap: wrap;
    {% if section.settings.text_alignment == 'center' %}
      justify-content: center;
    {% endif %}
  }
  
  .price--on-sale { color: #D32F2F; font-weight: 700; }
  .price--regular { color: rgba(var(--color-foreground), 0.9); }
  .price--compare { text-decoration: line-through; color: rgba(var(--color-foreground), 0.5); font-size: 1.2rem; }

{%- endstyle -%}

{%- liquid
  assign sort_by = search.sort_by | default: search.default_sort_by
  assign terms = search.terms | escape
  assign search_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
  
  assign ratio_class = 'ratio-square'
  if section.settings.image_ratio == 'portrait'
    assign ratio_class = 'ratio-portrait'
  elsif section.settings.image_ratio == 'landscape'
    assign ratio_class = 'ratio-landscape'
  endif
-%}

{% paginate search.results by 24 %}
  <div class="template-search{% unless search.performed and search.results_count > 0 %} template-search--empty{% endunless %} section-{{ section.id }}-padding">
    
    <!-- HEADER -->
    <div class="template-search__header page-width">
      <h1 class="h2 center">
        {%- if search.performed -%}
          {{- 'templates.search.title' | t -}}
        {%- else -%}
          {{- 'general.search.search' | t -}}
        {%- endif -%}
      </h1>
      
      <div class="template-search__search">
        {%- if settings.predictive_search_enabled -%}
          <predictive-search data-loading-text="{{ 'accessibility.loading' | t }}">
        {%- endif -%}
        <main-search>
          <form action="{{ routes.search_url }}" method="get" role="search" class="search">
            <div class="field">
              <input
                class="search__input field__input"
                id="Search-In-Template"
                type="search"
                name="q"
                value="{{ search.terms | escape }}"
                placeholder="{{ 'general.search.search' | t }}"
              >
              <label class="field__label" for="Search-In-Template">{{ 'general.search.search' | t }}</label>
              <input name="options[prefix]" type="hidden" value="last">
              <button type="submit" class="search__button field__button" aria-label="{{ 'general.search.search' | t }}">
                <span class="svg-wrapper">
                  {{- 'icon-search.svg' | inline_asset_content -}}
                </span>
              </button>
            </div>
          </form>
        </main-search>
        {%- if settings.predictive_search_enabled -%}
          </predictive-search>
        {%- endif -%}
      </div>

      {%- if search.performed -%}
        {%- unless section.settings.enable_filtering or section.settings.enable_sorting -%}
          {%- if search.results_count > 0 -%}
            <p role="status">{{ 'templates.search.results_with_count_and_term' | t: terms: search.terms, count: search.results_count }}</p>
          {%- endif -%}
        {%- endunless -%}
        {%- if search.results_count == 0 and search.filters == empty -%}
          <p role="status">{{ 'templates.search.no_results' | t: terms: search.terms }}</p>
        {%- endif -%}
      {%- endif -%}
    </div>

    {%- if search.performed -%}
      
      <div {% if section.settings.filter_type == 'vertical' %} class="facets-vertical page-width" {% endif %}>
        {%- if search.filters != empty -%}
          {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
            <aside aria-labelledby="verticalTitle" class="facets-wrapper{% unless section.settings.enable_filtering %} facets-wrapper--no-filters{% endunless %}{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}" id="main-search-filters" data-id="{{ section.id }}">
              {% render 'facets', results: search, enable_filtering: section.settings.enable_filtering, enable_sorting: section.settings.enable_sorting, filter_type: section.settings.filter_type, paginate: paginate %}
            </aside>
          {%- endif -%}
        {%- endif -%}

        <!-- PRODUCT GRID CONTAINER -->
        <div class="product-grid-container" id="ProductGridContainer">
          {%- if search.results.size == 0 and search.filters != empty -%}
            <div class="template-search__results collection collection--empty" id="product-grid" data-id="{{ section.id }}">
              <div class="title-wrapper center">
                <h2 class="title title--primary">
                  {{ 'sections.collection_template.empty' | t -}}<br>
                  {{ 'sections.collection_template.use_fewer_filters_html' | t: link: search_url, class: 'underlined-link link' }}
                </h2>
              </div>
            </div>
          {%- else -%}
            
            <div class="template-search__results collection{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}" id="product-grid" data-id="{{ section.id }}">
              <div class="loading-overlay gradient"></div>
              
              <ul class="amazing-grid" role="list">
                {%- for item in search.results -%}
                  <!-- Removed 'grid__item' class to prevent theme conflict -->
                  <li class="amazing-grid-item scroll-trigger animate--slide-in {{ ratio_class }}">
                    
                    {%- case item.object_type -%}
                      {%- when 'product' -%}
                        <div class="amazing-card">
                          <a href="{{ item.url }}" class="amazing-card__link"><span class="visually-hidden">{{ item.title }}</span></a>
                          
                          <!-- Image Wrapper -->
                          <div class="amazing-card__media-wrapper">
                            {%- if item.available == false -%}
                              <span class="amazing-card__badge badge-soldout">{{ 'products.product.sold_out' | t }}</span>
                            {%- elsif item.compare_at_price > item.price and item.available -%}
                              <span class="amazing-card__badge badge-sale">{{ 'products.product.on_sale' | t }}</span>
                            {%- endif -%}

                            {%- if item.featured_media -%}
                              <img
                                src="{{ item.featured_media | image_url: width: 600 }}"
                                alt="{{ item.featured_media.alt | escape }}"
                                loading="lazy"
                                width="600"
                                height="{{ 600 | divided_by: item.featured_media.aspect_ratio | ceil }}"
                                class="amazing-card__image primary-image"
                              >
                              {%- if item.media[1] != nil and section.settings.show_secondary_image -%}
                                <img
                                  src="{{ item.media[1] | image_url: width: 600 }}"
                                  alt="{{ item.media[1].alt | escape }}"
                                  loading="lazy"
                                  width="600"
                                  height="{{ 600 | divided_by: item.media[1].aspect_ratio | ceil }}"
                                  class="amazing-card__image secondary-image"
                                >
                              {%- endif -%}
                            {%- else -%}
                              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg amazing-card__image' }}
                            {%- endif -%}
                          </div>

                          <!-- Card Details -->
                          <div class="amazing-card__content">
                            {%- if section.settings.show_vendor -%}
                              <div class="amazing-card__vendor">{{ item.vendor }}</div>
                            {%- endif -%}
                            
                            <h3 class="amazing-card__title">{{ item.title | escape }}</h3>

                            <div class="amazing-card__price">
                              {%- if item.compare_at_price > item.price -%}
                                <span class="price--on-sale">{{ item.price | money }}</span>
                                <span class="price--compare">{{ item.compare_at_price | money }}</span>
                              {%- else -%}
                                <span class="price--regular">{{ item.price | money }}</span>
                              {%- endif -%}
                            </div>
                          </div>
                        </div>

                      {%- when 'article' -%}
                         <div class="amazing-card">
                          <a href="{{ item.url }}" class="amazing-card__link"></a>
                          <div class="amazing-card__media-wrapper">
                            {% if item.image %}
                               <img src="{{ item.image | image_url: width: 600 }}" class="amazing-card__image primary-image" loading="lazy" alt="{{ item.image.alt }}" width="600" height="{{ 600 | divided_by: item.image.aspect_ratio | ceil }}">
                            {% else %}
                               {{ 'image' | placeholder_svg_tag: 'placeholder-svg amazing-card__image' }}
                            {% endif %}
                          </div>
                          <div class="amazing-card__content">
                            <div class="amazing-card__vendor">Article</div>
                            <h3 class="amazing-card__title">{{ item.title | truncate: 30 }}</h3>
                            {% if section.settings.article_show_date %}
                              <p style="font-size:0.9em; opacity:0.7;">{{ item.published_at | time_tag: format: 'date' }}</p>
                            {% endif %}
                          </div>
                        </div>

                      {%- when 'page' -%}
                        <div class="amazing-card">
                          <a href="{{ item.url }}" class="amazing-card__link"></a>
                          <div class="amazing-card__content" style="justify-content:center; align-items:center; height:100%; min-height:200px; background:#fafafa;">
                            <div class="amazing-card__vendor">Page</div>
                            <h3 class="amazing-card__title">{{ item.title | truncate: 30 }}</h3>
                          </div>
                        </div>

                    {%- endcase -%}
                  </li>
                {%- endfor -%}
              </ul>

              {%- if paginate.pages > 1 -%}
                {% render 'pagination', paginate: paginate %}
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}
  </div>
{% endpaginate %}

{% schema %}
{
  "name": "t:sections.main-search.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Desktop Columns"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "default": "2",
      "label": "Mobile Columns",
      "options": [
        { "value": "1", "label": "1 Column" },
        { "value": "2", "label": "2 Columns" }
      ]
    },    
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        { "value": "square", "label": "Square (1:1)" },
        { "value": "portrait", "label": "Portrait (4:5)" },
        { "value": "landscape", "label": "Landscape (3:2)" }
      ],
      "default": "square",
      "label": "Image Ratio (Fixed)"
    },
    {
        "type": "select",
        "id": "text_alignment",
        "label": "Text Alignment",
        "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" }
        ],
        "default": "left"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": true,
      "label": "Show secondary image on hover"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show Vendor"
    },
    {
      "type": "header",
      "content": "Filtering & Sorting"
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "default": true,
      "label": "Enable Filtering"
    },
    {
      "type": "select",
      "id": "filter_type",
      "options": [
        { "value": "horizontal", "label": "Horizontal" },
        { "value": "vertical", "label": "Vertical" },
        { "value": "drawer", "label": "Drawer" }
      ],
      "default": "horizontal",
      "label": "Filter Type"
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "default": true,
      "label": "Enable Sorting"
    },
    {
      "type": "checkbox",
      "id": "article_show_date",
      "default": true,
      "label": "Show date for articles"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ]
}
{% endschema %}


