{%- comment -%}
  Origin – Timeline Row
{%- endcomment -%}

<section class="origin-timeline">
  <div class="page-width">
    <div class="origin-timeline__grid">
      {%- for block in section.blocks -%}
        <div class="origin-timeline__item" {{ block.shopify_attributes }}>
          <div class="origin-timeline__dot" aria-hidden="true"></div>
          {% if block.settings.eyebrow != blank %}
            <p class="origin-timeline__eyebrow origin-eyebrow">{{ block.settings.eyebrow }}</p>
          {% endif %}
          {% if block.settings.heading != blank %}
            <h3 class="origin-timeline__heading origin-heading-md">{{ block.settings.heading }}</h3>
          {% endif %}
          {% if block.settings.body != blank %}
            <div class="origin-timeline__body origin-body">{{ block.settings.body }}</div>
          {% endif %}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Origin – Timeline",
  "blocks": [
    {
      "type": "milestone",
      "name": "Milestone",
      "settings": [
        { "type": "text", "id": "eyebrow", "label": "Label", "default": "2010" },
        { "type": "text", "id": "heading", "label": "Heading", "default": "Maison founded" },
        { "type": "textarea", "id": "body", "label": "Body", "default": "A landmark moment in the house story." }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Origin – Timeline",
      "blocks": [
        { "type": "milestone" },
        { "type": "milestone" },
        { "type": "milestone" }
      ]
    }
  ]
}
{% endschema %}
