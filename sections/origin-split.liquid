{% schema %}
{
  "name": "Origin Split V3 (Padding)",
  "settings": [
    {
      "type": "header",
      "content": "LAYOUT"
    },
    {
      "type": "range",
      "id": "gap",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Gap Between Images",
      "default": 10
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 400,
      "max": 900,
      "step": 50,
      "unit": "px",
      "label": "Desktop Height",
      "default": 650
    },
    {
      "type": "header",
      "content": "SPACING"
    },
    {
      "type": "range",
      "id": "side_padding",
      "min": 0,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Side Padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom Spacing",
      "default": 60,
      "info": "Space between this section and the footer."
    },
    {
      "type": "header",
      "content": "CONTENT"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Gifts for Her"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Origin Split V3 (Padding)",
      "blocks": [
        { "type": "banner" },
        { "type": "banner" }
      ]
    }
  ]
}
{% endschema %}

<div
  class="origin-split-wrapper"
  style="--origin-split-gap: {{ section.settings.gap }}px; --origin-split-height: {{ section.settings.height_desktop }}px; --origin-split-side-padding: {{ section.settings.side_padding }}px; --origin-split-padding-bottom: {{ section.settings.padding_bottom }}px; --origin-split-text-color: {{ section.settings.text_color }};"
>
  <div class="origin-split-container">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="split-item">
        <div class="split-image-wrapper">
          {% if block.settings.image %}
            {{ block.settings.image | image_url: width: 1400 | image_tag: class: 'split-img', loading: 'lazy' }}
          {% else %}
            {{ 'collection-1' | placeholder_svg_tag: 'split-img placeholder' }}
          {% endif %}
        </div>
        
        <div class="split-content">
          <h3 class="split-heading">{{ block.settings.heading }}</h3>
          <span class="split-btn">{{ block.settings.button_label }}</span>
        </div>
      </a>
    {% endfor %}
  </div>
</div>
