{% schema %}
{
  "name": "Origin Split V3 (Padding)",
  "settings": [
    {
      "type": "header",
      "content": "LAYOUT"
    },
    {
      "type": "range",
      "id": "gap",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Gap Between Images",
      "default": 10
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 400,
      "max": 900,
      "step": 50,
      "unit": "px",
      "label": "Desktop Height",
      "default": 650
    },
    {
      "type": "header",
      "content": "SPACING"
    },
    {
      "type": "range",
      "id": "side_padding",
      "min": 0,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Side Padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom Spacing",
      "default": 60,
      "info": "Space between this section and the footer."
    },
    {
      "type": "header",
      "content": "CONTENT"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Gifts for Her"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Origin Split V3 (Padding)",
      "blocks": [
        { "type": "banner" },
        { "type": "banner" }
      ]
    }
  ]
}
{% endschema %}

<div class="origin-split-wrapper">
  <div class="origin-split-container">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="split-item">
        <div class="split-image-wrapper">
          {% if block.settings.image %}
            {{ block.settings.image | image_url: width: 1400 | image_tag: class: 'split-img', loading: 'lazy' }}
          {% else %}
            {{ 'collection-1' | placeholder_svg_tag: 'split-img placeholder' }}
          {% endif %}
        </div>
        
        <div class="split-content">
          <h3 class="split-heading">{{ block.settings.heading }}</h3>
          <span class="split-btn">{{ block.settings.button_label }}</span>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

<style>
  .origin-split-wrapper {
    background: #fff;
    width: 100%;
    /* Dynamic Spacing Control */
    padding-left: {{ section.settings.side_padding }}px;
    padding-right: {{ section.settings.side_padding }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px; 
  }

  .origin-split-container {
    display: flex;
    width: 100%;
    height: {{ section.settings.height_desktop }}px;
    gap: {{ section.settings.gap }}px;
  }

  .split-item {
    flex: 1;
    position: relative;
    height: 100%;
    overflow: hidden;
    text-decoration: none;
  }

  .split-image-wrapper {
    width: 100%;
    height: 100%;
  }

  .split-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s ease;
  }

  .split-item:hover .split-img {
    transform: scale(1.03);
  }

  .split-content {
    position: absolute;
    bottom: 3rem;
    left: 0;
    width: 100%;
    text-align: center;
    z-index: 2;
    color: {{ section.settings.text_color }};
    text-shadow: 0 2px 10px rgba(0,0,0,0.2);
  }

  .split-heading {
    font-size: 2rem;
    margin-bottom: 1rem;
    font-weight: 400;
    font-family: var(--font-heading-family);
  }

  .split-btn {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-bottom: 1px solid {{ section.settings.text_color }};
    padding-bottom: 4px;
  }

  .placeholder { background: #ccc; }

  @media screen and (max-width: 768px) {
    .origin-split-container {
      height: auto;
      flex-direction: column;
    }
    .split-item {
      width: 100%;
      height: 500px;
    }
  }
</style>