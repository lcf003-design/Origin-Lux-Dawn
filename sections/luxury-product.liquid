        <div class="lux-accordion-item">
          <button class="lux-accordion-header" onclick="toggleAccordion(this)">
            Materials & Care <span class="icon-plus"></span>
          </button>
          <div class="lux-accordion-content">
            <p>Protect from direct light, heat and rain. Should it become wet, dry it immediately with a soft cloth.</p>
          </div>
        </div>

        <!-- Item 3 -->
        <div class="lux-accordion-item">
          <button class="lux-accordion-header" onclick="toggleAccordion(this)">
            Shipping & Returns <span class="icon-plus"></span>
          </button>
          <div class="lux-accordion-content">
            <p>Complimentary express delivery. Returns accepted within 30 days.</p>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<!-- =========================================
     PIECE 3: THE JAVASCRIPT (INTERACTIVITY)
     ========================================= -->
<script>
  // Gallery Image Switcher
  function changeImage(thumbnail, newSrc) {
    // Change the main image
    document.getElementById('mainImage').src = newSrc;
    
    // Update active class on thumbnails
    const thumbs = document.querySelectorAll('.lux-thumb');
    thumbs.forEach(t => t.classList.remove('active'));
    thumbnail.classList.add('active');
  }

  // Accordion Toggle
  function toggleAccordion(button) {
    const content = button.nextElementSibling;
    const icon = button.querySelector('span');
    
    // Close all other accordions (Optional - strict luxury style usually closes others)
    const allContents = document.querySelectorAll('.lux-accordion-content');
    const allIcons = document.querySelectorAll('.lux-accordion-header span');
    
    // If it's already open, close it
    if (content.style.maxHeight) {
      content.style.maxHeight = null;
      icon.className = 'icon-plus';
    } else {
      // Close others first
      allContents.forEach(c => c.style.maxHeight = null);
      allIcons.forEach(i => i.className = 'icon-plus');
      
      // Open clicked
      content.style.maxHeight = content.scrollHeight + "px";
      icon.className = 'icon-minus';
    }
  }
</script>

