{% style %}
  /* =========================================
     PIECE 1: THE CSS (STYLES)
     ========================================= */
  
  /* Reset & Base Fonts */
  .lux-container {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    color: #1a1a1a;
    line-height: 1.6;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    box-sizing: border-box;
  }

  .lux-container * {
    box-sizing: border-box;
  }

  /* Typography */
  .lux-title {
    font-family: 'Times New Roman', serif;
    font-size: 2.5rem;
    font-weight: 400;
    margin: 10px 0;
    letter-spacing: 0.5px;
  }

  .lux-price {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 20px;
  }

  .lux-subtitle {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #666;
    margin-bottom: 8px;
    display: block;
  }

  /* Layout Grid */
  .lux-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    padding-top: 40px;
  }

  @media (min-width: 992px) {
    .lux-grid {
      grid-template-columns: 1.2fr 0.8fr; /* 60/40 Split */
      gap: 60px;
    }
  }

  /* Gallery Section */
  .lux-gallery {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .lux-main-image {
    width: 100%;
    aspect-ratio: 4/5;
    background-color: #f9f9f9;
    overflow: hidden;
    position: relative;
  }

  .lux-main-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .lux-thumbnails {
    display: flex;
    gap: 10px;
    justify-content: center;
  }

  .lux-thumb {
    width: 60px;
    height: 60px;
    border: 1px solid #ddd;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.3s;
  }

  .lux-thumb:hover, .lux-thumb.active {
    opacity: 1;
    border-color: #000;
  }

  .lux-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Product Details Section */
  .lux-details {
    position: relative;
  }

  @media (min-width: 992px) {
    .lux-details {
      position: sticky;
      top: 40px;
      height: fit-content;
    }
  }

  /* Swatches */
  .lux-swatches {
    display: flex;
    gap: 10px;
    margin-bottom: 30px;
  }

  .lux-swatch {
    width: 40px;
    height: 40px;
    border-radius: 0;
    border: 1px solid #e0e0e0;
    cursor: pointer;
    outline: 2px solid transparent;
    outline-offset: 2px;
  }
  
  .lux-swatch:hover {
    outline-color: #ccc;
  }

  .lux-swatch.selected {
    outline-color: #000;
  }

  /* Add to Cart Button */
  .lux-atc-btn {
    width: 100%;
    background-color: #000;
    color: #fff;
    border: none;
    padding: 18px;
    font-size: 0.85rem;
    font-weight: 700;
    letter-spacing: 2px;
    text-transform: uppercase;
    cursor: pointer;
    transition: background 0.3s;
    margin-top: 20px;
    margin-bottom: 30px;
  }

  .lux-atc-btn:hover {
    background-color: #333;
  }

  /* Accordions */
  .lux-accordion {
    border-top: 1px solid #e5e5e5;
  }

  .lux-accordion-item {
    border-bottom: 1px solid #e5e5e5;
  }

  .lux-accordion-header {
    padding: 20px 0;
    width: 100%;
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .lux-accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
    font-size: 0.9rem;
    color: #555;
  }

  .lux-accordion-content p {
    margin-bottom: 20px;
    margin-top: 0;
  }

  .icon-plus::after { content: '+'; font-size: 1.2rem; }
  .icon-minus::after { content: '-'; font-size: 1.2rem; }
{% endstyle %}

